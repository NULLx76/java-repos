<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
        <groupId>com.talkingdata</groupId>
        <artifactId>centralized-configuration</artifactId>
        <version>0.0.1</version>
  </parent>
  <groupId>com.talkingdata.datamarket</groupId>
  <artifactId>report</artifactId>
  <packaging>war</packaging>
  <version>0.0.28-SNAPSHOT</version>
  <name>report Maven Webapp</name>
  <url>http://maven.apache.org</url>
   <properties>
     <git_project>talkingdata-datamarket-report</git_project>
      <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
      <com.sun.jersey.version>1.18.1</com.sun.jersey.version>
      <log4j.version>1.2.14</log4j.version>
      <redis.clients.version>2.7.2</redis.clients.version>
      <version.jackson>2.4.4</version.jackson>
      <java_source_version>1.8</java_source_version>
      <java_target_version>1.8</java_target_version>
      <maven.javadoc.skip>true</maven.javadoc.skip>
    </properties>
  <scm>
    <connection>scm:git:ssh://git@${git_ip}/git/${git_project}.git</connection>
    <developerConnection>scm:git:ssh://git@${git_ip}/git/${git_project}.git</developerConnection>
    <tag>HEAD</tag>
  </scm>

  <dependencies>
    <!-- Jersey -->
    <dependency>
      <groupId>com.sun.jersey</groupId>
      <artifactId>jersey-core</artifactId>
      <version>${com.sun.jersey.version}</version>
    </dependency>
    <dependency>
      <groupId>com.sun.jersey</groupId>
      <artifactId>jersey-server</artifactId>
      <version>${com.sun.jersey.version}</version>
    </dependency>
    <dependency>
      <groupId>com.sun.jersey</groupId>
      <artifactId>jersey-client</artifactId>
      <version>${com.sun.jersey.version}</version>
    </dependency>

    <dependency>
      <groupId>com.sun.jersey</groupId>
      <artifactId>jersey-servlet</artifactId>
      <version>${com.sun.jersey.version}</version>
    </dependency>
    <dependency>
      <groupId>com.sun.jersey</groupId>
      <artifactId>jersey-json</artifactId>
      <version>${com.sun.jersey.version}</version>
    </dependency>
    <!-- Jersey -->
    <!-- log4j and slf4j -->
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
      <version>1.6.3</version>
      <exclusions>
        <exclusion>
          <artifactId>log4j</artifactId>
          <groupId>log4j</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.16</version>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>1.6.3</version>
    </dependency>
    <!-- log4j and slf4j -->
    <!--elasticserach -->
    <dependency>
      <groupId>org.elasticsearch</groupId>
      <artifactId>elasticsearch</artifactId>
      <version>2.3.3</version>
    </dependency>
    <dependency>
      <groupId>org.elasticsearch.plugin</groupId>
      <artifactId>delete-by-query</artifactId>
      <version>2.3.3</version>
    </dependency>

    <!--elasticserach -->
    <!--servlet  注意这里面scope的范围一定要是provided-->
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>javax.servlet-api</artifactId>
      <version>3.0.1</version>
      <scope>provided</scope>
    </dependency>
    <!--servlet-->
  <!--junit-->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.7</version>
    </dependency>
    <!--junit-->
    <!--标签-->
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>jstl</artifactId>
      <version>1.2</version>
    </dependency>
    <!--标签-->

  </dependencies>
  <build>
    <finalName>report</finalName>
    <plugins>
      <plugin>
        <groupId>org.apache.tomcat.maven</groupId>
        <artifactId>tomcat7-maven-plugin</artifactId>
        <version>2.1</version>
        <configuration>
          <port>8080</port>
          <path>/</path>
          <uriEncoding>UTF-8</uriEncoding>
          <server>tomcat7</server>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.12</version>
        <dependencies>
          <dependency>
            <groupId>org.apache.maven.surefire</groupId>
            <artifactId>surefire-junit47</artifactId>
            <version>2.12</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
</project>

