	<build>
		<!-- 下面是打包后的war包文件名称(也称为打包后项目名称)，部署后在tomcat中访问路径如为localhost:8080/library -->
		<finalName>HoBuy</finalName>
		<plugins>
			<plugin>
				<groupId>org.codehaus.cargo</groupId>
				<artifactId>cargo-maven2-plugin</artifactId>
				<version>1.4.8</version>
				<configuration>
					<container>
						<containerId>tomcat7x</containerId>
						<!-- 如下是tomcat的路径，部署时会直接部署到改路径下，建议使用601仓库中的tomcat， tomcat配置步骤 1.windows 
							-》prference-》myeclipse-》server-》tomcat-》tomcat7.x-》配置home路径，勾选Enable选项 -》ok -->
						<home>C:\MyEclipse\plugin\apache-tomcat-7.0.67-windows-x64\apache-tomcat-7.0.67</home>
					</container>
					<configuration>
						<type>existing</type>
						<home>C:\MyEclipse\plugin\apache-tomcat-7.0.67-windows-x64\apache-tomcat-7.0.67</home>
					</configuration>
				</configuration>
				<executions>
					<execution>
						<id>cargo-run</id>
						<phase>install</phase>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
