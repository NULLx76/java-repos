    </repositories>

    <!--编译配置-->
    <build>
        <!--jar包名称-->
        <finalName>dubbo-service</finalName>

        <resources>
            <resource>
                <targetPath>${project.build.directory}/classes</targetPath><!--构建目录-->
                <directory>src/main/resources</directory><!--编译输出路径-->
                <includes>
                    <include>**/*</include>
                </includes>
                <filtering>true</filtering><!--开启变量过滤（替换）功能-->
            </resource>
            <!--结合com.alibaba.dubbo.container.Main-->
            <resource>
                <targetPath>${project.build.directory}/classes/META-INF/spring</targetPath>
                <directory>src/main/resources</directory>
                <includes>
                    <include>applicationContext.xml</include>
                </includes>
                <filtering>true</filtering>
            </resource>

        </resources>

