    <!-- 私有远程仓库（已包括代理中央仓库，私有快照、发行版仓库，第三方仓库） -->
    <repositories>
        <repository>
            <id>nexus</id>
            <name>内部私服</name>
            <url>${repository.url}</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
            </releases>
        </repository>

