<?xml version="1.0" encoding="UTF-8"?>
<project>
	<name>reference artifacts parent pom</name>
	<description>Contains most common dependencies for all java projects</description>
	<modelVersion>4.0.0</modelVersion>

	<groupId>reference-artifacts-repository</groupId>
	<artifactId>reference-artifacts-repository</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<dependencies>
		<!-- TestNG Support -->
		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
			<version>6.8.21</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

    <build>
        <plugins>
            <!--Maven compiler plugin Java version settings-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

  <!-- Sub Modules -->
    <modules>
        <module>javase</module>
        <module>javaee</module>
    </modules>

</project>
