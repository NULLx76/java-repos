<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>co.whitejack</groupId>
	<artifactId>WhiteJackClient</artifactId>
	<version>0.1.0-SNAPSHOT</version>
	<name>WhiteJackClient</name>
	<description>Client side implementation of WhiteJackAPI</description>
	<build>
		<defaultGoal>clean install</defaultGoal>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.1</version>
				<configuration>
					<archive>
						<manifestEntries>
							<Main-Class>co.whitejack.app.WhiteJack</Main-Class>
							<Implementation-Title>WhiteJackAPI</Implementation-Title>
							<Implementation-Version>${describe}</Implementation-Version>
							<Implementation-Vendor>WhiteJack Team</Implementation-Vendor>
							<Specification-Title>WhiteJack</Specification-Title>
							<Specification-Version>${api.version}</Specification-Version>
							<Specification-Vendor>WhiteJack Team</Specification-Vendor>
							<Sealed>true</Sealed>
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
							<addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>1.4</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<relocations>
								<relocation>
									<pattern>co.whitejack.games</pattern>
									<shadedPattern>co.whitejack.games</shadedPattern>
								</relocation>
								<relocation>
									<pattern>co.whitejack.api</pattern>
									<shadedPattern>co.whitejack.api</shadedPattern>
								</relocation>
							</relocations>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.17</version>
		</dependency>
		<dependency>
			<groupId>co.whitejack</groupId>
			<artifactId>WhiteJackAPI</artifactId>
			<version>0.1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>co.whitejack</groupId>
			<artifactId>WhiteJackServer</artifactId>
			<version>0.1.0-SNAPSHOT</version>
		</dependency>
	</dependencies>
</project>