			<groupId>org.bukkit</groupId>
			<artifactId>bukkit</artifactId>
			<version>1.9-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.dropbox.core</groupId>
			<artifactId>dropbox-core-sdk</artifactId>
			<version>2.0-beta-4</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.massivecraft.massivecore</groupId>
			<artifactId>MassiveCore</artifactId>
			<version>2.8.4</version>
			<scope>system</scope>
			<systemPath>C:\Users\Akoot\Dev\Java\Minecraft\lib\MassiveCore.jar</systemPath>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>com.massivecraft.factions</groupId>
			<artifactId>Factions</artifactId>
			<version>2.8.4</version>
			<scope>system</scope>
			<systemPath>C:\Users\Akoot\Dev\Java\Minecraft\lib\Factions.jar</systemPath>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>com.earth2me.essentials</groupId>
			<artifactId>Essentials</artifactId>
			<version>2.0.1</version>
			<scope>system</scope>
			<systemPath>C:\Users\Akoot\Dev\Java\Minecraft\lib\EssentialsX-2.0.1.jar</systemPath>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>skinsrestorer.bukkit</groupId>
			<artifactId>SkinsRestorer</artifactId>
			<scope>system</scope>
			<version>10.5.1</version>
			<systemPath>C:\Users\Akoot\Dev\Java\Minecraft\lib\SkinsRestorer-v10.5.1.jar</systemPath>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>net.milkbowl.vault</groupId>
