    <modelVersion>4.0.0</modelVersion>
    <groupId>com.atux</groupId>
    <artifactId>atux</artifactId>
    <version>1.0</version>
    <name>Atux</name>
    <packaging>pom</packaging>
    <description>Descripci√≥n</description>


    <modules>
        <module>atux-domain</module>
