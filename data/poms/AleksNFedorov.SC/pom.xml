    <groupId>com.scejtesting</groupId>
    <artifactId>scej</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>
    <modules>
        <module>core</module>
        <module>coretests</module>
        <module>selenium</module>
        <module>chrome</module>
        <module>test</module>
