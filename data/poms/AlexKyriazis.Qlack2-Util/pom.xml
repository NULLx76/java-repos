	<!-- QLACK2 version used ONLY -->
	<properties>
		<qlack2.fuse.version>2.0.0-SNAPSHOT</qlack2.fuse.version>
		<qlack2.common.version>1.0.0-SNAPSHOT</qlack2.common.version>
