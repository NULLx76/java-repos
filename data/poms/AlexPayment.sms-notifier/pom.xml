<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>com.maral</groupId>
    <artifactId>sms-notifier</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>Jenkins SMS plugin</name>
    <description>A build status notifier that sends SMS when status is not successful</description>
    <packaging>hpi</packaging>

    <parent>
        <groupId>org.jenkins-ci.plugins</groupId>
        <artifactId>plugin</artifactId>
        <version>1.537</version>
    </parent>

    <licenses>
        <license>
            <name>MIT license</name>
            <comments>All source code is under the MIT license.</comments>
        </license>
    </licenses>

    <developers>
        <developer>
            <id>AlexPayment</id>
            <name>Alexandre Payment</name>
            <url>https://github.com/AlexPayment</url>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:git://github.com/AlexPayment/sms-notifier.git</connection>
        <developerConnection>scm:git:git@github.com:AlexPayment/sms-notifier.git</developerConnection>
        <url>http://github.com/AlexPayment/sms-notifier</url>
    </scm>

    <repositories>
        <repository>
            <id>repo.jenkins-ci.org</id>
            <url>http://repo.jenkins-ci.org/public/</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>repo.jenkins-ci.org</id>
            <url>http://repo.jenkins-ci.org/public/</url>
        </pluginRepository>
    </pluginRepositories>

    <dependencies>
        <dependency>
            <groupId>com.twilio.sdk</groupId>
            <artifactId>twilio-java-sdk</artifactId>
            <version>3.4.1</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>

</project>
