        </dependency>
        <!-- eo Misc dependencies -->

        <dependency>
            <groupId>org.jdom</groupId>
            <artifactId>jdom</artifactId>
            <version>1.1</version>
        </dependency>

        <dependency>
            <groupId>net.sf.xss-html-filter</groupId>
            <artifactId>xss-html-filter</artifactId>
            <version>1.5</version>
        </dependency>

    </dependencies>
    <build>
        <finalName>swas</finalName>
        <plugins>
            <plugin>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>maven-jetty-plugin</artifactId>
                <version>6.1.26</version>
                <configuration>
                    <scanIntervalSeconds>1</scanIntervalSeconds>
                </configuration>
            </plugin>

            <plugin>
                <groupId>net.alchim31.maven</groupId>
                <artifactId>yuicompressor-maven-plugin</artifactId>
                <version>1.1</version>
                <configuration>
                    <nosuffix>true</nosuffix>
                    <excludes>
                        <exclude>**/dateFormat/i18n/*.js</exclude>
                        <exclude>**/jqUI/i18n/*.js</exclude>
                    </excludes>
                </configuration>
            </plugin>
        </plugins>

    </build>

    <properties>
        <junit.version>4.10</junit.version>
        <spring.version>3.1.3.RELEASE</spring.version>
        <spring-hibernate3.version>2.0.8</spring-hibernate3.version>
        <hibernate.version>4.1.9.Final</hibernate.version>
        <slf4j.version>1.7.2</slf4j.version>
        <log4j.version>1.2.17</log4j.version>
        <apache-tiles.version>2.2.2</apache-tiles.version>
        <jackson.version>1.9.10</jackson.version>
    </properties>

    <developers>
        <developer>
            <id>alexei.gubanov</id>
            <name>Alexei Gubanov</name>
            <email>alexei.gubanov@gmail.com</email>
        </developer>
    </developers>


    <scm>
        <connection>scm:svn:https://spring-webapp-skeleton.googlecode.com/svn/</connection>
        <developerConnection>scm:svn:https://spring-webapp-skeleton.googlecode.com/svn/</developerConnection>
        <url>http://code.google.com/p/spring-webapp-skeleton/source/browse/</url>
    </scm>
</project>
