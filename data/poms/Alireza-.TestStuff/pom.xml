<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.csiro</groupId>
    <artifactId>TestStuff</artifactId>
    <version>1.0</version>
    <packaging>jar</packaging>

    <name>TestStuff</name>
    <url>http://maven.apache.org</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>net.sourceforge.jexcelapi</groupId>
            <artifactId>jxl</artifactId>
            <version>2.6.12</version>
        </dependency>

        <dependency>
            <groupId>com.amazonaws</groupId>
            <artifactId>aws-java-sdk</artifactId>
            <version>1.6.10</version>
        </dependency>
        <dependency>
            <groupId>matlabcontrol</groupId>
            <artifactId>matlabcontrol</artifactId>
            <version>4.1.0</version>
        </dependency>
        <dependency>
            <groupId>org.apache.poi</groupId>
            <artifactId>poi</artifactId>
            <version>3.9</version>
        </dependency>
        <dependency>
            <groupId>org.apache.poi</groupId>
            <artifactId>poi-ooxml</artifactId>
            <version>3.9</version>
        </dependency>
        <dependency>
            <groupId>org.apache.poi</groupId>
            <artifactId>poi-ooxml-schemas</artifactId>
            <version>3.9</version>
        </dependency>
        <dependency>
            <groupId>com.bea</groupId>
            <artifactId>core-jmx</artifactId>
            <version>8.0.0.0</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.bea</groupId>
            <artifactId>core-rmi</artifactId>
            <version>7.0.0.0</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.bea</groupId>
            <artifactId>core-jndi-context</artifactId>
            <version>8.0.0.0</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.bea</groupId>
            <artifactId>core-logging</artifactId>
            <version>1.9.0.0</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.bea</groupId>
            <artifactId>core-bootbundle</artifactId>
            <version>12.0.0.0</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.bea</groupId>
            <artifactId>wlevs-management</artifactId>
            <version>11.1.1.7</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.bea</groupId>
            <artifactId>wlevs-configuration</artifactId>
            <version>11.1.1.7</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.bea</groupId>
            <artifactId>wlevs-management-api</artifactId>
            <version>11.1.1.7</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                    <archive>
                        <manifest>
                            <mainClass>com.csiro.teststuff.ProcessorControlBean</mainClass>
                        </manifest>
                    </archive>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>                         
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
