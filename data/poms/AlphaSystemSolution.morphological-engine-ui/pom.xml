<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.alphasystem.arabics</groupId>
    <artifactId>morphological-engine-ui</artifactId>
    <packaging>jar</packaging>
    <name>Morphological Engine UI</name>
    <parent>
        <artifactId>jar</artifactId>
        <groupId>com.alphasystem.project</groupId>
        <version>3.0.0-SNAPSHOT</version>
    </parent>
    <dependencies>
        <dependency>
            <groupId>com.alphasystem.arabic</groupId>
            <artifactId>arabic-ui-support</artifactId>
            <version>${arabic-ui-support.version}</version>
        </dependency>
        <dependency>
            <groupId>com.alphasystem.ui</groupId>
            <artifactId>fx-support</artifactId>
            <version>${fx-support.version}</version>
        </dependency>
        <dependency>
            <groupId>com.alphasystem.arabics</groupId>
            <artifactId>morphological-engine-docx</artifactId>
            <version>${morphological-engine.version}</version>
        </dependency>
    </dependencies>
    <profiles>
        <profile>
            <id>executable</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <mainClass>com.alphasystem.app.sarfengine.ui.MorphologicalEngineApp</mainClass>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-jar-plugin</artifactId>
                        <configuration>
                            <classifier>executable</classifier>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>library</id>
        </profile>
        <profile>
            <id>single</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <version>2.6</version>
                        <configuration>
                            <appendAssemblyId>false</appendAssemblyId>
                            <finalName>morphological-engine</finalName>
                            <!-- get all project dependencies -->
                            <descriptorRefs>
                                <descriptorRef>jar-with-dependencies</descriptorRef>
                            </descriptorRefs>
                            <!-- MainClass in mainfest make a executable jar -->
                            <archive>
                                <manifest>
                                    <mainClass>com.alphasystem.app.sarfengine.ui.MorphologicalEngineApp</mainClass>
                                </manifest>
                            </archive>
                        </configuration>
                        <executions>
                            <execution>
                                <id>exe</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
    <properties>
        <maven.test.skip>true</maven.test.skip>
        <arabic-ui-support.version>${project.version}</arabic-ui-support.version>
        <morphological-engine.version>${project.version}</morphological-engine.version>
        <fx-support.version>${project.version}</fx-support.version>
    </properties>
</project>
