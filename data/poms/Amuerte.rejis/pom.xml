<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>redis.clients</groupId>
	<artifactId>rejis</artifactId>
	<version>0.1</version>
	<name>Rejis</name>
	<description>Jedis templates for single and multi nodes redis use.</description>

	<issueManagement>
		<url>https://github.com/amuerte/rejis/issues</url>
		<system>GitHub Issues</system>
	</issueManagement>

	<licenses>
		<license>
			<name>GNU General Public License (GPL)</name>
			<url>http://www.gnu.org/licenses/gpl2.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<scm>
		<url>https://github.com/amuerte/rejis</url>
		<connection>scm:git:git://github.com/amuerte/rejis.git</connection>
		<developerConnection>scm:git:git@github.com/amuerte/rejis.git</developerConnection>
	</scm>

