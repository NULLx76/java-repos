    <profiles>
        <profile>
            <id>test</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <skip>false</skip>
                            <excludes>
                                <exclude>terrastore/integration/*.java</exclude>
                                <exclude>terrastore/metrics/*.java</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>integration-test</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <skip>true</skip>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>integration-test</phase>
                                <goals>
                                    <goal>test</goal>
                                </goals>
                                <configuration>
                                    <skip>false</skip>
                                    <includes>
                                        <include>terrastore/integration/*.java</include>
                                    </includes>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.terracotta.maven.plugins</groupId>
                        <artifactId>tc-maven-plugin</artifactId>
                        <dependencies>
                            <dependency>
                                <groupId>org.terracotta</groupId>
                                <artifactId>terracotta</artifactId>
                                <version>3.5.2</version>
                            </dependency>
                        </dependencies>
                        <configuration>
                            <config>${basedir}/src/dist/master/terracotta-config-test.xml</config>
                            <startServer>false</startServer>
                            <activeNodes>node-1,node-2</activeNodes>
                            <processes>
                                <process nodeName="node-1" count="1" className="terrastore.startup.Startup" arguments="--master localhost:9510 --nodeTimeout 60000 --httpPort 8080 --nodePort 8180" jvmargs="-DTERRASTORE_HOME=${basedir}/src/dist/server" />
                                <process nodeName="node-2" count="1" className="terrastore.startup.Startup" arguments="--master localhost:9510 --nodeTimeout 60000 --httpPort 8081 --nodePort 8181" jvmargs="-DTERRASTORE_HOME=${basedir}/src/dist/server" />
                            </processes>
                        </configuration>
                        <executions>
                            <execution>
                                <id>start</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>start</goal>
                                    <goal>run-integration</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>stop</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>terminate-integration</goal>
                                    <goal>stop</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>initialize</phase>
                                <configuration>
                                    <tasks>
                                        <delete dir="${basedir}/tc-data" />
                                        <delete dir="${basedir}/src/dist/master/tc-data" />
                                        <delete dir="${basedir}/src/dist/server/tc-data" />
                                        <delete>
                                            <fileset dir="${basedir}/src/dist/server/backups">
                                                <include name="*.bak" />
                                            </fileset>
                                        </delete>
                                    </tasks>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>metrics-test</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
