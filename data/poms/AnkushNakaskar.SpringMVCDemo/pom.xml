	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.spring.mvc</groupId>
	<artifactId>SpringMVCDemo</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>war</packaging>

	<name>SpringMVCDemo</name>
	<url>http://maven.apache.org</url>

	<properties>
		<java.version>1.6</java.version>
		<cglib.version>2.2.2</cglib.version>
		<jacoco.version>0.6.3.201306030806</jacoco.version>
		<sonar.dynamicAnalysis>reuseReports</sonar.dynamicAnalysis>
		<sonar.java.coveragePlugin>jacoco</sonar.java.coveragePlugin>

		<spring.version>4.0.7.RELEASE</spring.version>
		<log4j.version>1.2.17</log4j.version>
		<context.path>SpringRestSecurityOauth</context.path>
		<spring.security.version>3.2.5.RELEASE</spring.security.version>
		<!-- Track integration tests and unit tests in separate reports -->

		<maven.surefire.version>2.17</maven.surefire.version>
		<maven-resources-plugin.version>2.4</maven-resources-plugin.version>
		<maven-compiler-plugin.version>3.1</maven-compiler-plugin.version>
		<findbugs-maven-plugin.version>2.5.2</findbugs-maven-plugin.version>
		<maven-failsafe-plugin.version>2.16</maven-failsafe-plugin.version>

		<exec-maven-plugin.version>1.2.1</exec-maven-plugin.version>
		<maven-source-plugin.version>2.2.1</maven-source-plugin.version>
		<maven-assembly-plugin.version>2.4</maven-assembly-plugin.version>
		<maven-shade-plugin.version>2.2</maven-shade-plugin.version>
		<rpm-maven-plugin.version>2.1-alpha-1</rpm-maven-plugin.version>
		<sonar-maven-plugin.version>2.1</sonar-maven-plugin.version>
		<junit.version>4.11</junit.version>
		<jackson.version>2.1.4</jackson.version>
		<commons-lang.version>2.4</commons-lang.version>

		<spring.mvc.test.version>1.0.0.M1</spring.mvc.test.version>
		<javax.servlet-api.version>3.0.1</javax.servlet-api.version>
		<hamcrest.all.version>1.3</hamcrest.all.version>
		<http.client.version>3.1</http.client.version>
		<slf4j.version>1.6.4</slf4j.version>
		<jayway.restassured.version>1.7.2</jayway.restassured.version>
		<jayway.jsonpath.version>0.8.1</jayway.jsonpath.version>
		<commons-io.version>1.3.2</commons-io.version>
		<java.melody.version>1.52.0</java.melody.version>
		<hibernate.validator.version>5.0.3.Final</hibernate.validator.version>
		<mockito.version>1.9.5</mockito.version>




	</properties>

	<dependencies>
		<!-- Spring core & mvc -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context</artifactId>
			<version>${spring.version}</version>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-core</artifactId>
			<version>4.1.4.RELEASE</version>
		</dependency>
		<!-- https://mvnrepository.com/artifact/org.codehaus.spring-security-oauth/spring-security-oauth -->
		<dependency>
			<groupId>org.codehaus.spring-security-oauth</groupId>
			<artifactId>spring-security-oauth</artifactId>
			<version>3.19.SS3</version>
		</dependency>

		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-webmvc</artifactId>
			<version>${spring.version}</version>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-orm</artifactId>
			<version>${spring.version}</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>

		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-test</artifactId>
			<version>${spring.version}</version>
			<type>jar</type>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-web</artifactId>
			<version>${spring.version}</version>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
