<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <groupId>net.sf.testium</groupId>
  <artifactId>surefire-report-plugin</artifactId>
  <version>0.0.4-SNAPSHOT</version>
  <name>Testium - Surefire Report Plugin</name>
  <description>Surefire Report Plugin for Testium</description>
  <url>http://www.awk-test-services.com/testium/surefire-report-plugin</url>
  <packaging>jar</packaging>

  <parent>
    <groupId>org.sonatype.oss</groupId>
    <artifactId>oss-parent</artifactId>
    <version>7</version>
  </parent>

  <licenses>
    <license>
      <name>GNU Lesser General Public License - version 3</name>
      <url>http://www.gnu.org/licenses/lgpl-3.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <scm>
    <connection>scm:git:git@github.com:ArjanKranenburg/testium_surefire_plugin.git</connection>
    <developerConnection>scm:git:git@github.com:ArjanKranenburg/testium_surefire_plugin.git</developerConnection>
    <url>git@github.com:ArjanKranenburg/testium_surefire_plugin.git</url>
  </scm>

  <developers>
    <developer>
      <id>arjankranenburg</id>
      <name>Arjan Kranenburg</name>
      <email>Arjan.Kranenburg@gmail.com</email>
    </developer>
  </developers>

  <dependencies>
  	<dependency>
  	  <groupId>net.sf.testium</groupId>
  	  <artifactId>testium</artifactId>
  	  <version>0.4.1-SNAPSHOT</version>
  	</dependency>
	<dependency>
		<groupId>org.testtoolinterfaces</groupId>
		<artifactId>testsuite</artifactId>
		<version>0.3.10</version>
	</dependency>
	<dependency>
		<groupId>org.testtoolinterfaces</groupId>
		<artifactId>testresult</artifactId>
		<version>0.3.13</version>
	</dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit-dep</artifactId>
      <version>4.10</version>
      <scope>test</scope>
    </dependency>
<!-- 
    <dependency>
		<groupId>org.apache.maven.surefire</groupId>
		<artifactId>surefire</artifactId>
		<version>2.7.1</version>
    </dependency>
 -->
   <dependency>
   	<groupId>org.testtoolinterfaces</groupId>
   	<artifactId>testresultinterface</artifactId>
   	<version>0.3.12</version>
   </dependency>
  </dependencies>


  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.5.1</version>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
	    <groupId>org.apache.maven.plugins</groupId>
	    <artifactId>maven-source-plugin</artifactId>
	    <version>2.1.2</version>
	    <executions>
	      <execution>
	        <id>attach-sources</id>
	        <goals>
	          <goal>jar</goal>
	        </goals>
	      </execution>
	    </executions>
	  </plugin>
	  <plugin>
		<groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-javadoc-plugin</artifactId>
	    <version>2.8.1</version>
		<executions>
		  <execution>
		    <id>attach-javadocs</id>
		    <goals>
		      <goal>jar</goal>
		    </goals>
		  </execution>
		</executions>
	  </plugin>

    </plugins>
  </build>

  <profiles>
	  <profile>
	    <id>release-sign-artifacts</id>
	    <activation>
	      <property>
	        <name>performRelease</name>
	        <value>true</value>
	      </property>
	    </activation>
	    <build>
	      <plugins>
	        <plugin>
	          <groupId>org.apache.maven.plugins</groupId>
	          <artifactId>maven-gpg-plugin</artifactId>
	          <version>1.1</version>
	          <executions>
	            <execution>
	              <id>sign-artifacts</id>
	              <phase>verify</phase>
	              <goals>
	                <goal>sign</goal>
	              </goals>
	            </execution>
	          </executions>
	        </plugin>
	      </plugins>
	    </build>
	  </profile>
  </profiles>
</project>
