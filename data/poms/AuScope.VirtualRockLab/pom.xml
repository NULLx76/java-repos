<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.auscope.vrl</groupId>
    <artifactId>VirtualRockLab</artifactId>
    <packaging>war</packaging>
    <version>2.0.0</version>
    <name>VirtualRockLab</name>
    <url>https://portal.esscc.uq.edu.au</url>
    <scm>
        <connection>scm:svn:https://svn.auscope.org/subversion/AuScopePortal/VirtualRockLab/trunk</connection>
        <developerConnection>scm:svn:https://svn.auscope.org/subversion/AuScopePortal/VirtualRockLab/trunk</developerConnection>
    </scm> 
    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <configuration>
                    <encoding>ISO-8859-1</encoding>
                    <links>
                        <link>https://code.arcs.org.au/hudson/job/JGridAuth-SNAPSHOT/javadoc</link>
                        <link>https://code.arcs.org.au/hudson/job/Grisu-SNAPSHOT/javadoc</link>
                        <link>http://www.globus.org/api/javadoc-4.0/globus_java_ws_core</link>
                        <link>http://www.globus.org/api/javadoc-4.0/globus_wsrf_gram_client_java</link>
                        <link>http://www.globus.org/api/javadoc-4.0/globus_wsrf_gram_common_java</link>
                        <link>http://www.globus.org/api/javadoc-4.0/globus_wsrf_gram_utils_java</link>
                        <link>http://java.sun.com/j2se/1.5.0/docs/api</link>
                        <link>http://static.springframework.org/spring/docs/2.5.x/api</link>
                    </links>
                    <show>private</show>
                </configuration>
            </plugin>
        </plugins>
    </reporting>

    <pluginRepositories>
        <pluginRepository>
            <id>samaxes-releases</id>
            <name>samaxes Release Repository (minify-plugin)</name>
            <url>http://maven-samaxes-repo.googlecode.com/svn/releases</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>

    <build>
        <finalName>VirtualRockLab</finalName>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                    <compilerVersion>2.2</compilerVersion>
                </configuration>
            </plugin>

            <plugin>
                <groupId>com.samaxes.maven</groupId>
                <artifactId>maven-minify-plugin</artifactId>
                <version>1.1</version>
                <executions>
                    <execution>
                        <id>default-minify</id>
                        <phase>process-resources</phase>
                        <configuration>
                            <cssFiles>
                                <param>../js/treegrid/treegrid.css</param>
                                <param>vrl.css</param>
                            </cssFiles>
                            <jsFiles>
                                <param>treegrid/TreeGridSorter.js</param>
                                <param>treegrid/TreeGridSorter.js</param>
                                <param>treegrid/TreeGridColumnResizer.js</param>
                                <param>treegrid/TreeGridNodeUI.js</param>
                                <param>treegrid/TreeGridLoader.js</param>
                                <param>treegrid/TreeGridColumns.js</param>
                                <param>treegrid/TreeGrid.js</param>
                                <param>codemirror/codemirror.js</param>
                                <param>CodeMirror.js</param>
                                <param>CenterLayout.js</param>
                                <param>GroupTabPanel.js</param>
                                <param>GroupTab.js</param>
                                <param>FileUploadField.js</param>
                                <param>FileManager.js</param>
                                <param>JobManager.js</param>
                                <param>NewSeriesDialog.js</param>
                                <param>JobDetailsDialog.js</param>
                                <param>SeriesBrowser.js</param>
                                <param>SaveSeriesDialog.js</param>
                                <param>SubmitJobDialog.js</param>
                                <param>WelcomeDialog.js</param>
                                <param>VRLMain.js</param>
                            </jsFiles>
                            <cssFinalFile>vrl.css</cssFinalFile>
                            <jsFinalFile>vrl.js</jsFinalFile>
                        </configuration>
                        <goals>
                            <goal>minify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>buildnumber-maven-plugin</artifactId>
                <version>1.0-beta-4</version>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <goals>
                            <goal>create</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <doCheck>false</doCheck>
                    <doUpdate>true</doUpdate>
                    <timestampFormat>{0,date,dd-MM-yyyy HH:mm}</timestampFormat>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.0.2</version>
                <configuration>
                    <archive>
                        <manifest>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                            <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                        </manifest>
                        <manifestEntries>
                            <Implementation-Build>${buildNumber}</Implementation-Build>
                            <buildDate>${timestamp}</buildDate>
                            <osName>${os.name}</osName>
                            <osVersion>${os.version}</osVersion>
                            <javaVendor>${java.vendor}</javaVendor>
                            <javaVersion>${java.version}</javaVersion>
                            <javaVmVersion>${java.vm.version}</javaVmVersion>
                            <javaVmVendor>${java.vm.vendor}</javaVmVendor>
                        </manifestEntries>
                    </archive>
                    <goals>
                        <goal>manifest</goal>
                    </goals>
                    <warSourceExcludes>css/vrl.css,js/CenterLayout.js,js/CodeMirror.js,js/VRLMain.js,js/FileManager.js,js/FileUploadField.js,js/GroupTab.js,js/GroupTabPanel.js,js/NewSeriesDialog.js,js/SeriesBrowser.js,js/SaveSeriesDialog.js,js/SubmitJobDialog.js,js/JobDetailsDialog.js,js/JobManager.js,js/WelcomeDialog.js,**/treegrid/**,**/codemirror/codemirror.js</warSourceExcludes>
                </configuration>
                <!-- This is needed to create the
                     ${basedir}/src/main/webapp/META-INF/MANIFEST.MF file -->
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>manifest</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>shibboleth</id> <!-- for commons-ssl -->
            <name>shibboleth</name>
            <url>http://shibboleth.internet2.edu/downloads/maven2</url>
        </repository>

        <repository>
            <id>ARCS</id>
            <name>ARCS Repo</name>
            <url>http://code.arcs.org.au/nexus/content/groups/public</url>
        </repository>

        <repository>
            <id>ARCS Snapshots</id>
            <name>ARCS Snapshots</name>
            <url>http://code.arcs.org.au/nexus/content/groups/public-snapshots</url>
        </repository>
    </repositories>

