<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>nl.b3p</groupId>
    <artifactId>gisviewer</artifactId>
    <version>4.2.14-SNAPSHOT</version>
    <packaging>war</packaging>

    <name>gisviewer</name>

    <properties>
        <endorsed.dir>${project.build.directory}/endorsed</endorsed.dir>
        <project.build.sourceEncoding>windows-1252</project.build.sourceEncoding>
        <minify.outputdir>${project.build.directory}/${project.name}-${project.version}/scripts</minify.outputdir>
        <viewerhtml.path>${basedir}/src/main/webapp/scripts</viewerhtml.path>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>b3p-gisviewer</artifactId>
            <version>4.2.10</version>
        </dependency>
        <dependency>
            <groupId>org.directwebremoting</groupId>
            <artifactId>dwr</artifactId>
            <version>2.0.11-RELEASE</version>
        </dependency>
        <dependency>
            <groupId>javax</groupId>
            <artifactId>javaee-web-api</artifactId>
            <version>6.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.1.1</version>
        </dependency>
        <dependency>
            <groupId>org.tuckey</groupId>
            <artifactId>urlrewritefilter</artifactId>
            <version>4.0.4</version>
        </dependency>
        <dependency>
            <groupId>jstl</groupId>
            <artifactId>jstl</artifactId>
            <version>1.2</version>
        </dependency>
        <dependency>
            <groupId>org.postgresql</groupId>
            <artifactId>postgresql</artifactId>
            <version>9.3-1102-jdbc4</version>
            <scope>provided</scope>
            <!-- Bij JNDI db verbinding moeten postgis jars in tomcat lib samen
            met postgresql jdbc driver staan -->
        </dependency>
        <dependency>
            <groupId>org.postgis</groupId>
            <artifactId>postgis-jdbc</artifactId>
            <version>1.3.3</version>
            <scope>provided</scope>
            <!-- Bij JNDI db verbinding moeten postgis jars in tomcat lib samen
            met postgresql jdbc driver staan -->
        </dependency>
    </dependencies>

    <repositories>
       <repository>
            <id>repo.b3p.nl</id>
            <name>B3P file Repository</name>
            <url>http://repo.b3p.nl/nexus/content/repositories/releases/</url>
        </repository>
        <repository>
            <id>JBoss repository</id>
            <url>http://repository.jboss.org/nexus/content/groups/public/</url>
        </repository>
    </repositories>
    <scm>
        <connection>scm:git:git@github.com:B3Partners/gisviewer.git</connection>
        <developerConnection>scm:git:git@github.com:B3Partners/gisviewer.git</developerConnection>
        <url>https://github.com/B3Partners/gisviewer</url>
      <tag>gisviewer-${project.version}</tag>
    </scm>
    <distributionManagement>
        <repository>
            <id>repo.b3p.nl</id>
            <name>B3P file Repository</name>
            <url>http://repo.b3p.nl/nexus/content/repositories/releases/</url>
        </repository>
    </distributionManagement>
    <!-- plugin repo for complosure -->
    <pluginRepositories>
        <pluginRepository>
            <id>sonatype-oss-public</id>
            <url>https://oss.sonatype.org/content/groups/public</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <compilerArguments>
                        <endorseddirs>${endorsed.dir}</endorseddirs>
                    </compilerArguments>
                </configuration>
            </plugin>
            <plugin>
                <groupId>nl.geodienstencentrum.maven</groupId>
                <artifactId>closure-compiler-maven-plugin</artifactId>
                <version>2.5</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <compilations>
                        <compilation>
                            <compilationLevel>SIMPLE_OPTIMIZATIONS</compilationLevel>
                            <compilerOptions>
                                <prettyPrint>false</prettyPrint>
                            </compilerOptions>
                            <outputFile>${minify.outputdir}/viewer-min.js</outputFile>
                            <externFiles />
                            <sourceFiles>
                                <param>${viewerhtml.path}/lib/proj4js-compressed.js</param>
                                <param>${viewerhtml.path}/lib/swfobject.js</param>

                                <param>${viewerhtml.path}/simple_treeview.js</param>
                                <param>${viewerhtml.path}/viewer.js</param>
                                <param>${viewerhtml.path}/MaatregelComponent.js</param>

                                <param>${viewerhtml.path}/openlayers/OpenLayers.js</param>

                                <param>${viewerhtml.path}/webmapcontroller/Controller.js</param>
                                <param>${viewerhtml.path}/webmapcontroller/FlamingoController.js</param>
                                <param>${viewerhtml.path}/webmapcontroller/OpenLayersController.js</param>

                                <param>${viewerhtml.path}/components/BaseComponent.js</param>
                                <param>${viewerhtml.path}/components/ViewerComponent.js</param>
                                <param>${viewerhtml.path}/components/Search.js</param>
                                <param>${viewerhtml.path}/components/Layout.js</param>
                                <param>${viewerhtml.path}/components/Balloon.js</param>
                                <param>${viewerhtml.path}/components/Edit.js</param>
                                <param>${viewerhtml.path}/components/GPS.js</param>
                                <param>${viewerhtml.path}/components/CyclomediaButton.js</param>

                                <param>${viewerhtml.path}/components/tabcomponents/TabComponent.js</param>
                                <param>${viewerhtml.path}/components/tabcomponents/IframeTabComponent.js</param>
                                <param>${viewerhtml.path}/components/tabcomponents/TreeTabComponent.js</param>
                                <param>${viewerhtml.path}/components/tabcomponents/LegendTabComponent.js</param>
                                <param>${viewerhtml.path}/components/tabcomponents/PlanSelectionTabComponent.js</param>
                                <param>${viewerhtml.path}/components/tabcomponents/SearchTabComponent.js</param>
                                <param>${viewerhtml.path}/components/tabcomponents/CMSTabComponent.js</param>
                                <param>${viewerhtml.path}/components/tabcomponents/LayerInfoTabComponent.js</param>
                                <param>${viewerhtml.path}/components/tabcomponents/AnalyseTabComponent.js</param>
                            </sourceFiles>
                        </compilation>

                        <compilation>
                            <compilationLevel>SIMPLE_OPTIMIZATIONS</compilationLevel>
                            <compilerOptions>
                                <prettyPrint>false</prettyPrint>
                            </compilerOptions>
                            <outputFile>${minify.outputdir}/commonfunctions-min.js</outputFile>
                            <externFiles />
                            <sourceFiles>
                                <param>${viewerhtml.path}/commonfunctions.js</param>
                                <param>${viewerhtml.path}/components/Component.js</param>
                            </sourceFiles>
                        </compilation>
                    </compilations>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.18.1</version>
                 <configuration>
                    <skip>true</skip>
                </configuration>               
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.1.1</version>
                <configuration>
                    <failOnMissingWebXml>false</failOnMissingWebXml>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.1</version>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${endorsed.dir}</outputDirectory>
                            <silent>true</silent>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>javax</groupId>
                                    <artifactId>javaee-endorsed-api</artifactId>
                                    <version>6.0</version>
                                    <type>jar</type>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
           <plugin>                
                <groupId>org.apache.maven.plugins</groupId>                
                <artifactId>maven-release-plugin</artifactId>                
                <version>2.5.2</version>                
                <configuration>                    
                    <pushChanges>true</pushChanges>                
                </configuration>            
            </plugin>
        </plugins>
    </build>

</project>
