<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.roman.app</groupId>
  <artifactId>SpringJDBC</artifactId>
  <version>0.1</version>
  <packaging>jar</packaging>
  <name>SpringJDBC</name>
  <url>http://maven.apache.org</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <spring.version>4.2.0.RELEASE</spring.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
    	<groupId>org.springframework</groupId>
    	<artifactId>spring-context</artifactId>
    	<version>${spring.version}</version>
    </dependency>
    <dependency>
    	<groupId>org.springframework</groupId>
    	<artifactId>spring-jdbc</artifactId>
    	<version>${spring.version}</version>
    </dependency>
    <dependency>
    	<groupId>org.xerial</groupId>
    	<artifactId>sqlite-jdbc</artifactId>
    	<version>3.7.2</version>
    </dependency>
    <dependency>
    	<groupId>org.swixml</groupId>
    	<artifactId>swixml</artifactId>
    	<version>2.4.0</version>
    </dependency>
  </dependencies>
  <build>
  	<resources>
  		<resource>
  			<directory>src/main/resources</directory>
  			<includes>
  				<include>Beans.xml</include>
  				<include>MainView.xml</include>
  				<include>AddFrame.xml</include>
  				<include>EditFrame.xml</include>
  			</includes> 			
  		</resource>
  	</resources>
	<plugins>
		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-jar-plugin</artifactId>
			<version>2.6</version>
			<configuration>
				<archive>
					<manifest>
						<mainClass>com.roman.app.SpringJDBC.App</mainClass>
					</manifest>
				</archive>
			</configuration>
		</plugin>
		<plugin>
        	<artifactId>maven-shade-plugin</artifactId>
        	<executions>
          		<execution>
            		<phase>package</phase>
            		<goals>
             			<goal>shade</goal>
            		</goals>
         		</execution>
        	</executions>
        	<configuration>
         		<filename>uber-SpringJDBC-0.1</filename>
        	</configuration>
      	</plugin>
	</plugins>
  </build>
</project>
