<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>test_kafka</groupId>
	<artifactId>test_kafka</artifactId>
	<version>0.0.1</version>
	<repositories>
		<repository>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<id>central</id>
			<name>Central Repository</name>
			<url>https://repo.maven.apache.org/maven2</url>
		</repository>

		<repository>
			<id>artiflux-libs-releases</id>
			<name>artiflux-libs-releases</name>
			<url>http://srvsvn-etrading.smt.cib.net:8081/artifactory/libs-releases</url>
		</repository>
		<repository>
			<id>artiflux-libs-releases-local</id>
			<name>artiflux-libs-releases</name>
			<url>http://srvsvn-etrading.smt.cib.net:8081/artifactory/libs-releases-local</url>
		</repository>
		<repository>
			<id>artiflux-releases</id>
			<name>artiflux-releases</name>
			<url>http://srvsvn-etrading:8081/artifactory/etrading-releases</url>
		</repository>
		<repository>
			<id>artiflux-snapshots</id>
			<name>artiflux-snapshots</name>
			<url>http://srvsvn-etrading.smt.cib.net:8081/artifactory/etrading-snapshots</url>
		</repository>

	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<releases>
				<updatePolicy>never</updatePolicy>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<id>central</id>
			<name>Central Repository</name>
			<url>https://repo.maven.apache.org/maven2</url>
		</pluginRepository>


		<pluginRepository>
			<id>artiflux-libs-releases</id>
			<name>artiflux-libs-releases</name>
			<url>http://srvsvn-etrading.smt.cib.net:8081/artifactory/libs-releases</url>
		</pluginRepository>
		<pluginRepository>
			<id>artiflux-libs-releases-local</id>
			<name>artiflux-libs-releases</name>
			<url>http://srvsvn-etrading.smt.cib.net:8081/artifactory/libs-releases-local</url>
		</pluginRepository>
		<pluginRepository>
			<id>artiflux-releases</id>
			<name>artiflux-releases</name>
			<url>http://srvsvn-etrading:8081/artifactory/etrading-releases</url>
		</pluginRepository>
		<pluginRepository>
			<id>artiflux-snapshots</id>
			<name>artiflux-snapshots</name>
			<url>http://srvsvn-etrading.smt.cib.net:8081/artifactory/etrading-snapshots</url>
		</pluginRepository>
	</pluginRepositories>
	<dependencies>
		<dependency>
			<groupId>jdk.tools</groupId>
			<artifactId>jdk.tools</artifactId>
			<version>1.8.0_91</version>
			<scope>system</scope>
			<systemPath>C:/Program Files (x86)/Java/jdk1.8.0_91/lib/tools.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>org.apache.spark</groupId>
			<artifactId>spark-core_2.10</artifactId>
			<version>1.5.2</version>
		</dependency>
		<dependency>
			<groupId>org.apache.spark</groupId>
			<artifactId>spark-sql_2.10</artifactId>
			<version>1.5.2</version>
		</dependency>
		<dependency>
			<groupId>org.apache.spark</groupId>
			<artifactId>spark-hive_2.10</artifactId>
			<version>1.5.2</version>
		</dependency>

		<dependency>
			<groupId>org.apache.spark</groupId>
			<artifactId>spark-streaming_2.10</artifactId>
			<version>1.5.2</version>
		</dependency>
		<dependency>
			<groupId>net.sf.jopt-simple</groupId>
			<artifactId>jopt-simple</artifactId>
			<version>5.0.1</version>
		</dependency>
		<dependency>
			<groupId>org.apache.kafka</groupId>
			<artifactId>kafka_2.10</artifactId>
			<version> 0.9.0.1</version>
			<exclusions>
				<exclusion>
					<artifactId>jmxri</artifactId>
					<groupId>com.sun.jmx</groupId>
				</exclusion>
				<exclusion>
					<artifactId>jmxtools</artifactId>
					<groupId>com.sun.jdmk</groupId>
				</exclusion>
				<exclusion>
					<artifactId>jms</artifactId>
					<groupId>javax.jms</groupId>
				</exclusion>
				<exclusion>
					<artifactId>junit</artifactId>
					<groupId>junit</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.apache.hbase</groupId>
			<artifactId>hbase-client</artifactId>
			<version>1.1.3</version>
		</dependency>
		<dependency>
			<groupId>org.apache.hbase</groupId>
			<artifactId>hbase-protocol</artifactId>
			<version>1.1.2</version>
		</dependency>

		<dependency>
			<groupId>org.apache.hbase</groupId>
			<artifactId>hbase-server</artifactId>
			<version>1.1.2</version>
		</dependency>

		<dependency>
			<groupId>com.yammer.metrics</groupId>
			<artifactId>metrics-core</artifactId>
			<version>2.2.0</version>
		</dependency>

	</dependencies>

	<build>
		<sourceDirectory>src</sourceDirectory>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.5.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
