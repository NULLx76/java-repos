	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.beamfoundry.bundles</groupId>
		<artifactId>org.beamfoundry.bundles.bundles-parent</artifactId>
		<version>1.0.0</version>
	</parent>

	<groupId>org.beamfoundry.bundles.spring-data</groupId>
	<artifactId>org.beamfoundry.bundles.spring-data</artifactId>
	<version>1.4.4.RELEASE_3-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>Bundles :: spring-data</name>
	<description>This project provides Spring spring-data bundles for Apache Karaf.</description>
	<url>https://github.com/BeamFoundry/spring-data</url>

	<modules>
		<module>features</module>
		<module>spring-data-parent</module>
		<module>spring-data-commons</module>
		<module>spring-data-jpa</module>
		<module>spring-data-jpa-test</module>
		<module>spring-data-mongodb</module>
		<module>spring-data-mongodb-cross-store</module>
		<module>spring-data-mongodb-test</module>
	</modules>

	<scm>
		<connection>scm:git:git@github.com:BeamFoundry/spring-data.git</connection>
		<developerConnection>scm:git:git@github.com:BeamFoundry/spring-data.git</developerConnection>
		<url>git@github.com:BeamFoundry/spring-data.git</url>
	  <tag>HEAD</tag>
  </scm>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<java.version>1.7</java.version>

		<!-- Spring Data Parent -->
		<aspectj>1.8.1</aspectj>
		<cdi>1.0</cdi>
		<jackson>2.3.4</jackson>
		<jodatime>2.3</jodatime>
		<querydsl>3.3.4</querydsl>
		<spring.osgi>3.2.10</spring.osgi>
		<spring>${spring.osgi}.RELEASE</spring>

		<!-- Spring Data Commons -->
		<guava>17.0</guava>
		<springhateoas.osgi>0.16.0</springhateoas.osgi>
		<springhateoas>${springhateoas.osgi}.RELEASE</springhateoas>
		<springdata.commons.osgi>1.8.4</springdata.commons.osgi>
		<springdata.commons>${springdata.commons.osgi}.RELEASE</springdata.commons>

		<!-- Spring Data JPA -->
		<eclipselink>2.5.1</eclipselink>
		<hibernate>3.6.10.Final</hibernate>
		<hsqldb1>1.8.0.10</hsqldb1>
		<openjpa>2.3.0</openjpa>
		<springdata.jpa.osgi>1.6.4</springdata.jpa.osgi>
		<springdata.jpa>${springdata.jpa.osgi}.RELEASE</springdata.jpa>

		<!-- Spring Data Mongo -->
		<mongo>2.12.1</mongo>
		<validation.osgi>1.0</validation.osgi>
		<validation>1.0.0.GA</validation>
		<objenesis>1.3</objenesis>
		<mongo.osgi>${mongo}.RELEASE</mongo.osgi>
		<springdata.mongodb.osgi>1.5.4</springdata.mongodb.osgi>
		<springdata.mongodb>${springdata.mongodb.osgi}.RELEASE</springdata.mongodb>

	</properties>

</project>
