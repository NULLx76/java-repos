    <repositories>
        <repository>
            <id>public</id>
            <name>Public Repositories</name>
            <url>http://product.fenqile.com:8081/nexus/content/groups/public/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
