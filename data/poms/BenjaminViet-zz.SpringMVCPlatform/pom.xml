<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.spring</groupId>
    <artifactId>SpringMVCPlatform</artifactId>
    <packaging>pom</packaging>
    <version>1.0</version>

    <modules>
        <module>core-common</module>
        <module>core-data</module>
        <module>core-logic</module>
        <module>core-logic-impl</module>
        <module>web</module>
    </modules>

    <properties>
        <jdk.version>1.7</jdk.version>
        <springframework.version>4.1.6.RELEASE</springframework.version>
        <spring.core.version>4.2.5.RELEASE</spring.core.version>
        <spring.beans.version>4.2.5.RELEASE</spring.beans.version>
        <spring.context.version>4.2.5.RELEASE</spring.context.version>
        <spring.web.version>4.1.6.RELEASE</spring.web.version>
        <spring.webmvc.version>4.1.6.RELEASE</spring.webmvc.version>
        <spring.security.version>4.0.1.RELEASE</spring.security.version>
        <spring.expression.version>4.2.5.RELEASE</spring.expression.version>
        <displaytag.version>1.0</displaytag.version>
        <jstl.version>1.2</jstl.version>
        <!--<sitemesh.version>2.4.2</sitemesh.version>-->
        <stringutils.version>1.1.0</stringutils.version>
        <!--<version.ear.plugin>2.10.1</version.ear.plugin>-->
        <servlet.version>3.1.0</servlet.version>
        <hibernate.version>4.3.6.Final</hibernate.version>
        <!--<ejb.version>3.0</ejb.version>-->
        <spring.tx.version>4.2.5.RELEASE</spring.tx.version>
        <springmodules.validation.version>0.8</springmodules.validation.version>
        <commons.io.version>1.3.2</commons.io.version>
        <hibernate.version>4.3.11.Final</hibernate.version>
        <!--<hibernate.entitymanager.version>5.1.0.Final</hibernate.entitymanager.version>-->
        <spring.data.jpa.version>1.9.4.RELEASE</spring.data.jpa.version>
        <version.aopalliance>1.0</version.aopalliance>
        <spring.orm.version>4.2.5.RELEASE</spring.orm.version>
        <spring.aop.version>4.2.5.RELEASE</spring.aop.version>
        <sitemesh.version>2.4.2</sitemesh.version>

        <spring.jdbc.version>4.2.5.RELEASE</spring.jdbc.version>
        <postgres.jdbc.driver>9.2-1003-jdbc4</postgres.jdbc.driver>
        <!--<postgres.jdbc.driver>9.1-901.jdbc4</postgres.jdbc.driver>-->
        <commons-dbcp.version>1.4</commons-dbcp.version>

        <slf4j.version>1.6.1</slf4j.version>
        <log4j.version>1.2.17</log4j.version>

    </properties>

    <developers>
        <developer>
            <id>bluck</id>
            <name>Benjamin Luck</name>
            <email>bluckviet@gmail.com</email>
        </developer>
    </developers>

    <build>
        <finalName>Spring4WebApplication</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>${jdk.version}</source>
                    <target>${jdk.version}</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <failOnMissingWebXml>false</failOnMissingWebXml>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>