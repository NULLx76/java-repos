<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.icl.integrator</groupId>
    <artifactId>root</artifactId>
    <packaging>pom</packaging>
    <name>integrator-parent</name>
    <version>1.5</version>
    <modules>
        <module>dto</module>
        <module>integrator</module>
        <module>http-client</module>
        <module>api</module>
        <module>spring-api</module>
        <module>deserializer</module>
    </modules>

    <properties>
        <aspectj.version>1.7.4</aspectj.version>
        <jackson.version>2.2.3</jackson.version>
        <java.version>1.7</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <!--<roo.version>1.2.3.RELEASE</roo.version>-->
        <!--<slf4j.version>1.7.2</slf4j.version>-->
        <spring.version>3.2.6.RELEASE</spring.version>
        <!--<spring.orm.version>3.1.1.RELEASE</spring.orm.version>-->
        <!--<querydsl.version>2.9.0</querydsl.version>-->
        <!--<spring.ws.version>2.1.0.RELEASE</spring.ws.version>-->
        <!--<spring-security.version>3.1.0.RELEASE</spring-security.version>-->
    </properties>
    <repositories>
        <repository>
            <snapshots>
                <updatePolicy>never</updatePolicy>
            </snapshots>
            <id>java.net</id>
            <url>http://download.java.net/maven/2</url>
        </repository>
        <repository>
            <snapshots>
                <updatePolicy>never</updatePolicy>
            </snapshots>
            <id>spring-maven-release</id>
            <name>Spring Maven Release Repository</name>
            <url>http://maven.springframework.org/release</url>
        </repository>
        <repository>
            <snapshots>
                <updatePolicy>never</updatePolicy>
            </snapshots>
            <id>spring-maven-milestone</id>
            <name>Spring Maven Milestone Repository</name>
            <url>http://maven.springframework.org/milestone</url>
        </repository>
        <repository>
            <snapshots>
                <updatePolicy>never</updatePolicy>
            </snapshots>
            <id>spring-roo-repository</id>
            <name>Spring Roo Repository</name>
            <url>http://spring-roo-repository.springsource.org/release</url>
        </repository>
        <repository>
            <snapshots>
                <updatePolicy>never</updatePolicy>
            </snapshots>
            <id>icl.public</id>
            <name>IOS Public Repository</name>
            <url>http://alpha4:8081/nexus/content/groups/public</url>
        </repository>
        <repository>
            <snapshots>
                <updatePolicy>never</updatePolicy>
            </snapshots>
            <id>JBoss repository</id>
            <url>http://repository.jboss.org/nexus/content/groups/public/</url>
        </repository>
    </repositories>
    <distributionManagement>
        <snapshotRepository>
            <id>icl-repository</id>
            <url>http://alpha4:8081/nexus/content/repositories/icl-repository
            </url>
        </snapshotRepository>
        <repository>
            <id>icl-repository</id>
            <url>
                http://alpha4:8081/nexus/content/repositories/icl-release-repository/
            </url>
        </repository>
    </distributionManagement>
    <build>
        <finalName>integrator</finalName>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.16</version>
                <configuration>
                    <includes>
                        <include>**/*Tests.java</include>
                    </includes>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>