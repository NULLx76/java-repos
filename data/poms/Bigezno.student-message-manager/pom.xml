        <jackson.version>2.5.4</jackson.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>  
        <maven.compiler.encoding>UTF-8</maven.compiler.encoding>  
  </properties>
  
  
  
  <dependencies>
  
 			 <!--单元测试依赖包  -->
		    <dependency>
