	<modelVersion>4.0.0</modelVersion>

	<groupId>AutoTest</groupId>
	<artifactId>GridAutoTest</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>GridAutoTest</name>
	<url>http://maven.apache.org</url>

	<profiles>
		<profile>
			<id>GridAutoTest</id>
		</profile>
	</profiles>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.build.timestamp.format>yyyy_MM_dd_HH_mm_ss</maven.build.timestamp.format>
		<timestamp>${maven.build.timestamp}</timestamp>
		<xmlFileName>diandianInfo.xml</xmlFileName>
	</properties>

	<build>
		<pluginManagement>
			<plugins>

				<plugin>
					<artifactId>maven-resources-plugin</artifactId>
					<configuration>
						<encoding>UTF-8</encoding>
					</configuration>
				</plugin>

				<!-- 添加插件 关联testNg.xml -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-surefire-plugin</artifactId>
					<version>2.19.1</version>
					<configuration>
						<!-- <reportsDirectory>./test-output/${timestamp}</reportsDirectory> -->
						<reportsDirectory>./test-output/html/</reportsDirectory>
						<suiteXmlFiles>
							<!-- 配置要测试的testng的xml文件 -->
							<suiteXmlFile>${xmlFileName}</suiteXmlFile>
						</suiteXmlFiles>
					</configuration>
					
				</plugin>
				
			</plugins>
		</pluginManagement>
	</build>


