    <modules>
        <module>smc-framework-common</module>
        <module>smc-framework-codec</module>
        <module>smc-framework-litecore</module>
        <module>smc-framework-core</module>
        <module>smc-framework-client</module>
        <module>smc-opentsdb-api</module>
        <module>smc-service-example</module>
        <module>smc-service-simpledb</module>
        <module>smc-framework-metricserver</module>
    </modules>

    <scm>
        <connection>scm:git:git@10.10.76.42:framework.git</connection>
        <developerConnection>scm:git:git@10.10.76.42:framework.git</developerConnection>
        <tag>HEAD</tag>
        <!--<url>http://10.10.76.42:81/</url>-->
    </scm>

    <distributionManagement>
        <repository>
            <id>dp-nexus-snapshots</id>
            <name>Nexus Release Repository</name>
            <url>http://svn.k.sohu.com/nexus/content/repositories/releases</url>
        </repository>
        <snapshotRepository>
            <id>dp-nexus-releases</id>
            <name>Nexus Snapshot Repository</name>
            <url>http://svn.k.sohu.com/nexus/content/repositories/snapshots</url>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>

    <repositories>
        <repository>
            <id>nexus-releases</id>
            <name>Nexus Public Repository</name>
            <url>http://svn.k.sohu.com/nexus/content/groups/public</url>
        </repository>
        <repository>
            <id>nexus-snapshots</id>
            <name>Nexus Snapshot Repository</name>
            <url>http://svn.k.sohu.com/nexus/content/groups/snapshot</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <properties>
        <framework.version>1.1-SNAPSHOTS</framework.version>
        <finagle.version>5.3.0</finagle.version>
        <ostrich.version>8.2.1</ostrich.version>
        <netflix.version>1.2.5</netflix.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>commons-logging</groupId>
                <artifactId>commons-logging</artifactId>
                <version>1.1.1</version>
            </dependency>
            <dependency>
                <groupId>log4j</groupId>
                <artifactId>log4j</artifactId>
                <version>1.2.16</version>
            </dependency>
            <!--<dependency>-->
                <!--<groupId>commons-httpclient</groupId>-->
                <!--<artifactId>commons-httpclient</artifactId>-->
                <!--<version>3.1</version>-->
            <!--</dependency>-->
            <!--<dependency>-->
            <!--<groupId>commons-io</groupId>-->
            <!--<artifactId>commons-io</artifactId>-->
