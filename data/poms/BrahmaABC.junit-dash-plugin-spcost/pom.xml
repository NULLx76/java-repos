<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.github.rbuck.dash.nuodb</groupId>
    <artifactId>junit-dash-plugin-spcost</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>spcost</name>
    <url>http://maven.apache.org</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.11</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.github.rbuck</groupId>
            <artifactId>java-retry</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>com.github.rbuck.dash</groupId>
            <artifactId>junit-dash</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <version>3.1</version>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.4</version>
                <executions>
                    <execution>
                        <id>assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>src/main/assembly/assembly.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.17</version>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.maven.surefire</groupId>
                        <artifactId>surefire-junit47</artifactId>
                        <version>2.17</version>
                    </dependency>
                </dependencies>
                <configuration>
                    <argLine>-Xmx1024m</argLine>
                    <systemPropertyVariables>
                        <db.type>nuodb</db.type>
                        <db.pool.type>hikaricp</db.pool.type>
                        <db.name>spcost</db.name>
                        <db.schema>spcost</db.schema>
                        <db.user>dba</db.user>
                        <db.password>dba</db.password>
                        <metrics.service.reporters>csv,console</metrics.service.reporters>
                        <log4j.configuration>file://${project.build.outputDirectory}/logging.properties</log4j.configuration>
                        <log.dir>/tmp/junit-dash/log</log.dir>
                        <workload.mix>50,50</workload.mix>
                        <workload.tag>SPC,LIS</workload.tag>
                        <workload.duration>30</workload.duration>
                        <workload.threads>32</workload.threads>
                        <workload.rates.limit>90000000</workload.rates.limit>
                    </systemPropertyVariables>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
