<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.doctor330.cloud</groupId>
  <artifactId>doctor330-core</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>pom</packaging>
  <modules>
  	<module>core-admin</module>
  	<module>core-business</module>
  	<module>core-common</module>
  	<module>core-remote</module>
  	<module>core-platform</module>
  </modules>
  
  <build>
		<defaultGoal>install</defaultGoal>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<!-- jar包版本属性 -->
	<properties>
		<!-- springMVC spring mybatis版本 -->
		<springframework.version>4.1.9.RELEASE</springframework.version>
		<mybatis.version>3.2.8</mybatis.version>
		<mybatis-spring.version>1.2.3</mybatis-spring.version>
		
		<!-- 数据库及其连接池版本 -->
		<mysql.driver.version>5.1.35</mysql.driver.version>
		<oracle.driver.version>10.2.0.4.0</oracle.driver.version>
		<mssql.driver.version>1.3.1</mssql.driver.version>
		<druid.version>1.0.9</druid.version>
		<c3p0.version>0.9.1.2</c3p0.version>
		<mongodb.version>3.0.3</mongodb.version>
		<spring.data.mongodb.version>1.7.2.RELEASE</spring.data.mongodb.version>
		
		<!-- 缓存框架版本-->
		<ehcache.version>2.6.11</ehcache.version>
		<ehcache-web.version>2.0.4</ehcache-web.version>
		<jedis.version>2.7.3</jedis.version>
		<spring.data.redis.version>1.5.2.RELEASE</spring.data.redis.version>
		
		<!-- dubbo zookeeper版本 -->
		<zookeeper.version>3.4.6</zookeeper.version>
		<dubbo.version>2.5.3</dubbo.version>
		<com.alibaba.version>2.5.3</com.alibaba.version>
		
		<!-- 工作流版本 -->
		<activiti.version>5.21.0</activiti.version>
		
		<!-- 权限版本 -->
		<shiro.version>1.2.3</shiro.version>
		
		<!-- xml、Json 转换版本 -->
		<jackson.version>2.2.3</jackson.version>
		<fastjson.version>1.1.40</fastjson.version>
		<xstream.version>1.4.7</xstream.version>
		
		<!-- 环境配置 JDK版本 、tomcat版本 -->
		<jdk.version>1.8</jdk.version>
		<tomcat.version>2.2</tomcat.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<downloadSources>true</downloadSources>
		<jetty.version>7.6.14.v20131031</jetty.version>
		<webserver.port>8181</webserver.port>
		
		<!-- commons版本 -->
		<slf4j.version>1.7.7</slf4j.version>
		<commons-lang3.version>3.3.2</commons-lang3.version>
		<commons-io.version>2.4</commons-io.version>
		<commons-codec.version>1.9</commons-codec.version>
		<commons-fileupload.version>1.3.1</commons-fileupload.version>
		<commons-beanutils.version>1.9.1</commons-beanutils.version>
		<commons.logging.version>1.1.1</commons.logging.version>
		<commons.pool.version>1.6</commons.pool.version>
		<commons.lang.version>2.6</commons.lang.version>
		
		<!-- 日志版本 -->
		<logback.version>1.1.3</logback.version>
		
		<!-- 测试版本 -->
		<junit.version>4.7</junit.version>
		
		<!-- 前端框架版本 -->
		<freemarker.version>2.3.20</freemarker.version>
		<sitemesh.version>2.4.2</sitemesh.version>
		<validator.version>5.2.4.Final</validator.version>
		
		<!-- 工具包  -->
		<guava.version>17.0</guava.version>
		<dozer.version>5.5.1</dozer.version>
		<poi.version>3.11</poi.version>
		
		<swagger2.version>2.2.2</swagger2.version>
	</properties>
	
	
	<!-- 设定主仓库，按设定顺序进行查找。 -->
	<repositories>
	
		<repository>
			<id>jeesite-repos</id>
			<name>Jeesite Repository</name>
			<url>http://maven.aliyun.com/nexus/content/groups/public</url>
		</repository>
	</repositories>
	
	<!-- 设定插件仓库 -->
	<pluginRepositories> 
	
		<pluginRepository>
			<id>jeesite-repos</id>
			<name>Jeesite Repository</name>
			<url>http://maven.aliyun.com/nexus/content/groups/public</url>
		</pluginRepository>
	</pluginRepositories> 
	
	<distributionManagement>
		<repository>
			<id>nexus-releases</id>
			<name>Nexus Releases repository</name>
			<url>http://repos.doctor330.com/nexus/content/repositories/releases/</url>
		</repository>
		<snapshotRepository>
			<id>nexus-snapshots</id>
			<name>Nexus Snapshots Repository</name>
			<url>http://repos.doctor330.com/nexus/content/repositories/snapshots/</url>
		</snapshotRepository>
	</distributionManagement>
</project>