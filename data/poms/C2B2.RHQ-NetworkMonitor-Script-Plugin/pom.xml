	<groupId>uk.co.c2b2.rhq.plugin</groupId>
	<artifactId>script</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>RHQ Script Plugin</name>
	<description>
      A plugin for managing resources that have command line executables or scripts as their management interface.
	</description>

    <properties>
        <rhq.version>4.7.0</rhq.version>
    </properties>

    <dependencies>

        <dependency>
            <groupId>org.rhq</groupId>
            <artifactId>rhq-core-domain</artifactId>
            <version>${rhq.version}</version>
            <scope>provided</scope> <!-- provided by the agent/plugin-container -->
        </dependency>

        <dependency>
            <groupId>org.rhq</groupId>
            <artifactId>rhq-core-plugin-api</artifactId>
            <version>${rhq.version}</version>
            <scope>provided</scope> <!-- provided by the agent/plugin-container -->
        </dependency>

        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.1</version>
            <scope>provided</scope>
        </dependency>


    </dependencies>

    <build>
      <finalName>rhq-networkmonitor-script-plugin</finalName>
    </build>

</project>
