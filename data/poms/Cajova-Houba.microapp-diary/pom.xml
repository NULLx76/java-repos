<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.microapp</groupId>
    <artifactId>microapp-diary</artifactId>
    <version>0.1</version>
    <packaging>pom</packaging>
    <name>Microapplication - pom</name>

    <prerequisites>
        <maven>2.2.1</maven>
    </prerequisites>


    <modules>
        <module>core</module>
        <module>ui</module>
        <module>membernet-utils</module>
    </modules>

	<properties>
		<log4j.version>2.4</log4j.version>
	</properties>
	
	<repositories>
        <repository>
            <id>yosorep</id>
            <name>Internal Releases</name>
            <url>https://dev.yoso.fi/nexus/content/repositories/releases/</url>
        </repository>
    </repositories>
	
	<dependencies>
		<!-- LOGGING DEPENDENCIES - LOG4J -->
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-api</artifactId>
			<version>${log4j.version}</version>
		</dependency>
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-core</artifactId>
			<version>${log4j.version}</version>
		</dependency>
		
		
		<!-- joda date time -->
		<dependency>
			<groupId>joda-time</groupId>
			<artifactId>joda-time</artifactId>
			<version>2.9.3</version>
		</dependency>
	</dependencies>

</project>