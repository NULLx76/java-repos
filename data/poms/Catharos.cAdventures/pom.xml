<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>net.catharos.adventures</groupId>
	<artifactId>cAdventures</artifactId>
	<packaging>jar</packaging>

	<version>0.1-SNAPSHOT</version>
	<name>cAdventures</name>
	<url>http://www.catharos.de</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<!-- Add bukkit repository -->
	<repositories>
		<repository>
			<id>bukkit</id>
			<url>http://repo.bukkit.org/content/groups/public/</url>
		</repository>
		
		<repository>
			<id>clib</id>
			<url>http://catharos.de:8080/plugin/repository/everything/</url>
		</repository>
                		
		<repository>
			<id>comphenix-rep</id>
			<name>Comphenix Repository</name>
			<url>http://repo.comphenix.net/content/groups/public</url>
		</repository>
		
		<repository>
			<id>citizens</id>
			<url>http://repo.citizensnpcs.com</url>
		</repository>
	</repositories>
	
	<!-- Add dependencies -->
	<dependencies>
		<dependency>
			<groupId>org.bukkit</groupId>
			<artifactId>bukkit</artifactId>
			<version>1.4.5-R0.3-SNAPSHOT</version>
		</dependency>
		
		<dependency>
			<groupId>net.catharos.clib</groupId>
			<artifactId>cLib</artifactId>
			<version>1.0.2-SNAPSHOT</version>
		</dependency>
		
		<dependency>
			<groupId>com.comphenix.protocol</groupId>
			<artifactId>ProtocolLib</artifactId>
			<version>2.1.0</version>
		</dependency>
		
		<dependency>
			<groupId>net.citizensnpcs</groupId>
			<artifactId>citizensapi</artifactId>
			<version>2.0.7-SNAPSHOT</version>
		</dependency>
		
		<dependency>
			<groupId>net.aufdemrand</groupId>
			<artifactId>denizen</artifactId>
			<version>0.8-PRERELEASE</version>
		</dependency>
	</dependencies>

	<!-- Add resource files -->
	<build>
		<defaultGoal>clean install</defaultGoal>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
	</build>
</project>