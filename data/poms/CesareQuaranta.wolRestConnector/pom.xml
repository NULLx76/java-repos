    <finalName>wolRstConnector</finalName>
    <plugins>
	    <plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-compiler-plugin</artifactId>
			<version>3.1</version>
			<configuration>
				<source>1.8</source>
				<target>1.8</target>
			</configuration>
		</plugin>
		<plugin>
		  <groupId>org.apache.maven.plugins</groupId>
		    <artifactId>maven-jar-plugin</artifactId>
		    <version>2.6</version>
		        <configuration>
		          <archive>
		            <index>true</index>
		            <manifest>
		              <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
		                <addClasspath>true</addClasspath>
		            </manifest>
		            <manifestEntries>
		              <mode>development</mode>
		              <url>${project.url}</url>
		              <key>value</key>
		            </manifestEntries>
		          </archive>
		    </configuration>
	    </plugin>
	</plugins>
