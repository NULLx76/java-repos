<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion><!-- 指定了当前POM模型的版本，对应Maven2和Maven3来说，它只能是4.0.0 -->
  <groupId>cherry-uec-cloudplatform</groupId><!-- 定义了项目所在组，这个组往往和项目所在的公司或组织关联 -->
  <artifactId>cherry-uec-cloudplatform</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>cherry-uec-cloudplatform</name>
  <description>uec云平台</description>
  
  <!-- 子模块 -->
  <modules>
  	<module>cherry-infrastructure</module>
  	<module>cherry-springmvc-demo</module>
  </modules>
  
  <!-- 属性 -->
  <properties>
  	<!-- 定义junit的版本 -->
  	<junit.version>4.12</junit.version>
  	<!-- 定义log4j的版本 -->
  	<log4j.version>1.2.17</log4j.version>
  	<!-- 定义servlet的版本 -->
  	<servlet-api.version>3.1.0</servlet-api.version>
  	<!-- 定义jsp的版本 -->
  	<servlet.jsp-api.version>2.3.1</servlet.jsp-api.version>
  	<!-- 定义spring的版本 -->
  	<spring.version>4.2.3.RELEASE</spring.version>
  	<jstl.version>1.2</jstl.version>
  </properties>
</project>