            <artifactId>eve</artifactId>
            <version>${version.fishbowl}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.fbi</groupId>
            <artifactId>eve-commons</artifactId>
            <version>${version.fishbowl}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
