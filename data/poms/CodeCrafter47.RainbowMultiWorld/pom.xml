<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>codecrafter47</groupId>
    <artifactId>MultiWorld</artifactId>
    <version>1.12.2-SNAPSHOT</version>

    <repositories>
        <repository>
            <id>bungeecord-repo</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
        </repository>
        <repository>
            <id>codecrafter47-repo</id>
            <url>http://nexus.codecrafter47.dyndns.eu/content/repositories/public/</url>
        </repository>
        <repository>
            <id>sponge-repo</id>
            <url>http://repo.spongepowered.org/maven</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>codecrafter47-repo</id>
            <url>http://nexus.codecrafter47.de/content/repositories/public/</url>
        </pluginRepository>
        <pluginRepository>
            <id>sponge-repo</id>
            <url>http://repo.spongepowered.org/maven</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <minecraft.version>1.12.2</minecraft.version>
        <rainbow.version>1.12.2-SNAPSHOT</rainbow.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.projectrainbow</groupId>
            <artifactId>rainbow</artifactId>
            <version>${rainbow.version}</version>
            <scope>provided</scope>
            <exclusions>
                <exclusion>
                    <groupId>org.projectrainbow</groupId>
                    <artifactId>minecraft-server</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>codecrafter47.multiworld</groupId>
            <artifactId>minecraft-server</artifactId>
            <version>${minecraft.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>codecrafter47.multiworld</groupId>
            <artifactId>minecraft-server-obfuscated</artifactId>
            <version>${minecraft.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>1.16.12</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.spongepowered</groupId>
            <artifactId>mixin</artifactId>
            <version>0.6.9-SNAPSHOT</version>
            <scope>provided</scope>
            <exclusions>
                <exclusion>
                    <groupId>com.googlecode.jarjar</groupId>
                    <artifactId>jarjar</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.ow2.asm</groupId>
                    <artifactId>asm-commons</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>net.minecraft</groupId>
                    <artifactId>launchwrapper</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

    <build>
        <defaultGoal>initialize clean install</defaultGoal>
        <finalName>${project.name}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.5</version>
                <configuration>
                    <compilerArgs>
                        <compilerArg>-AdefaultObfuscationEnv=notch</compilerArg>
                        <compilerArg>-AreobfNotchSrgFile=${project.basedir}/mapping-reverse.srg</compilerArg>
                        <compilerArg>-AoutNotchSrgFile=${project.basedir}/target/mixin.srg</compilerArg>
                        <compilerArg>-AoutRefMapFile=multiworld.mixin.refmap.json</compilerArg>
                    </compilerArgs>
                    <showDeprecation>true</showDeprecation>
                    <showWarnings>true</showWarnings>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.6</version>
                <configuration>
                    <forceCreation>true</forceCreation>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>2.4.3</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <transformers>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <manifestEntries>
                                        <TweakClass>
                                            org.spongepowered.asm.launch.MixinTweaker
                                        </TweakClass>
                                        <MixinConfigs>MultiWorld/mixins.json</MixinConfigs>
                                    </manifestEntries>
                                </transformer>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.googlecode.maven-download-plugin</groupId>
                <artifactId>download-maven-plugin</artifactId>
                <version>1.2.1</version>
                <executions>
                    <execution>
                        <id>download-minecraft-server</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>
                                https://s3.amazonaws.com/Minecraft.Download/versions/${minecraft.version}/minecraft_server.${minecraft.version}.jar
                            </url>
                            <unpack>false</unpack>
                            <outputDirectory>
                                ${project.build.directory}
                            </outputDirectory>
                            <md5>71728ed3fbd0acd1394bf3ade2649a5c</md5>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>2.5.2</version>
                <executions>
                    <execution>
                        <phase>initialize</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <createChecksum>true</createChecksum>
                            <groupId>codecrafter47.multiworld</groupId>
                            <artifactId>minecraft-server-obfuscated</artifactId>
                            <version>${minecraft.version}</version>
                            <packaging>jar</packaging>
                            <file>${project.build.directory}/minecraft_server.${minecraft.version}.jar</file>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>net.md-5</groupId>
                <artifactId>specialsource-maven-plugin</artifactId>
                <version>1.2.1-CodeCrafter47-6-SNAPSHOT</version>
                <executions>
                    <execution>
                        <phase>initialize</phase>
                        <goals>
                            <goal>install-remapped-file</goal>
                        </goals>
                        <configuration>
                            <srgIn>${project.basedir}/mapping.srg</srgIn>
                            <createChecksum>true</createChecksum>
                            <groupId>codecrafter47.multiworld</groupId>
                            <artifactId>minecraft-server</artifactId>
                            <version>${minecraft.version}</version>
                            <packaging>jar</packaging>
                            <inJars>
                                <inJar>
                                    ${project.build.directory}/minecraft_server.${minecraft.version}.jar
                                </inJar>
                            </inJars>
                            <outputDirectory>${project.build.directory}
                            </outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>reobfuscate</id>
                        <phase>package</phase>
                        <goals>
                            <goal>remap</goal>
                        </goals>
                        <configuration>
                            <srgIn>${project.basedir}/mapping-reverse.srg
                            </srgIn>
                            <extraSrgs>
                                <srg>${project.basedir}/target/mixin.srg</srg>
                            </extraSrgs>
                            <remappedDependencies>
                                <remappedDependency>
                                    codecrafter47.multiworld:minecraft-server:${minecraft.version}:jar
                                </remappedDependency>
                            </remappedDependencies>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>

    </build>

</project>
