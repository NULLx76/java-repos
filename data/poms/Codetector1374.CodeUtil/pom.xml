<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>cn.codetector</groupId>
    <artifactId>util</artifactId>
    <version>1.5.1-SNAPSHOT</version>

    <name>${project.groupId}:${project.artifactId}</name>
    <description>Utility for Java daily programming</description>
    <url>https://github.com/Codetector1374/CodeUtil</url>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-math</artifactId>
            <version>2.2</version>
        </dependency>
        <dependency>
            <groupId>com.googlecode.json-simple</groupId>
            <artifactId>json-simple</artifactId>
            <version>1.1.1</version>
        </dependency>
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>2.7</version>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <version>19.0</version>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <licenses>
        <license>
            <name>MIT License</name>
            <url>http://www.opensource.org/licenses/mit-license.php</url>
        </license>
    </licenses>
    <developers>
        <developer>
            <name>Codetector</name>
            <email>codetector@codetector.cn</email>
            <organization>Guardian Technologies</organization>
            <organizationUrl>http://codetector.cn</organizationUrl>
        </developer>
    </developers>

    <distributionManagement>
        <repository>
            <id>codetectorRepo</id>
            <url>http://nexus.codetector.cn/repository/codetector/</url>
        </repository>
        <snapshotRepository>
            <id>codetectorRepo</id>
            <url>http://nexus.codetector.cn/repository/codetector-staging/</url>
        </snapshotRepository>
    </distributionManagement>
</project>