		</dependency>
		<dependency>
			<groupId>blogspot.software-and-algorithms</groupId>
			<artifactId>stern-library</artifactId>
			<version>0.1</version>
		</dependency>
		<dependency>
			<groupId>org.vafer</groupId>
			<artifactId>jdeb</artifactId>
			<version>1.3</version>
			<!-- Prevents jar bloat in final package -->
			<scope>provided</scope>
		</dependency>
	</dependencies>

</project>
