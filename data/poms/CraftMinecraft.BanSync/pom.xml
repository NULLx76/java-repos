<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <groupId>com.craftminecraft.bansync</groupId>
    <artifactId>BanSync</artifactId>
    <version>1.0-b${build.number}</version>
    <name>Ban Sync</name>
    <url>http://dev.craftminecraft.net/</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <bukkit.version>1.6.4-R0.1-SNAPSHOT</bukkit.version>
    </properties>

    <repositories>
        <repository>
            <id>Craftminecraft Repo</id>
            <url>http://repo.craftminecraft.net/content/groups/public/</url>
        </repository>
        <repository>
            <id>vault-repo</id>
            <url>http://ci.herocraftonline.com/plugin/repository/everything</url>
        </repository>
        <repository>
            <id>project.local</id>
            <name>Project Repository</name>
            <url>file:${project.basedir}/lib</url>
        </repository>
	<repository>
            <id>sk89q-repo</id>
            <url>http://maven.sk89q.com/repo/</url>
	</repository>
    </repositories>
    
    <dependencies>
        <dependency>
            <groupId>org.bukkit</groupId>
            <artifactId>bukkit</artifactId>
            <version>${bukkit.version}</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.greifcraft</groupId>
            <artifactId>LWC</artifactId>
            <version>4.3.1</version>
            <scope>system</scope>
            <optional>true</optional>
            <systemPath>${project.basedir}/lib/LWC-4.4.0.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>PlotMe</groupId>
            <artifactId>PlotMe</artifactId>
            <version>0.13b</version>
            <scope>system</scope>
            <optional>true</optional>
            <systemPath>${project.basedir}/lib/PlotMe.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>GriefPrevention</groupId>
            <artifactId>GriefPrevention</artifactId>
            <version>7.7</version>
            <scope>system</scope>
            <optional>true</optional>
            <systemPath>${project.basedir}/lib/GriefPrevention.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>Essentials</groupId>
            <artifactId>Essentials</artifactId>
            <version>2.12.1</version>
            <scope>system</scope>
            <optional>true</optional>
            <systemPath>${project.basedir}/lib/Essentials.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>net.milkbowl.vault</groupId>
            <artifactId>Vault</artifactId>
            <version>1.2.27-SNAPSHOT</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>com.sk89q</groupId>
            <artifactId>worldguard</artifactId>
            <version>5.8.1-SNAPSHOT</version>
            <optional>true</optional>
        </dependency>
    </dependencies>
    
    <build>
        <resources>
            <resource>
                <targetPath>.</targetPath>
                <directory>${basedir}/src/main/resources/</directory>
                <filtering>true</filtering>
                <includes>
                    <include>plugin.yml</include>
                </includes>
            </resource>
            <resource>
                <targetPath>.</targetPath>
                <directory>${basedir}/</directory>
                <filtering>false</filtering>
                <includes>
                    <include>README.md</include>
                </includes>
            </resource>
        </resources>
        
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <showDeprecation>true</showDeprecation>
                </configuration>
            </plugin>
		</plugins>
    </build>
</project>
