      </exclusions>
      <optional>true</optional>
    </dependency>


    <!-- *************** Misc *************** -->

	<dependency>
		<groupId>org.jasypt</groupId>
		<artifactId>jasypt</artifactId>
		<version>1.8</version>
	</dependency>

    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
      <version>13.0.1</version>
    </dependency>

    <dependency>
      <groupId>joda-time</groupId>
