<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0                       http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.justgiving.raven.kissmetrics</groupId>
    <artifactId>raven-kissmetrics-parser</artifactId>
    <version>1.0</version>
    <packaging>jar</packaging>
    <url>https://github.com/JustGiving</url>
    <name>raven-kissmetrics-parser</name>
    <licenses>
        <license>
            <name>Apache License 2</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
			<comments>Copyright (c) 2014-2015 Giving.com, trading as JustGiving or its affiliates. All Rights Reserved.</comments>
        </license>
    </licenses>
    <properties>
        <encoding>UTF-8</encoding>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <jdk.version>1.7</jdk.version>
        <hadoop-core.version>2.4.0</hadoop-core.version>
        <junit.version>4.8.1</junit.version>
    </properties>
    <dependencies>
        <dependency>
            <groupId>org.apache.hadoop</groupId>
            <artifactId>hadoop-client</artifactId>
            <version>${hadoop-core.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.hadoop</groupId>
            <artifactId>hadoop-auth</artifactId>
            <version>${hadoop-core.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.mrunit</groupId>
            <artifactId>mrunit</artifactId>
            <version>1.1.0</version>
            <classifier>hadoop2</classifier>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-all</artifactId>
            <version>1.1</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.skyscreamer</groupId>
            <artifactId>jsonassert</artifactId>
            <version>1.2.3</version>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>3.3.2</version>
        </dependency>
        <dependency>
            <groupId>com.googlecode.json-simple</groupId>
            <artifactId>json-simple</artifactId>
            <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>commons-codec</groupId>
            <artifactId>commons-codec</artifactId>
            <version>1.9</version>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.17</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <finalName>open-${artifactId}-${version}</finalName>
                    <useTransitiveDependencies>false</useTransitiveDependencies>
                    <finalName>open-${project.artifactId}-${project.version}</finalName>
                    <!-- uncomment minimizeJar to minimise JAR size-->
                    <!--
					<generateUniqueDependencyReducedPom>true</generateUniqueDependencyReducedPom>
                    <keepDependenciesWithProvidedScope>false</keepDependenciesWithProvidedScope>
                    <shadedArtifactAttached>false</shadedArtifactAttached>
                    <minimizeJar>true</minimizeJar>
					-->
                    <!--
					<excludes>
                        <exclude>assets*</exclude>
                    </excludes>
                    <shadedClassifierName>shaded</shadedClassifierName>
                    <packagingExcludes>WEB-INF/lib/*.jar</packagingExcludes>
                    <packagingExcludes>assets</packagingExcludes>
                    <instrumentation>
                        <excludes>
                            <exclude>assets</exclude>
                            <exclude>**/javassist/*</exclude>
                        </excludes>
                    </instrumentation> -->
                    <artifactSet>
                        <excludes>
                            <exclude>classworlds:classworlds</exclude>
                            <exclude>junit:junit</exclude>
                            <exclude>junit-addons:junit-addons</exclude>
                            <exclude>jmock:*</exclude>
                            <exclude>*:pom:*</exclude>
                            <exclude>*:maven*:*</exclude>
                            <exclude>*:xml-apis</exclude>
                            <exclude>org.apache.maven:lib:tests</exclude>
                            <exclude>commons-net:commons-net</exclude>
                            <exclude>javax.xml.stream:stax-api</exclude>
                            <exclude>javax.ws.rs:javax.ws.rs-api</exclude>
                            <exclude>javax.annotation*</exclude>
                            <exclude>org.codehaus*</exclude>
                            <exclude>org.javassist:javassist:jar</exclude>
                            <exclude>commons-logging:commons-logging:jar</exclude>
                            <exclude>org.apache.mrunit:mrunit:jar</exclude>
                            <exclude>org.apache.commons:commons-compress:jar</exclude>
                            <exclude>commons-beanutils:commons-beanutils-core:jar</exclude>
                            <exclude>commons-digester:commons-digester:jar</exclude>
                            <exclude>commons-cli:commons-cli:jar</exclude>
                            <exclude>org.apache.commons:commons-math3:jar</exclude>
                            <exclude>xmlenc:xmlenc:jar</exclude>
                            <exclude>commons-httpclient:commons-httpclient:jar</exclude>
                            <exclude>commons-collections:commons-collections:jar</exclude>
                            <exclude>commons-configuration:commons-configuration:jar</exclude>
                            <exclude>commons-digester:commons-digester:jar</exclude>
                            <exclude>commons-beanutils:commons-beanutils:jar</exclude>
                            <exclude>com.google.protobuf*</exclude>
                            <exclude>com.google.guava:guava:jar</exclude>
                            <exclude>com.google.code.findbugs</exclude>
                            <exclude>com.google.common.annotations*</exclude>
                            <exclude>com.google.common.base*</exclude>
                            <exclude>com.google.common.cache*</exclude>
                            <exclude>com.google.common.collect*</exclude>
                            <exclude>com.google.common.eventbus*</exclude>
                            <exclude>com.google.common.hash*</exclude>
                            <exclude>com.google.common.hash*</exclude>
                            <exclude>com.sun*</exclude>
                            <exclude>com.thoughtworks*</exclude>
                            <exclude>org.apache.commons.beanutils*</exclude>
                            <exclude>org.apache.commons.cli*</exclude>
                            <exclude>org.apache.commons.collections*</exclude>
                            <exclude>org.apache.commons.compress*</exclude>
                            <exclude>org.apache.commons.configuration*</exclude>
                            <exclude>org.apache.commons.io*</exclude>
                            <exclude>org.apache.commons.math3*</exclude>
                            <exclude>org.apache.commons.math3.exception*</exclude>
                            <exclude>org.apache.commons.digester*</exclude>
                            <exclude>org.apache.commons.httpclient*</exclude>
                            <exclude>org.apache.commons.beanutils*</exclude>
                            <exclude>org.apache.avro*</exclude>
                            <exclude>org.apache.hadoop.mrunit*</exclude>
                            <exclude>org.apache.http*</exclude>
                            <exclude>org.apache.jute*</exclude>
                            <exclude>org.apache.zookeeper*</exclude>
                            <exclude>org.mockito*</exclude>
                            <exclude>org.mortbay*</exclude>
                            <exclude>org.objenesis*</exclude>
                            <exclude>org.powermock*</exclude>
                            <exclude>org.hamcrest*</exclude>
                            <exclude>org.skyscreamer*</exclude>
                            <exclude>org.slf4j*</exclude>
                            <exclude>org.tukaani*</exclude>
                            <exclude>org.xerial*</exclude>
                            <exclude>org.znerd*</exclude>
                            <exclude>org.znerd.xmlenc*</exclude>
                            <exclude>javax.*</exclude>
                            <exclude>assets*</exclude>
                            <exclude>javassist*</exclude>
                            <exclude>webapps*</exclude>
                        </excludes>
                    </artifactSet>
                    <filters>
                        <filter>
                            <artifact>*:*</artifact>
                            <excludes>
                                <exclude>META-INF/*</exclude>
                            </excludes>
                        </filter>
                    </filters>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <repositories>
        <repository>
            <id>cdh.repo</id>
            <url>https://repository.cloudera.com/artifactory/cloudera-repos</url>
            <name>Cloudera Repositories</name>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>cdh.snapshots.repo</id>
            <url>https://repository.cloudera.com/artifactory/libs-snapshot-local</url>
            <name>Cloudera Snapshots Repository</name>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>false</enabled>
            </releases>
        </repository>
        <repository>
            <id>central</id>
            <url>http://repo1.maven.org/maven2/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>
</project>