<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <packaging>war</packaging>
    <groupId>diesel.TestAgent</groupId>
    <artifactId>TestAgent</artifactId>
    <version>1.0</version>
    <dependencies>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.5</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>
        
        <!-- Core calypso -->
        <dependency>      
            <groupId>com.calypso</groupId>
            <artifactId>calypso</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/calypso.jar</systemPath>
        </dependency>
        <dependency>      
            <groupId>com.calypso</groupId>
            <artifactId>core</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/calypso-core.jar</systemPath>
        </dependency>
        <dependency>      
            <groupId>com.calypso</groupId>
            <artifactId>logging</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/calypso-logging.jar</systemPath>
        </dependency> 
        <dependency>      
            <groupId>com.calypso</groupId>
            <artifactId>calypso-ml</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/calypsoml-core.jar</systemPath>
        </dependency> 
        <dependency>      
            <groupId>com.calypso</groupId>
            <artifactId>calypso-ml-core</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/calypsoml-impl.jar</systemPath>
        </dependency> 
        
        <!-- Open source supporting libraries --> 
        <dependency>      
            <groupId>xalan</groupId>
            <artifactId>xalan</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/xalan-2.6.0.jar</systemPath>
        </dependency> 
        <dependency>      
            <groupId>com.thoughtworks</groupId>
            <artifactId>xstream</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/xstream.jar</systemPath>
        </dependency> 
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.14</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/log4j.jar</systemPath>
        </dependency>
        <dependency>      
            <groupId>xpp3</groupId>
            <artifactId>xpp3</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/xpp3.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
            <version>3.2.1</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/commons-collections-3.1.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>jsr166y</groupId>
            <artifactId>concurrentweakhashmap</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/concurrentweakhashmap.jar</systemPath>
        </dependency> 
        <dependency>
            <groupId>json</groupId>
            <artifactId>json</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/javax.json-1.0.4.jar</systemPath>
        </dependency> 
        
        <!-- JAXB -->
        <dependency>
            <groupId>jaxb-activation</groupId>
            <artifactId>jaxb-activation</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/jaxb2/activation.jar</systemPath>
        </dependency> 
        <dependency>
            <groupId>jaxb-impl1</groupId>
            <artifactId>jaxb-impl1</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/jaxb2/jaxb1-impl.jar</systemPath>
        </dependency> 
        <dependency>
            <groupId>jaxb-impl</groupId>
            <artifactId>jaxb-impl</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/jaxb2/jaxb-impl.jar</systemPath>
        </dependency> 
        <dependency>
            <groupId>jaxb-api</groupId>
            <artifactId>jaxb-api</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/jaxb2/jaxb-api.jar</systemPath>
        </dependency> 
        <dependency>
            <groupId>jaxb-jsr</groupId>
            <artifactId>jaxb-jsr</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/jaxb2/jsr173_1.0_api.jar</systemPath>
        </dependency> 
        
        <!-- more open source stuff -->
        <dependency>
            <groupId>dom4j</groupId>
            <artifactId>dom4j</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/dom4j-1.6.1.jar</systemPath>
        </dependency> 
        <dependency>
            <groupId>jide-grids</groupId>
            <artifactId>jide-grids</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/jide-grids.jar</systemPath>
        </dependency> 
        <dependency>
            <groupId>jide-common</groupId>
            <artifactId>jide-common</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/jide-common.jar</systemPath>
        </dependency> 
        
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/${project.build.finalName}/WEB-INF/lib</outputDirectory>
                            <includeScope>system</includeScope>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>maven-jetty-plugin</artifactId>
                <version>6.1.24</version>
                <configuration>
                    <webAppConfig>   
                        <contextPath>/test-agent</contextPath>   
                    </webAppConfig>  

                    <scanIntervalSeconds>10</scanIntervalSeconds>
                    <connectors>
                        <connector implementation="org.mortbay.jetty.nio.SelectChannelConnector">
                            <port>8080</port>
                            <maxIdleTime>60000</maxIdleTime>
                        </connector>
                    </connectors> 

                </configuration>
            </plugin>
        </plugins>
    </build>
</project>