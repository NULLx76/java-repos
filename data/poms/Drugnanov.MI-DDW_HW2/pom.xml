<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>cz.slama.school.ddw.hw2</groupId>
  <artifactId>ddw_2_hw_datamining</artifactId>
  <packaging>war</packaging>
  <version>${version}</version>
  <name>ddw_2_hw_datamining</name>

  <properties>
    <version>0.0.0.1</version>
    <project.module.version>01</project.module.version>
    <project.timestamp>${maven.build.timestamp}</project.timestamp>
    <project.java.version>1.8</project.java.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.jetty.port>9393</maven.jetty.port>
    <spring.version>4.2.4.RELEASE</spring.version>
    <artefact.jquery.version>2.2.0</artefact.jquery.version>
    <artefact.bootstrap.version>3.3.6</artefact.bootstrap.version>
    <artefact.datatables.version>1.10.10</artefact.datatables.version>
    <artefact.tiles.version>3.0.5</artefact.tiles.version>
    <artefact.logback.version>1.1.3</artefact.logback.version>
    <artefact.slf4j.version>1.7.12</artefact.slf4j.version>
    <artefact.jstl.version>1.2</artefact.jstl.version>
    <artefact.jsp-api.version>2.1</artefact.jsp-api.version>
    <artefact.servlet-api.version>3.0.1</artefact.servlet-api.version>
    <artefact.javax.validation.version>1.1.0.Final</artefact.javax.validation.version>
    <artefact.hibernate.validation.version>5.2.3.Final</artefact.hibernate.validation.version>
  </properties>

  <build>
    <finalName>${project.artifactId}-${project.version}</finalName>
    <resources>
      <!-- Pouze properties soubory, které jsou konvertovány pomocí native2ascii  -->
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>**/*.properties</include>
        </includes>
        <filtering>true</filtering>
        <targetPath>../processed-resources</targetPath>
      </resource>
      <resource>
        <directory>src/main/resources</directory>
        <excludes>
          <exclude>**/.svn</exclude>
          <exclude>**/.svn/**</exclude>
          <exclude>**/_svn</exclude>
          <exclude>_svn</exclude>
          <exclude>**/_svn/**</exclude>
        </excludes>
      </resource>
    </resources>
    <plugins>
      <!-- JAXB -->
      <!--<plugin>-->
        <!--<groupId>org.codehaus.mojo</groupId>-->
        <!--<artifactId>jaxb2-maven-plugin</artifactId>-->
        <!--<version>1.6</version>-->
        <!--<executions>-->
          <!--<execution>-->
            <!--<id>DDW-HW2</id>-->
            <!--<goals>-->
              <!--<goal>xjc</goal>-->
            <!--</goals>-->
            <!--<configuration>-->
              <!--<outputDirectory>${project.build.directory}/generated-sources/jaxb</outputDirectory>-->
              <!--<packageName>cz.slama.school.ddw.hw2.generated.associativeRules</packageName>-->
              <!--<wsdl>false</wsdl>-->
              <!--<xmlschema>true</xmlschema>-->
              <!--<schemaDirectory>src/main/resources/xsd</schemaDirectory>-->
              <!--<schemaFiles>associativeRules.xsd</schemaFiles>-->
              <!--<extension>true</extension>-->
              <!--<clearOutputDir>false</clearOutputDir>-->
            <!--</configuration>-->
          <!--</execution>-->
        <!--</executions>-->
      <!--</plugin>-->
      <plugin>
        <groupId>biz.gabrys.maven.plugins</groupId>
        <artifactId>lesscss-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>compile-less</id>
            <phase>process-sources</phase>
            <goals>
              <goal>compile</goal>
            </goals>
            <configuration>
              <sourceDirectory>${project.basedir}/src/main/less</sourceDirectory>
              <outputDirectory>${project.basedir}/src/main/webapp/static/common/css</outputDirectory>
              <outputFileFormat>{fileName}.min.css</outputFileFormat>
              <includes>
                <include>bootstrap.less</include>
              </includes>
              <compress>true</compress>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>native2ascii-maven-plugin</artifactId>
        <version>1.0-alpha-1</version>
        <executions>
          <execution>
            <id>native2ascii-utf8-resources</id>
            <phase>compile</phase>
            <goals>
              <goal>native2ascii</goal>
            </goals>
            <configuration>
              <src>target/processed-resources</src>
              <includes>**/*.properties</includes>
              <encoding>${project.build.sourceEncoding}</encoding>
              <dest>target/classes</dest>
            </configuration>
          </execution>
        </executions>
        <!-- For Java 7+ compilation: -->
        <dependencies>
          <dependency>
            <groupId>com.sun</groupId>
            <artifactId>tools</artifactId>
            <version>1.5.0</version>
            <scope>system</scope>
            <systemPath>${java.home}/../lib/tools.jar</systemPath>
          </dependency>
        </dependencies>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.3</version>
        <configuration>
          <source>${project.java.version}</source>
          <target>${project.java.version}</target>
          <encoding>${project.build.sourceEncoding}</encoding>
          <debug>true</debug>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.6</version>
        <configuration>
          <archive>
            <manifestEntries>
              <Weblogic-Application-Version>${pom.version}</Weblogic-Application-Version>
              <Specification-Title>${pom.name}</Specification-Title>
              <Specification-Version>${pom.version}</Specification-Version>
              <Specification-Vendor>${pom.organization.name}</Specification-Vendor>
              <Implementation-Title>${pom.name}</Implementation-Title>
              <Implementation-Version>${pom.version}</Implementation-Version>
              <Implementation-Vendor>${pom.organization.name}</Implementation-Vendor>
              <Obelisk-Version>${pom.version}</Obelisk-Version>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.6</version>
        <configuration>
          <archive>
            <manifestEntries>
              <Weblogic-Application-Version>${pom.version}</Weblogic-Application-Version>
              <Specification-Title>${pom.name}</Specification-Title>
              <Specification-Version>${pom.version}</Specification-Version>
              <Specification-Vendor>${pom.organization.name}</Specification-Vendor>
              <Implementation-Title>${pom.name}</Implementation-Title>
              <Implementation-Version>${pom.version}</Implementation-Version>
              <Implementation-Vendor>${pom.organization.name}</Implementation-Vendor>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>properties-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>set-system-properties</goal>
            </goals>
            <configuration>
              <properties>
                <!-- makes Jetty log the exception if it fails to initialize SLF4J -->
                <property>
                  <name>org.eclipse.jetty.util.log.IGNORED</name>
                  <value>true</value>
                </property>
                <!-- location of Jetty configuration file -->
                <property>
                  <name>logback.configurationFile</name>
                  <value>${basedir}/src/main/resources/logback.xml</value>
                </property>
              </properties>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.mortbay.jetty</groupId>
        <artifactId>jetty-maven-plugin</artifactId>
        <configuration>
          <scanIntervalSeconds>0</scanIntervalSeconds>
          <stopKey>stop</stopKey>
          <stopPort>1${maven.jetty.port}</stopPort>
          <webApp>
            <contextPath>/${project.artifactId}</contextPath>
            <jettyEnvXml>${basedir}/src/main/resources/jetty-env.xml</jettyEnvXml>
          </webApp>
          <connectors>
            <connector implementation="org.eclipse.jetty.server.nio.SelectChannelConnector">
              <port>${maven.jetty.port}</port>
              <maxIdleTime>60000</maxIdleTime>
            </connector>
          </connectors>
        </configuration>
        <dependencies>
          <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>${artefact.slf4j.version}</version>
          </dependency>
          <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <version>${artefact.logback.version}</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <!-- 3rd party dependencies -->
    <dependency>
      <groupId>ch.qos.logback</groupId>
      <artifactId>logback-classic</artifactId>
      <version>${artefact.logback.version}</version>
