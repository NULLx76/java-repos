<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>com.dotdevcorp.android</groupId>
	<artifactId>money-manager</artifactId>

	<version>1.0.0-SNAPSHOT</version>
	<packaging>apk</packaging>
	<name>money-manager</name>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<repositories>
		<repository>
			<id>central</id>
			<url>http://repo1.maven.org/maven2</url>
		</repository>
		<repository>
			<id>jcenter-bintray</id>
			<url>https://jcenter.bintray.com/</url>
		</repository>
		<repository>
			<id>android-m2</id>
			<url>file://${env.SDK_HOME}/extras/android/m2repository/</url>
		</repository>
	</repositories>

	<dependencies>
		<!-- Android -->
		<dependency>
			<groupId>com.android.support</groupId>
			<artifactId>support-v4</artifactId>
			<version>22.2.1</version>
			<type>aar</type>
		</dependency>
		<dependency>
			<groupId>com.android.support</groupId>
			<artifactId>appcompat-v7</artifactId>
			<version>22.2.1</version>
			<type>aar</type>
		</dependency>
		<dependency>
			<groupId>com.android.support</groupId>
			<artifactId>cardview-v7</artifactId>
			<version>22.2.1</version>
			<type>aar</type>
		</dependency>

		<!-- Libs -->
		<dependency>
			<groupId>com.blunderer</groupId>
			<artifactId>materialdesignlibrary</artifactId>
			<version>2.0.4</version>
			<type>aar</type>
			<exclusions>
				<exclusion>
					<groupId>com.android.support</groupId>
					<artifactId>support-v4</artifactId>
				</exclusion>
				<exclusion>
					<groupId>com.android.support</groupId>
					<artifactId>appcompat-v7</artifactId>
				</exclusion>
				<exclusion>
					<groupId>com.android.support</groupId>
					<artifactId>cardview-v7</artifactId>
				</exclusion>
				<exclusion>
					<groupId>com.joooonho</groupId>
					<artifactId>selectableroundedimageview</artifactId>
				</exclusion>
				<exclusion>
					<groupId>com.astuetz</groupId>
					<artifactId>pagerslidingtabstrip</artifactId>
				</exclusion>
				<exclusion>
					<groupId>tk.zielony</groupId>
					<artifactId>carbon</artifactId>
				</exclusion>
				<exclusion>
					<groupId>fr.baloomba</groupId>
					<artifactId>viewpagerindicator</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

		<dependency>
			<groupId>com.joooonho</groupId>
			<artifactId>selectableroundedimageview</artifactId>
			<version>1.0.1</version>
			<type>aar</type>
		</dependency>
		<dependency>
			<groupId>com.astuetz</groupId>
			<artifactId>pagerslidingtabstrip</artifactId>
			<version>1.0.1</version>
			<type>aar</type>
			<exclusions>
				<exclusion>
					<groupId>com.android.support</groupId>
					<artifactId>support-v4</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>tk.zielony</groupId>
			<artifactId>carbon</artifactId>
			<version>0.6.0</version>
			<type>aar</type>
			<exclusions>
				<exclusion>
					<groupId>com.android.support</groupId>
					<artifactId>appcompat-v7</artifactId>
				</exclusion>
				<exclusion>
					<groupId>com.android.support</groupId>
					<artifactId>support-v4</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>fr.baloomba</groupId>
			<artifactId>viewpagerindicator</artifactId>
			<version>2.4.2</version>
			<type>aar</type>
			<exclusions>
				<exclusion>
					<groupId>com.android.support</groupId>
					<artifactId>support-v4</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
	</dependencies>

	<build>
		<finalName>${project.artifactId}</finalName>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>com.jayway.maven.plugins.android.generation2</groupId>
					<artifactId>android-maven-plugin</artifactId>
					<version>3.8.2</version>
					<extensions>true</extensions>
				</plugin>
			</plugins>
		</pluginManagement>

		<plugins>
			<plugin>
				<groupId>com.jayway.maven.plugins.android.generation2</groupId>
				<artifactId>android-maven-plugin</artifactId>
				<configuration><sdk><platform>15</platform></sdk></configuration>
			</plugin>
		</plugins>
	</build>
</project>
