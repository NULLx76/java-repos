<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>lv.odylab.evemanage</groupId>
    <artifactId>evemanage</artifactId>
    <name>evemanage</name>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>

    <description>Web-application for industry in EVE Online</description>

    <properties>
        <odylab.evemanage.version>1.0-SNAPSHOT</odylab.evemanage.version>
        <odylab.evedb.version>1.10</odylab.evedb.version>
        <odylab.eveapi.version>1.5-SNAPSHOT</odylab.eveapi.version>
        <odylab.evecentralapi.version>1.0-SNAPSHOT</odylab.evecentralapi.version>
        <odylab.evemetricsapi.version>1.0-SNAPSHOT</odylab.evemetricsapi.version>
        <odylab.appengine.version>1.12-SNAPSHOT</odylab.appengine.version>
        <appengine.version>1.4.0</appengine.version>
        <junit.version>4.4</junit.version>
        <mockito.version>1.8.5</mockito.version>
        <jetty.servlet.tester.version>6.1.9</jetty.servlet.tester.version>
        <slf4j.version>1.5.8</slf4j.version>
        <gin.version>1.0</gin.version>
        <gwt.version>2.1.1</gwt.version>
        <gwt.maven.version>2.1.0-1</gwt.maven.version>
        <maven.compiler.version>2.3.2</maven.compiler.version>
        <maven.compiler.source>1.6</maven.compiler.source>
        <maven.compiler.target>1.6</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <modules>
        <module>rpc</module>
        <module>server</module>
        <module>web</module>
        <module>web-mainten</module>
    </modules>

    <developers>
        <developer>
            <id>vleushin</id>
            <name>Valery Leushin</name>
            <email>vleushin@gmail.com</email>
        </developer>
    </developers>

    <repositories>
        <repository>
            <id>odylab.googlecode.com</id>
            <url>http://odylab.googlecode.com/svn/mvnrepo</url>
        </repository>
        <repository>
            <id>evedb.googlecode.com</id>
            <url>http://evedb.googlecode.com/svn/mvnrepo</url>
        </repository>
        <repository>
            <id>maven-gae-plugin.googlecode.com</id>
            <url>http://maven-gae-plugin.googlecode.com/svn/repository</url>
        </repository>

        <repository>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <id>odylab.googlecode.com-snapshots</id>
            <url>http://odylab.googlecode.com/svn/mvnsnapshotrepo</url>
        </repository>
        <repository>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <id>evedb.googlecode.com-snapshots</id>
            <url>http://evedb.googlecode.com/svn/mvnsnapshotrepo</url>
        </repository>
    </repositories>

    <distributionManagement>       
        <repository>
            <id>evemanage.googlecode.com</id>
            <url>dav:https://evemanage.googlecode.com/svn/mvnrepo</url>
        </repository>
        <snapshotRepository>
            <id>evemanage.googlecode.com</id>
            <url>dav:https://evemanage.googlecode.com/svn/mvnsnapshotrepo</url>
        </snapshotRepository>
    </distributionManagement>
</project>
