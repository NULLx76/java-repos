<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <name>Edia Sakai Create Site Base</name>
  <groupId>nl.edia</groupId>
  <artifactId>edia-sakai-create-site-base</artifactId>
  <version>4.2.3-SNAPSHOT</version>
  <parent>
    <groupId>org.sakaiproject</groupId>
    <artifactId>master</artifactId>
    <version>11-SNAPSHOT</version>
  </parent>
  <packaging>pom</packaging>
  <modules>
    <module>createsite-api/api</module>
    <module>createsite-impl/impl</module>
    <module>createsite-impl/pack</module>
    <module>createsite-tool/tool</module>
    <!-- Use only for building against Sakai 2.5 -->
    <!--
		<module>createsite-shared-deploy</module>
		-->
  </modules>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>nl.edia</groupId>
        <artifactId>edia-sakai-create-site-api</artifactId>
        <version>4.2.3-SNAPSHOT</version>
        <scope>provided</scope>
      </dependency>
      <dependency>
        <groupId>nl.edia</groupId>
        <artifactId>edia-sakai-create-site-impl</artifactId>
        <version>4.2.3-SNAPSHOT</version>
      </dependency>
      <dependency>
        <groupId>nl.edia</groupId>
        <artifactId>edia-sakai-utils</artifactId>
        <version>1.4.1</version>
      </dependency>
      <dependency>
        <groupId>net.sf.opencsv</groupId>
        <artifactId>opencsv</artifactId>
        <version>1.8</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <build>
    <resources>
      <resource>
        <directory>src/java</directory>
        <includes>
          <include>**/*.xml</include>
        </includes>
      </resource>
    </resources>
    <sourceDirectory>src/java</sourceDirectory>
    <testSourceDirectory>test/java</testSourceDirectory>
    <plugins>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <tagNameFormat>@{project.version}</tagNameFormat>
          <autoVersionSubmodules>true</autoVersionSubmodules>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-gpg-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <scm>
    <connection>scm:svn:https://source.sakaiproject.org/contrib/edia/create-site/trunk</connection>
    <developerConnection>scm:svn:https://source.sakaiproject.org/contrib/edia/create-site/trunk</developerConnection>
    <url>scm:svn:https://source.sakaiproject.org/contrib/edia/create-site/trunk</url>
  </scm>
  <distributionManagement>
    <repository>
      <id>public</id>
      <url>http://archiva.edia.nl/archiva/repository/public/</url>
    </repository>
    <snapshotRepository>
      <id>public-snapshots</id>
      <url>http://archiva.edia.nl/archiva/repository/public-snapshots/</url>
    </snapshotRepository>
  </distributionManagement>
  <repositories>
    <repository>
      <id>public</id>
      <name>Edia Public Archiva Repository</name>
      <url>http://archiva.edia.nl/archiva/repository/public/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>public-snapshots</id>
      <name>Edia Public Archiva Snapshot Repository</name>
      <url>http://archiva.edia.nl/archiva/repository/public-snapshots/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>
</project>
