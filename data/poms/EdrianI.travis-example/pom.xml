<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>travis-example2</groupId>
  <artifactId>travis-example2</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <build>
    <sourceDirectory>spark</sourceDirectory>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.3</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
	<plugin>
    <!-- Apache Rat validates that we have Licenses in all files not on the exclude list -->
    <groupId>org.apache.rat</groupId>
    <artifactId>apache-rat-plugin</artifactId>
	<version>0.12</version>
        <configuration>
        	<excludes>
				<exclude>*.xml</exclude>
				<exclude>**/*.md</exclude>	
				<exclude>.travis.yml</exclude>
				<exclude>**/*.ipynb</exclude>
				<exclude>LICENSE</exclude>					
			</excludes>
		 </configuration>	
  	</plugin> 
  	<!-- Scala Style Checks -->
      <plugin>
        <groupId>org.scalastyle</groupId>
        <artifactId>scalastyle-maven-plugin</artifactId>
        <version>0.8.0</version>
        <configuration>
          <verbose>false</verbose>
          <failOnViolation>true</failOnViolation>
          <failOnWarning>false</failOnWarning>
          <sourceDirectory>${basedir}</sourceDirectory>
          <configLocation>${basedir}/build/scalastyle-config.xml</configLocation>
          <outputFile>${basedir}/target/scalastyle-output.xml</outputFile>
          <inputEncoding>${project.build.sourceEncoding}</inputEncoding>
          <outputEncoding>${project.reporting.outputEncoding}</outputEncoding>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>check</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <!-- Java Style Checks -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-checkstyle-plugin</artifactId>
        <version>2.17</version>
        <configuration>
          <verbose>true</verbose>
          <failOnViolation>true</failOnViolation>
          <failOnWarning>false</failOnWarning>
          <configLocation>google_checks.xml</configLocation>
          <sourceDirectory>${basedir}/share-ci/src/</sourceDirectory>
          <outputFile>${basedir}/target/checkstyle-output.xml</outputFile>
          <inputEncoding>${project.build.sourceEncoding}</inputEncoding>
          <outputEncoding>${project.reporting.outputEncoding}</outputEncoding>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>check</goal>
            </goals>
          </execution>
        </executions>
      </plugin>  	         
  </plugins>     
  </build>
  <dependencies>
	<dependency>
	    <groupId>org.scala-tools</groupId>
	    <artifactId>maven-scala-plugin</artifactId>
	    <version>2.15.2</version>
	</dependency>
	<dependency>
	    <groupId>org.scala-lang</groupId>
	    <artifactId>scala-library</artifactId>
	    <version>2.12.2</version>
	</dependency>  
	<dependency>
		<groupId>org.apache.rat</groupId>
		<artifactId>apache-rat-core</artifactId>
		<version>0.12</version>
	</dependency>
	<dependency>
		<groupId>org.apache.rat</groupId>
		<artifactId>apache-rat-tasks</artifactId>
		<version>0.12</version>		
	</dependency>	
    <dependency>
        <groupId>org.scalacheck</groupId>
        <artifactId>scalacheck_2.11</artifactId>
        <version>1.12.5</version>
        <scope>test</scope>
    </dependency>
  </dependencies>  
</project>  