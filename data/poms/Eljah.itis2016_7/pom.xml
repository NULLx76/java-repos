    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.tomcat.maven</groupId>
                <artifactId>tomcat7-maven-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <systemProperties>
                        <java.security.auth.login.config>${project.build.directory}/itis408/META-INF/jaas.config
                        </java.security.auth.login.config>
                    </systemProperties>
                    <path>/CounterWebApp</path>
                    <server>tomcat-development-server</server>
                    <port>9966</port>
                    <uriEncoding>UTF-8</uriEncoding>
                    <httpsPort>8443</httpsPort>
                    <keystoreFile>${project.build.directory}/itis408/META-INF/keystore</keystoreFile>
                    <keystorePass>itiswebapp</keystorePass>
                    <connectorHttpProtocol>HTTP/1.1</connectorHttpProtocol>


                    <!--<tomcatUsers>C:/itiswebapp/src/main/webapp/META-INF/tomcat-users.xml</tomcatUsers>-->
                    <extraResources>
                        <extraResource>
                            <directory>/resources</directory>
                            <includes>
                                <include>log4j.propreties</include>
                                <include>quartz.properties</include>
                                <include>quartz-config.xml</include>
                            </includes>
                        </extraResource>
                    </extraResources>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>mysql</groupId>
                        <artifactId>mysql-connector-java</artifactId>
                        <version>5.1.6</version>
                    </dependency>
                    <dependency>
                        <groupId>org.quartz-scheduler</groupId>
                        <artifactId>quartz-jobs</artifactId>
                        <version>2.2.2</version>
                    </dependency>
                    <dependency>
                        <groupId>org.quartz-scheduler</groupId>
                        <artifactId>quartz</artifactId>
                        <version>2.2.2</version>
                    </dependency>

                    <dependency>
                        <groupId>javax.transaction</groupId>
                        <artifactId>jta</artifactId>
                        <version>1.1</version>
                    </dependency>
                    <dependency>
                        <groupId>javax.servlet</groupId>
                        <artifactId>jstl</artifactId>
                        <version>1.2</version>
                    </dependency>

                </dependencies>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>gwt-maven-plugin</artifactId>
                <version>2.5.1</version>
                <executions>
                    <execution>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <finalName>itis408</finalName>
    </build>

