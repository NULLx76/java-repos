<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>xyz.morecraft.dev</groupId>
    <artifactId>mt-turing</artifactId>
    <version>1.0</version>
    <packaging>jar</packaging>

    <name>MTTuring</name>
    <description>Simple Turing Machine - Calculates Proper Difference</description>
    <url>http://dev.morecraft.xyz</url>
    <inceptionYear>2013</inceptionYear>
    <organization>
        <name>MoreCraft</name>
        <url>http://morecraft.xyz</url>
    </organization>

    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <scm>
        <connection>scm:git@github.com:EmhyrVarEmreis/MTTuring.git</connection>
        <developerConnection>scm:git@github.com:EmhyrVarEmreis/MTTuring.git</developerConnection>
        <url>https://github.com/EmhyrVarEmreis/MTTuring</url>
    </scm>

    <developers>
        <developer>
            <id>mateusz.stefaniak</id>
            <name>Mateusz Stefaniak</name>
            <email>mateusz.stefaniak@morecraft.pl</email>
            <url>http://mateuszstefaniak.me</url>
            <organization>MoreCraft</organization>
            <organizationUrl>http://morecraft.xyz</organizationUrl>
            <roles>
                <role>architect</role>
                <role>developer</role>
            </roles>
            <timezone>Europe/Warsaw</timezone>
        </developer>
    </developers>

    <properties>
        <java.version>1.8</java.version>
        <main.class>xyz.morecraft.dev.mtturing.main.Main</main.class>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.5.1</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.0.2</version>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>${main.class}</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>