	<profiles>
		<!-- better to have keep this sonar profile in your maven settings.xmltest -->
		<profile>
			<id>sonar</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<properties>
				<sonar.exclusions>${project.basedir}/src/main/webapp/js,${project.basedir}/src/main/java/com/hpe/calEStore/validator</sonar.exclusions>

				<sonar.test.inclusions>${project.basedir}/src//test/java/com/hpe/calEStore/dao/impl/test/</sonar.test.inclusions>
				<!-- <sonar.jdbc.url>jdbc:h2:tcp://16.181.235.56:9092/sonar</sonar.jdbc.url> 
					<sonar.jdbc.driver>org.h2.Driver</sonar.jdbc.driver> <sonar.jdbc.username>sonar</sonar.jdbc.username> 
					<sonar.jdbc.password>sonar</sonar.jdbc.password> -->
				<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
				<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
				<!-- Sonar -->
				<!-- The destination file for the code coverage report has to be set 
					to the same value in the parent pom and in each module pom. Then JaCoCo will 
					add up information in the same report, so that, it will give the cross-module 
					code coverage. -->
				<sonar.dynamicAnalysis>reuseReports</sonar.dynamicAnalysis>
				<sonar.java.codeCoveragePlugin>jacoco</sonar.java.codeCoveragePlugin>
				<sonar.surefire.reportsPath>target/surefire-reports</sonar.surefire.reportsPath>
				<sonar.jacoco.reportPath>target/jacoco.exec</sonar.jacoco.reportPath>
				<sonar.jacoco.itReportPath>target/jacoco-it.exec</sonar.jacoco.itReportPath>
				<sonar.language>java</sonar.language>
			</properties>
		</profile>
		<profile>
			<id>sonar-coverage</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>org.jacoco</groupId>
							<artifactId>jacoco-maven-plugin</artifactId>
							<configuration>
								<output>file</output>
								<append>true</append>
							</configuration>
							<executions>
								<execution>
									<id>agent-for-ut</id>
									<goals>
										<goal>prepare-agent</goal>
									</goals>
								</execution>
								<execution>
									<id>agent-for-it</id>
									<goals>
										<goal>prepare-agent-integration</goal>
									</goals>
								</execution>
								<execution>
									<id>jacoco-site</id>
									<phase>verify</phase>
									<goals>
										<goal>report</goal>
									</goals>
								</execution>
							</executions>
						</plugin>
						<plugin>
							<groupId>org.codehaus.mojo</groupId>
							<artifactId>sonar-maven-plugin</artifactId>
							<version>2.3</version>
						</plugin>
						<plugin>
							<groupId>org.codehaus.mojo</groupId>
							<artifactId>cobertura-maven-plugin</artifactId>
							<version>2.3</version>
							<configuration>
								<output>file</output>
								<formats>
									<format>xml</format>
								</formats>
							</configuration>
							<executions>
								<execution>
									<phase>package</phase>
									<goals>
										<goal>cobertura</goal>
									</goals>
								</execution>
							</executions>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>
		</profile>
	</profiles>

