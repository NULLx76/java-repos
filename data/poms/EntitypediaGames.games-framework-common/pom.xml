<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.entitypedia.games</groupId>
        <artifactId>entitypedia-games-parent</artifactId>
        <version>14</version>
    </parent>

    <artifactId>entitypedia-games-framework-common</artifactId>
    <packaging>jar</packaging>
    <version>1.0.16-SNAPSHOT</version>

    <name>Entitypedia Games Framework Common</name>
    <description>Games Framework common classes</description>
    <url>https://github.com/EntitypediaGames/games-framework-common</url>
    <licenses>
        <license>
            <name>MIT License</name>
            <url>https://github.com/EntitypediaGames/games-framework-common/blob/master/LICENSE</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <scm>
        <connection>scm:git:https://github.com/EntitypediaGames/games-framework-common.git</connection>
        <developerConnection>scm:git:git@github.com:EntitypediaGames/games-framework-common.git</developerConnection>
        <url>https://github.com/EntitypediaGames/games-framework-common</url>
      <tag>HEAD</tag>
  </scm>

    <issueManagement>
        <system>Github</system>
        <url>https://github.com/EntitypediaGames/games-framework-common/issues</url>
    </issueManagement>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>entitypedia-games-common-model</artifactId>
            <version>1.0.14</version>
        </dependency>

        <!-- jackson JSON dependencies -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-annotations</artifactId>
            <version>${jackson.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <configuration>
                    <tags>
                        <tag>
                            <name>spring.mvc.doclet.path</name>
                            <placement>X</placement>
                        </tag>
                        <tag>
                            <name>spring.mvc.doclet.termsOfServiceUrl</name>
                            <placement>X</placement>
                        </tag>
                        <tag>
                            <name>spring.mvc.doclet.contact</name>
                            <placement>X</placement>
                        </tag>
                        <tag>
                            <name>spring.mvc.doclet.license</name>
                            <placement>X</placement>
                        </tag>
                        <tag>
                            <name>spring.mvc.doclet.licenseUrl</name>
                            <placement>X</placement>
                        </tag>
                    </tags>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>