        </exclusion>
        <exclusion>
          <groupId>uk.ac.ed.ph.snuggletex</groupId>
          <artifactId>snuggletex-jeuclid</artifactId>
        </exclusion>
        <exclusion>
          <groupId>com.flickr4java</groupId>
          <artifactId>flickr4java</artifactId>
