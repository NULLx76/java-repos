<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>manuscript</groupId>
		<artifactId>manuscript-mainpom</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	<groupId>manuscript.framework.security</groupId>
	<artifactId>manuscript-security-dao-mysql</artifactId>
	<version>0.0.1-SNAPSHOT</version>

	<developers>
		<developer>
			<name>Balázs Kovács</name>
		</developer>
	</developers>

	<properties>
		<manuscript-security-general.version>0.0.1-SNAPSHOT</manuscript-security-general.version>
	</properties>

	<dependencies>
		<dependency>
			<groupId>manuscript.framework.security</groupId>
			<artifactId>manuscript-security-general</artifactId>
			<version>${manuscript-security-general.version}</version>
		</dependency>
		<dependency>
			<groupId>manuscript.test</groupId>
			<artifactId>manuscript-test</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-test</artifactId>
		</dependency>

		<dependency>
			<groupId>mysql</groupId>
			<artifactId>mysql-connector-java</artifactId>
		</dependency>
	</dependencies>

	<profiles>
		<profile>
			<id>comptest</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.liquibase</groupId>
						<artifactId>liquibase-maven-plugin</artifactId>
						<version>${liquibase-maven-plugin.version}</version>
						<configuration>
							<logging>info</logging>
							<verbose>true</verbose>
							<changeLogFile>${basedir}/src/test/resources/comptest-init-master.xml</changeLogFile>
							<driver>com.mysql.jdbc.Driver</driver>
							<url>${url.test}</url>
							<username>${username.test}</username>
							<password>${password.test}</password>
						</configuration>
						<executions>
							<execution>
								<phase>compile</phase>
								<goals>
									<goal>dropAll</goal>
									<!-- <goal>clearCheckSums</goal> -->
									<goal>update</goal>
									<!-- <goal>updateSQL</goal> -->
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>