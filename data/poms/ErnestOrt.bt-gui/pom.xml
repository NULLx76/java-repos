<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.ernest.applications</groupId>
	<artifactId>bt-gui</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>jar</packaging>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<java.version>1.8</java.version>
		<ct.users.version>0.0.1-SNAPSHOT</ct.users.version>
		<ct.teams.version>0.0.1-SNAPSHOT</ct.teams.version>
		<ct.stages.version>0.0.1-SNAPSHOT</ct.stages.version>
		<ct.comments.version>0.0.1-SNAPSHOT</ct.comments.version>
		<ct.news.version>0.0.1-SNAPSHOT</ct.news.version>
		<ct.credentials.version>0.0.1-SNAPSHOT</ct.credentials.version>
		<ct.mails.version>0.0.1-SNAPSHOT</ct.mails.version>
		<ct.notices.version>0.0.1-SNAPSHOT</ct.notices.version>
		<ct.blog.version>0.0.1-SNAPSHOT</ct.blog.version>
	</properties>

	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>1.3.2.RELEASE</version>
	</parent>

	<dependencies>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-thymeleaf</artifactId>
		</dependency>
		 <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-security</artifactId>
        </dependency>
		<dependency>
			<groupId>org.ernest.applications</groupId>
			<artifactId>bt-manager-users-ct</artifactId>
			<version>${ct.users.version}</version>
		</dependency>
		<dependency>
			<groupId>org.ernest.applications</groupId>
			<artifactId>bt-manager-teams-ct</artifactId>
			<version>${ct.teams.version}</version>
		</dependency>
		<dependency>
			<groupId>org.ernest.applications</groupId>
			<artifactId>bt-manager-stages-ct</artifactId>
			<version>${ct.stages.version}</version>
		</dependency>
		<dependency>
			<groupId>org.ernest.applications</groupId>
			<artifactId>bt-manager-comments-ct</artifactId>
			<version>${ct.comments.version}</version>
		</dependency>
		<dependency>
			<groupId>org.ernest.applications</groupId>
			<artifactId>bt-manager-news-ct</artifactId>
			<version>${ct.news.version}</version>
		</dependency>
		<dependency>
			<groupId>org.ernest.applications</groupId>
			<artifactId>bt-manager-credentials-ct</artifactId>
			<version>${ct.credentials.version}</version>
		</dependency>
		<dependency>
			<groupId>org.ernest.applications</groupId>
			<artifactId>bt-manager-mails-ct</artifactId>
			<version>${ct.mails.version}</version>
		</dependency>
		<dependency>
			<groupId>org.ernest.applications</groupId>
			<artifactId>bt-manager-notices-ct</artifactId>
			<version>${ct.notices.version}</version>
		</dependency>
		<dependency>
			<groupId>org.ernest.applications</groupId>
			<artifactId>bt-manager-blog-ct</artifactId>
			<version>${ct.blog.version}</version>
		</dependency>
	</dependencies>

	<build>
		<finalName>bt-gui</finalName>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
</project>
