    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <target>1.8</target>
                    <source>1.8</source>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-pmd-plugin</artifactId>
                <version>3.7</version>
                <configuration>
                    <outputDirectory>${basedir}/target/</outputDirectory>
                    <targetJdk>1.8</targetJdk>
                    <verbose>true</verbose>
                </configuration>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <!-- maven profiles 参数化构建配置 start-->
    <profiles>
        <!-- 开发环境，执行指令 mvn clean package -DskipTests -P develop -->
        <profile>
            <id>develop</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <filters>
                    <filter>../passport_dev_config.properties</filter>
                </filters>
            </build>
        </profile>
        <!-- 测试布环境，执行指令 mvn clean package -DskipTests -P test -->
        <profile>
            <id>test</id>
            <build>
                <filters>
                    <filter>../passport_test_config.properties</filter>
                </filters>
            </build>
        </profile>
        <!-- 线上环境，执行指令 mvn clean package -DskipTests -P online -->
        <profile>
            <id>online</id>
