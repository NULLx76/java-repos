<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.control.life.home</groupId>
    <artifactId>flats-location-in-towns</artifactId>
    <packaging>war</packaging>
    <version>1.0</version>
    <name>flats-location-in-towns Maven Webapp</name>
    <url>http://maven.apache.org</url>

    <properties>
        <spring.version>4.3.5.RELEASE</spring.version>
        <spring.integration.version>4.3.7.RELEASE</spring.integration.version>
        <spring.batch.version>3.0.7.RELEASE</spring.batch.version>
        <oval.version>1.85</oval.version>
        <hibernate.version>4.3.11.Final</hibernate.version>
        <log4j.version>2.7</log4j.version>
        <slf4j.version>1.7.22</slf4j.version>
        <gson.version>2.8.0</gson.version>
        <servlet-api.version>3.1.0</servlet-api.version>
        <jstl.version>1.2</jstl.version>
        <tomcat.version>8.5.9</tomcat.version>
