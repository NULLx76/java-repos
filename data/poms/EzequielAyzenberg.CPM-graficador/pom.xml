<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>ar.utn.thegrid.cpm</groupId>
	<artifactId>cpm-graficador</artifactId>
	<version>0.0.1-SNAPSHOT</version>

	<dependencies>
		<dependency>
			<groupId>net.sourceforge.jexcelapi</groupId>
			<artifactId>jxl</artifactId>
			<version>2.6.12</version>
		</dependency>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-lang3</artifactId>
			<version>3.4</version>
		</dependency>
		<!-- http://mvnrepository.com/artifact/xstream/xstream -->
		<dependency>
			<groupId>com.thoughtworks.xstream</groupId>
			<artifactId>xstream</artifactId>
			<version>1.4.6</version>
		</dependency>

		<!-- http://mvnrepository.com/artifact/org.controlsfx/controlsfx-samples -->
		<dependency>
			<groupId>org.controlsfx</groupId>
			<artifactId>controlsfx-samples</artifactId>
			<version>8.20.8</version>
		</dependency>


	</dependencies>

	<properties>
		<urlNexus>http://server-nexus2:8081/nexus/content/repositories/</urlNexus>
		<project.build.sourceEncoding>UTF-8	</project.build.sourceEncoding>
		<maven.build.timestamp.format>yyyyMMdd-HHmm</maven.build.timestamp.format>
		<java.version>1.8</java.version>
		<slf4j.version>1.7.6 </slf4j.version>
		<jmock.version>2.6.0</jmock.version>
		<junit.version>4.11</junit.version>
	</properties>

	<build>
		<plugins>

			<!-- Para indicar la version de java, puede tener mas parametros dependiendo
				del proyecto, de ser asi, hay que repetir el proyecto -->
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
					<encoding>${project.build.sourceEncoding}</encoding>
					<optimize>true</optimize>
					<debug>true</debug>
				</configuration>

			</plugin>

			<!-- Plugin de maven para eclipse, para que siempre que pueda baje los
				fuentes y los java docs tambien para que con mvn eclipse:eclipse genere bien
				los archivos de proyecto para eclipse(.proyect, .classpath, etc...) -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-eclipse-plugin</artifactId>
				<configuration>
					<downloadSources>true</downloadSources>
					<downloadJavadocs>true</downloadJavadocs>
				</configuration>
			</plugin>

			<!-- Este plugin crea un archivo jar con los archivos fuentes del proyecto
				actual. El jar se crea por defecto en la carpeta target del proyecto directory. -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<!-- Este plugin usa la herramienta de JavaDoc para generar javadocs para
				un proyectos especfico -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-javadocs</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.6</version>
				<configuration>
					<archive>
						<manifest>
							<mainClass>ar.utn.thegrid.cpm.Main</mainClass>
						</manifest>
					</archive>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
				</configuration>
			</plugin>
		</plugins>
	</build>


</project>