<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>de.factfinder.webcomponents</groupId>
	<artifactId>java-proxy-utils</artifactId>
	<version>7.2-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>Webcomponents Java Proxy Utils</name>
	<description>This is a Java (1.7) helper project for the FACTFinder Webcomponents integration with a proxy</description>

	<dependencies>

		<!-- https://mvnrepository.com/artifact/org.apache.httpcomponents/httpasyncclient -->
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpasyncclient</artifactId>
			<version>4.1.2</version>
		</dependency>

		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
			<version>3.1.0</version>
		</dependency>

		<!-- https://mvnrepository.com/artifact/org.apache.httpcomponents/httpcore -->
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpcore</artifactId>
			<version>4.4.5</version>
		</dependency>

		<!-- For testing -->
		<!-- Jetty 9 Servlet 3.1 Java 1.8 org.eclipse.jetty.* EPLv1 / ASLv2 Eclipse.org 
			Stable Release -->
		<!-- Jetty 8 Servlet 3.0 Java 1.6 org.eclipse.jetty.* EPLv1 / ASLv2 Eclipse.org 
			End of Life / Nov 2014 -->
		<dependency>
			<groupId>org.eclipse.jetty</groupId>
			<artifactId>jetty-webapp</artifactId>
			<!-- <version>9.3.15.v20161220</version> -->
			<version>8.2.0.v20160908</version>
			<scope>test</scope>
		</dependency>

		<!-- https://mvnrepository.com/artifact/junit/junit -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
			<scope>test</scope>
		</dependency>

	</dependencies>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
		</plugins>
	</build>


</project>