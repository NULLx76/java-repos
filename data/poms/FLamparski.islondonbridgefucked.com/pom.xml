<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.filipwieland</groupId>
  <version>0.0.1-SNAPSHOT</version>
  <name>RailStatus</name>
  <build>
    <sourceDirectory>src</sourceDirectory>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.3</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
       <groupId>org.apache.maven.plugins</groupId>
       <artifactId>maven-shade-plugin</artifactId>
       <version>2.3</version>
       <executions>
        <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                  <mainClass>com.islondonbridgefucked.ShitconService</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
       </executions>
      </plugin>
    </plugins>
  </build>
  <url>http://islondonbridgefucked.com</url>
  <scm>
   <url>https://github.com/FLamparski/islondonbridgefucked.com</url>
  </scm>
  <dependencies>
        <dependency>
           <groupId>org.twitter4j</groupId>
           <artifactId>twitter4j-core</artifactId>
           <version>[4.0,)</version>
       </dependency>
        <dependency>
         <groupId>io.dropwizard</groupId>
         <artifactId>dropwizard-core</artifactId>
         <version>${dropwizard.version}</version>
        </dependency>
        <dependency>
         <groupId>org.apache.activemq</groupId>
         <artifactId>activemq-client</artifactId>
         <version>[5.13,)</version>
        </dependency>
  </dependencies>
  <properties>
   <dropwizard.version>0.9.1</dropwizard.version>
  </properties>
  <organization>
   <name>#banterbonus</name>
   <url>http://banterbon.us/</url>
  </organization>
  <artifactId>RailStatus</artifactId>
</project>