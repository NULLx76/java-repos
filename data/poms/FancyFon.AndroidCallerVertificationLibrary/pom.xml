<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.fancyfon.mobile.android.verification</groupId>
    <artifactId>Android_Caller_Verification_Library</artifactId>
    <version>1.1.1-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>Android Caller Verification Library</name>
    <description>Provides api for caller verification in IPC communication.</description>
    <url>http://github.com/FancyFon/AndroidCallerVertificationLibrary</url>

    <licenses>
        <license>
            <name>The Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>


    <developers>
        <developer>
            <name>Piotr Sor√≥bka</name>
            <email>piotr.sorobka@fancyfon.com</email>
            <organization>FancyFon</organization>
            <organizationUrl>http://www.fancyfon.com/</organizationUrl>
        </developer>
    </developers>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.5.1</version>
                <configuration>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.6</version>
                <configuration>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.5</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.9.1</version>
                <executions>
                    <execution>
                        <id>attach-javadocs</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                       <configuration>
                           <additionalparam>-Xdoclint:none</additionalparam>
                       </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


    <properties>
        <maven.compiler.source>1.6</maven.compiler.source>
        <maven.compiler.target>1.6</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <organization>
        <name>FancyFon</name>
        <url>http://fancyfon.com</url>
    </organization>

    <scm>
        <connection>scm:git:git@github.comFancyFon/AndroidCallerVertificationLibrary.git</connection>
        <developerConnection>scm:git:git@github.com:FancyFon/AndroidCallerVertificationLibrary.git</developerConnection>
        <url>git@github.com:FancyFon/AndroidCallerVertificationLibrary.git</url>
        <tag>HEAD</tag>
    </scm>
</project>