        </dependency>
        <dependency>
            <groupId>xdoclet</groupId>
            <artifactId>xdoclet-jboss-module</artifactId>
            <version>1.2.2-RC1</version>
            <scope>system</scope>
            <systemPath>${fiorano.home}/antscripts/lib/xdoclet-jboss-module-1.2.2-RC1.jar</systemPath>
