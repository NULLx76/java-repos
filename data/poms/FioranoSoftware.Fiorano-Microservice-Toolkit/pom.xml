            <systemPath>${fiorano.home}/antscripts/lib/xdoclet-web-module-1.2.2-RC1.jar</systemPath>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <descriptor>src/assembly/bin.xml</descriptor>
                    <finalName>${artifactId}</finalName>
                    <skipAssembly>${skip.task}</skipAssembly>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.10.3</version>
                <configuration>
                    <sourceFileExcludes>
                        <exclude>**\/\Bundle.java</exclude>
                    </sourceFileExcludes>
                    <nohelp>true</nohelp>
                </configuration>
                <executions>
                    <execution>
                        <id>aggregate</id>
                        <goals>
                            <goal>aggregate</goal>
                        </goals>
                        <phase>site</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <configuration>
                            <skip>${skip.task}</skip>
                            <target>
                                <taskdef name="xdoclet"
                                         classname="xdoclet.DocletTask"
                                         classpathref="maven.compile.classpath"/>
                                <taskdef name="jmxdoclet"
                                         classname="xdoclet.modules.jmx.JMXDocletTask"
                                         classpathref="maven.compile.classpath"/>
                                <taskdef name="jbossxmbean"
                                         classname="xdoclet.modules.jboss.jmx.JBossXMBeanDescriptorSubTask"
                                         classpathref="maven.compile.classpath"/>
                                <!--
                                  Place any Ant task here. You can add anything
                                  you can add between <target> and </target> in a
                                  build.xml.
                                -->
                                <echo>{ ${project.name} } generating resource bundle files ...</echo>
                                <xdoclet destdir="${project.build.directory}/classes">
                                    <fileset dir="src/main/java">
                                        <include name="**/Bundle.java"/>
                                        <include name="**/APIBundle.java"/>
                                    </fileset>
                                    <externalizer destinationFile="{0}.properties" tagName="msg.message" valueParamName="msg"/>
                                </xdoclet>

                                <echo>{ ${project.name} } Generating xdoclet ...</echo>
                                <jmxdoclet destdir="${project.build.directory}/classes">
                                    <fileset dir="src/main/java">
                                        <include name="**/*.java"/>
                                    </fileset>
                                    <fileset dir="${basedir}/../edbc-framework/src/main/java">
                                        <include name="com/fiorano/edbc/framework/service/configuration/AbstractConnectionConfiguration.java"/>
                                        <include name="com/fiorano/edbc/framework/service/configuration/ConnectionlessServiceConfiguration.java"/>
                                        <include name="com/fiorano/edbc/framework/service/configuration/ServiceConfiguration.java"/>
                                    </fileset>
                                    <jbossxmbean havingClassTag="fiorano:xmbean"/>
                                </jmxdoclet>
                                <delete dir="${project.build.directory}/classes/com/fiorano/edbc/"/>

                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>

    </build>
</project>
