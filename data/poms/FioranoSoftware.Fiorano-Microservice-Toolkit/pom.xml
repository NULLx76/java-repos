        <dependency>
            <groupId>xdoclet</groupId>
            <artifactId>xdoclet-jmx-module</artifactId>
            <version>1.2.2-RC1</version>
            <scope>system</scope>
            <systemPath>${fiorano.home}/antscripts/lib/xdoclet-jmx-module-1.2.2-RC1.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>xdoclet</groupId>
            <artifactId>xdoclet-ejb-module</artifactId>
            <version>1.2.2-RC1</version>
