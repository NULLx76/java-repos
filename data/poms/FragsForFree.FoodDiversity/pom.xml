<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>me.fragsforfree</groupId>
  <artifactId>FoodDiversity</artifactId>
  <version>1.1.3-SNAPSHOT</version>
  <name>FoodDiversity</name>

  <description>This plugin stops the player from eating more than a configurable count of the same type of food in a row. The survival mode will get more depth. The players have to take care of a balanced diet. Say bye to the players who only eat rotting meat.</description>

	<repositories>
		<repository>
			<id>bukkit-repo</id>
			<url>http://repo.bukkit.org/content/groups/public/</url>
		</repository>
	</repositories>

	<dependencies>
		<dependency>
			<groupId>org.bukkit</groupId>
			<artifactId>bukkit</artifactId>
			<version>1.7.9-R0.2</version>
		</dependency>
		
		<dependency>
			<groupId>org.xerial</groupId>
			<artifactId>sqlite-jdbc</artifactId>
			<version>3.8.7</version>
		</dependency>		
		
	    <dependency>
	        <groupId>com.zaxxer</groupId>
	        <artifactId>HikariCP-java6</artifactId>
	        <version>2.3.2</version>
	        <scope>compile</scope>
	    </dependency>		
		
	</dependencies>
<build>
   <plugins>
      <plugin>
         <groupId>org.apache.maven.plugins</groupId>
         <artifactId>maven-compiler-plugin</artifactId>
         <version>2.3.2</version>
         <configuration>
            <source>1.6</source>
            <target>1.6</target>
         </configuration>
      </plugin>
   </plugins>
</build>	
</project>