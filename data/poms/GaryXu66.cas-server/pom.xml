	<dependencies>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
			<version>${servlet.version}</version>
			<scope>provided</scope><!-- provided：编译，测试时有效。运行时无效，由于是web项目，tomcat中默认已经提供了该jar，所以运行时不再需要这个以来jar -->
