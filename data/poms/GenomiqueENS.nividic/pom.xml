			<plugin>
       				<artifactId>maven-antrun-plugin</artifactId>
       				<executions>
					<execution>
						<id>add-ressources-jar</id>
           					<phase>generate-resources</phase>
           					<configuration>
             						<tasks>
								<mkdir dir="${basedir}/target/classes/javascript"/>	
								<copy todir="${basedir}/target/classes/javascript">
									<fileset dir="${basedir}/src/main/javascript" includes="*.js"/>
								</copy>
								<copy todir="${basedir}/target/classes">
									<fileset dir="${basedir}/src/main/resources" includes="**/*"/>
								</copy>
             						</tasks>
           					</configuration>
           					<goals>
             						<goal>run</goal>
           					</goals>
         				</execution>
       				</executions>
     			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
