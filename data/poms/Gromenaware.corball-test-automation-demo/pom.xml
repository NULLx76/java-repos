<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.acenhauer.corball</groupId>
    <artifactId>corball-demo</artifactId>
    <version>16.06.28</version>
    <name>Corball Test Automation Demo</name>
    <description>Corball Demo - The Demo for the Automation Framework</description>
    <url>https://github.com/Acenhauer/corball/</url>
    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
            <comments>A business-friendly OSS license</comments>
        </license>
    </licenses>
    <organization>
        <name>Acenhauer</name>
        <url>http://www.acenhauer.com</url>
    </organization>
    <developers>
        <developer>
            <id>guillemhs</id>
            <name>Guillem Hernandez Sola</name>
            <email>guillem@acenhauer.com</email>
            <url>http://www.acenhauer.com</url>
            <organization>Acenhauer</organization>
            <organizationUrl>http://www.acenhauer.com</organizationUrl>
            <roles>
                <role>architect</role>
                <role>developer</role>
            </roles>
        </developer>
    </developers>
    <scm>
        <connection>scm:git:git@github.com:Acenhauer/corball.git</connection>
        <url>scm:git:git@github.com:Acenhauer/corball.git</url>
        <developerConnection>scm:git:git@github.com:Acenhauer/corball.git</developerConnection>
    </scm>
    <distributionManagement>
        <snapshotRepository>
            <id>ossrh</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
        </snapshotRepository>
        <repository>
            <id>ossrh</id>
            <url>https://oss.sonatype.org/service/local/staging/deploy/maven2</url>
        </repository>
    </distributionManagement>
    <properties>
        <testGroup>all</testGroup>
        <threadCount>1</threadCount>
        <dataProviderThreadCount>1</dataProviderThreadCount>
        <java.version>1.8</java.version>
        <allure.version>1.4.13</allure.version>
        <aspectj.version>1.8.5</aspectj.version>
        <selenium.version>2.53.0</selenium.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target unless="maven.test.skip">
                                <echo>=================================================</echo>
                                <echo>Starting testing execution...</echo>
                                <echo>Test threads: ${threadCount}</echo>
                                <echo>Data provider threads: ${dataProviderThreadCount}</echo>
                                <echo>Test group: ${testGroup}</echo>
                                <echo>=================================================</echo>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.google.code.maven-replacer-plugin</groupId>
                <artifactId>replacer</artifactId>
                <version>1.5.3</version>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>replace</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <file>target/classes/suite.xml</file>
                    <regex>false</regex>
                    <replacements>
                        <replacement>
                            <token>{{threadCount}}</token>
                            <value>${threadCount}</value>
                        </replacement>
                        <replacement>
                            <token>{{dataProviderThreadCount}}</token>
                            <value>${dataProviderThreadCount}</value>
                        </replacement>
                        <replacement>
                            <token>{{testGroup}}</token>
                            <value>${testGroup}</value>
                        </replacement>
                    </replacements>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.19</version>
                <configuration>
                    <failIfNoTests>false</failIfNoTests>
                    <trimStackTrace>false</trimStackTrace>
                    <suiteXmlFiles>
                        <suiteXmlFile>target/classes/suite.xml</suiteXmlFile>
                    </suiteXmlFiles>
                    <testFailureIgnore>true</testFailureIgnore>
                    <argLine>
                        -javaagent:"${settings.localRepository}/org/aspectj/aspectjweaver/${aspectj.version}/aspectjweaver-${aspectj.version}.jar"
                    </argLine>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>org.aspectj</groupId>
                        <artifactId>aspectjweaver</artifactId>
                        <version>${aspectj.version}</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>com.acenhauer.corball</groupId>
            <artifactId>corball-core</artifactId>
            <version>16.05.11</version>
        </dependency>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>6.9.10</version>
        </dependency>
        <dependency>
            <groupId>org.seleniumhq.selenium</groupId>
            <artifactId>selenium-java</artifactId>
            <version>2.53.0</version>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.17</version>
        </dependency>
        <dependency>
            <groupId>io.appium</groupId>
            <artifactId>java-client</artifactId>
            <version>3.3.0</version>
        </dependency>
        <dependency>
            <groupId>org.json</groupId>
            <artifactId>json</artifactId>
            <version>20160212</version>
        </dependency>
    </dependencies>
</project>
