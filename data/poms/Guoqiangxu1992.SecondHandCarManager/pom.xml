	<profiles>
    <profile>
        <id>product</id>
        <build>
            <plugins>
                <plugin>
                    <artifactId>maven-antrun-plugin</artifactId>
                    <version>1.8</version>
                    <executions>
                        <execution>
                            <phase>compile</phase>
                            <configuration>
                                <target>
                                    <copy todir="${basedir}/src/main/resources/properties" overwrite="true">
                                        <fileset dir="${basedir}/src/main/resources/distribute/product/" />
                                    </copy>
                                </target>
                            </configuration>
                            <goals>
