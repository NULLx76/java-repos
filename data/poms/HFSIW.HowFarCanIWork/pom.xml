<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>nothing.serious</groupId>
	<artifactId>globalpom</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<modules>
		<module>hfciw-common</module>
		<module>hfciw-ihm</module>
		<module>hfciw-services</module>
		<module>hfciw-war</module>
  </modules>
  
  <dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>hfciw-common</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>hfciw-ihm</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>hfciw-services</artifactId>
				<version>${project.version}</version>
			</dependency>
			</dependencies>
			</dependencyManagement>

  	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<source>1.6</source>
						<target>1.6</target>
					</configuration>
				</plugin>	
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-eclipse-plugin</artifactId>
					<version>2.9</version>
					<configuration>
						<additionalConfig>
							<file>
								<name>.settings/org.eclipse.core.resources.prefs</name>
								<content><![CDATA[eclipse.preferences.version=1${line.separator}encoding/<project>=${project.build.sourceEncoding}${line.separator}]]></content>
							</file>
							<file>
								<name>.settings/org.eclipse.jdt.core.prefs</name>
								<content><![CDATA[org.eclipse.jdt.core.formatter.comment.line_length=160${line.separator}org.eclipse.jdt.core.formatter.lineSplit=160]]></content>
							</file>
							<file>
								<name>.settings/org.eclipse.jdt.ui.prefs</name>
								<content><![CDATA[editor_save_participant_org.eclipse.jdt.ui.postsavelistener.cleanup=true${line.separator}sp_cleanup.format_source_code=true${line.separator}sp_cleanup.organize_imports=true${line.separator}sp_cleanup.on_save_use_additional_actions=true${line.separator}sp_cleanup.add_missing_annotations=true${line.separator}sp_cleanup.add_missing_override_annotations=true${line.separator}sp_cleanup.add_missing_override_annotations_interface_methods=true${line.separator}sp_cleanup.correct_indentation=true${line.separator}sp_cleanup.remove_unnecessary_casts=true]]></content>
							</file>
						</additionalConfig>
						<downloadSources>true</downloadSources>
						<downloadJavadocs>true</downloadJavadocs>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement> 
	</build>
</project>