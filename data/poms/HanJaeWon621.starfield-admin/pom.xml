		<!-- maven 빌드시 원래는 src/main/resources 의 정보만 가져오는데 다른 소스 패키지에 설정된 xml 파일을 
			동일 폴더로 빌드해준다. -->
		<!-- TODO : dev, oper를 구분해서 어떤 resource를 넣어야 하는지 수동으로 설정 해줘야 한다. -->
		<resources>
			<resource>
				<directory>src/main/resources/</directory>
				<includes>
					<include>*.xml</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/java/kr/co/starfield/resource</directory>
				<includes>
					<include>**/*.xml</include>
				</includes>
				<targetPath>kr/co/starfield/resource</targetPath>
			</resource>
			<resource>
				<directory>src/main/java/kr/co/starfield/mapper</directory>
				<includes>
					<include>**/*.xml</include>
				</includes>
				<targetPath>kr/co/starfield/mapper</targetPath>
			</resource>
			<resource>
				<directory>src/main/resources/${env}/conf/</directory>
				<includes>
					<include>*.properties</include>
				</includes>
				<targetPath>${project.basedir}/target/${project.artifactId}-${project.version}/WEB-INF/conf/</targetPath>
			</resource>
			<resource>
				<directory>src/main/resources/${env}/mybatis</directory>
				<includes>
					<include>*.xml</include>
				</includes>
				<targetPath>${project.basedir}/target/${project.artifactId}-${project.version}/WEB-INF/mybatis</targetPath>
			</resource>
		</resources>



