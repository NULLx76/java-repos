	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<spring.version>4.1.7.RELEASE</spring.version>
		<spring.security.version>3.2.7.RELEASE</spring.security.version>
		<spring.security.oauth2.version>2.0.7.RELEASE</spring.security.oauth2.version>
		<hibernate.version>4.3.10.Final</hibernate.version>
	</properties>
	<issueManagement>
		<system>Redmine</system>
		<url></url>
	</issueManagement>
	<!-- 定义不同的运行环境类型 使用:-P(dev|sit|uat|prod) -->
	<profiles>
		<profile>
			<id>dev</id>
			<properties>
				<build.type>dev</build.type>
			</properties>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
		</profile>
		<profile>
			<id>sit</id>
			<properties>
				<build.type>sit</build.type>
			</properties>
		</profile>
		<profile>
			<id>uat</id>
			<properties>
				<build.type>uat</build.type>
			</properties>
		</profile>
		<profile>
			<id>prod</id>
			<properties>
				<build.type>prod</build.type>
			</properties>
		</profile>
	</profiles>
	<build>
		<resources>
			<resource>
				<directory>src/main/java</directory>
				<includes>
					<include>**/*.xml</include>
					<include>**/*.js</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<excludes>
					<exclude>**/*-dev.xml</exclude>
					<exclude>**/*-sit.xml</exclude>
					<exclude>**/*-uat.xml</exclude>
					<exclude>**/*-prod.xml</exclude>
					<exclude>**/*-dev.properties</exclude>
					<exclude>**/*-sit.properties</exclude>
					<exclude>**/*-uat.properties</exclude>
					<exclude>**/*-prod.properties</exclude>
				</excludes>
				<filtering>true</filtering>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>**/*-${build.type}.xml</include>
					<include>**/*-${build.type}.properties</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/view</directory>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
					<encoding>UTF8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
