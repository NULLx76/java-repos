    <artifactId>StockOnline</artifactId>
    <packaging>war</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>StockOnline Maven Webapp</name>
    <url>http://maven.apache.org</url>

    <properties>
        <jackson-databind.version>2.8.4</jackson-databind.version>
        <spring.version>4.2.0.RELEASE</spring.version>
        <spring-security.version>4.0.2.RELEASE</spring-security.version>
        <spring-data-jpa.version>1.8.2.RELEASE</spring-data-jpa.version>
        <mysql-connector.version>5.1.36</mysql-connector.version>
        <commons-dbcp.version>1.4</commons-dbcp.version>
        <jstl.version>1.2</jstl.version>
        <junit.version>4.12</junit.version>
        <javax.servlet>3.0.1</javax.servlet>
        <logback.version>1.1.3</logback.version>
        <slf4j.version>1.7.21</slf4j.version>
        <openjpa.version>2.4.1</openjpa.version>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <maven.compiler.version>3.6.0</maven.compiler.version>
        <openjpa.maven.plugin>1.2</openjpa.maven.plugin>
        <tomcat7.maven.plugin>2.2</tomcat7.maven.plugin>
        <tomcat7.port>8085</tomcat7.port>
        <tomcat7.path>/</tomcat7.path>
        <liquibase.version>3.5.3</liquibase.version>
        <frontend-plugin.version>1.1</frontend-plugin.version>
