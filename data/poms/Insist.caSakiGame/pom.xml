                    <!--<configuration>-->
                        <!--<type>existing</type>-->
                        <!--<home>D:\WebServer\apache-tomcat-6.0.39</home>-->
                    <!--</configuration>-->
                <!--</configuration>-->
            <!--</plugin>-->
        </plugins>

    </build>
</project>