<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>modules-tests-core</artifactId>
        <groupId>org.jahia.modules.tests</groupId>
        <version>7.1.0.0</version>
        <relativePath/>
    </parent>
    <groupId>org.jahia.modules.landingpagefactory.tests</groupId>
    <artifactId>landing-page-factory-tests</artifactId>
    <name>Jahia Selenium Tests for Landing Page Factory</name>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>
    <properties>
        <test.site.name>landing-page-factory-site</test.site.name>
        <test.site.modules>["landing-page-factory"]</test.site.modules>
        <test.site.template>dx-base-demo-templates</test.site.template>
        <selenium.jahia.host>www.landing-page-factory-test.dev.org</selenium.jahia.host>
        <selenium.jahia.remote>true</selenium.jahia.remote>
        <selenium.jahia.context>/qa</selenium.jahia.context>
        <!-- Name of the bundle that has to be started to launch the test -->
        <system.jahia.bundle.mandatory>landing-page-factory</system.jahia.bundle.mandatory>
    </properties>
    <profiles>
        <profile>
            <id>teamcityAgent</id>
            <activation>
                <property>
                    <name>env.TEAMCITY_GIT_PATH</name>
                    <value>/usr/bin/git</value>
                </property>
            </activation>
            <properties>
                <selenium.jahia.port>${env.TOMCAT_PORT}</selenium.jahia.port>
                <selenium.shared.folder>/mnt/Builds/docker_grid_data/${env.SHARED_FOLDER_NAME}</selenium.shared.folder>
                <selenium.hub.port>${env.SELENIUM_HUB_PORT}</selenium.hub.port>
            </properties>
        </profile>
    </profiles>
</project>