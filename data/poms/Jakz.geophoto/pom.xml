<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.github.jakz</groupId>
  <artifactId>geophoto</artifactId>
  <version>0.1</version>
  <packaging>jar</packaging>

  <name>geophoto</name>
  <url>http://maven.apache.org</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <jdk.version>10</jdk.version>
    <xjc.version>2.3</xjc.version>
    <jxmaps.version>1.2.2</jxmaps.version>
  </properties>
  
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <configuration>
            <source>${jdk.version}</source>
            <target>${jdk.version}</target>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.6.0</version>
        <configuration>
          <source>${jdk.version}</source>
          <target>${jdk.version}</target>
        </configuration>
      </plugin>
      <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-install-plugin</artifactId>
          <version>2.5.2</version>
          <executions>
              <execution>
                  <id>install-external1</id>
                  <phase>clean</phase>
                  <configuration>
                      <file>${project.basedir}/libs/java-json.jar</file>
                      <repositoryLayout>default</repositoryLayout>
                      <groupId>java</groupId>
                      <artifactId>json</artifactId>
                      <version>1.0</version>
                      <packaging>jar</packaging>
                      <generatePom>true</generatePom>
                  </configuration>
                  <goals>
                      <goal>install-file</goal>
                  </goals>
              </execution>
              <execution>
                  <id>install-external2</id>
                  <phase>clean</phase>
                  <configuration>
                      <file>${project.basedir}/libs/jxmaps-1.2.2.jar</file>
                      <repositoryLayout>default</repositoryLayout>
                      <groupId>com.teamdev</groupId>
                      <artifactId>jxmaps</artifactId>
                      <version>1.2.2</version>
                      <packaging>jar</packaging>
                      <generatePom>true</generatePom>
                  </configuration>
                  <goals>
                      <goal>install-file</goal>
                  </goals>
              </execution>
              <execution>
                  <id>install-external3</id>
                  <phase>clean</phase>
                  <configuration>
                      <file>${project.basedir}/libs/jxmaps-mac-1.2.2.jar</file>
                      <repositoryLayout>default</repositoryLayout>
                      <groupId>com.teamdev</groupId>
                      <artifactId>jxmaps-mac</artifactId>
                      <version>1.2.2</version>
                      <packaging>jar</packaging>
                      <generatePom>true</generatePom>
                  </configuration>
                  <goals>
                      <goal>install-file</goal>
                  </goals>
              </execution>
          </executions>
      </plugin>
      <!--><plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>jaxb2-maven-plugin</artifactId>
        <version>${xjc.version}</version>
        <executions>
          <execution>
            <id>xjc</id>
            <goals>
              <goal>xjc</goal>
            </goals>
