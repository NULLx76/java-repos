          <generateDirectory>src/main/java/com/github/jakz/geophoto/gpx/xsd</generateDirectory>
        </configuration>
      </plugin><-->
    </plugins>
  </build>
  
  <repositories>
    <repository>
      <id>com.teamdev</id>
      <url>http://maven.teamdev.com/repository/products</url>
    </repository>
  </repositories>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
      <version>2.5</version>
    </dependency>
  <!--  <dependency>
      <groupId>com.github.mjeanroy</groupId>
