<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>de.fhws.applab.gemara</groupId>
    <artifactId>template</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <name>Template for your projects</name>
    <description>Project template for GeMARA based projects</description>
    <properties>
        <!-- Change the following property to your model file. -->
        <gemara.model.file>de/fhws/applab/gemara/template/Template</gemara.model.file>
        <!-- Leave the following properties unchanged. -->
        <gemara.server.srcgen>./gemara/server/src-gen/main/java</gemara.server.srcgen>
        <gemara.model.javafile>${gemara.model.file}.java</gemara.model.javafile>
    </properties>
    <developers>
        <developer>
            <id>braunpet</id>
            <name>Peter Braun</name>
            <email>peter.braun@fhws.de</email>
            <roles>
                <role>architect</role>
                <role>developer</role>
            </roles>
        </developer>
    </developers>
    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
            <comments>A business-friendly OSS license</comments>
        </license>
    </licenses>
    <scm>
        <connection>
            scm:git:https://jira.applab.fhws.de:7990/scm/gem/norbury.git
        </connection>
        <developerConnection>scm:git:https://jira.applab.fhws.de:7990/scm/gem/norbury.git</developerConnection>
        <tag>HEAD</tag>
        <url>https://jira.applab.fhws.de:7990/scm/gem/norbury.git</url>
    </scm>
    <issueManagement>
        <system>Jira</system>
        <url>https://hg.applab.fhws.de:8180/browse/NOR</url>
    </issueManagement>
    <repositories>
        <repository>
            <id>applabnexus</id>
            <url>http://hg.applab.fhws.de:8081/nexus/content/repositories/snapshots/</url>
        </repository>
    </repositories>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <id>regex-property-file</id>
                        <goals>
                            <goal>regex-property</goal>
                        </goals>
                        <configuration>
                            <name>gemara.model.mainclass</name>
                            <value>${gemara.model.file}</value>
                            <regex>/</regex>
                            <replacement>.</replacement>
                            <failIfNoMatch>true</failIfNoMatch>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.0</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <fork>true</fork>
                    <compilerVersion>1.8</compilerVersion>
                    <showDeprecation>true</showDeprecation>
                    <showWarnings>true</showWarnings>
                    <fork>true</fork>
                </configuration>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.5.0</version>
                <executions>
                    <execution>
                        <id>start-generator</id>
                        <configuration>
                            <!-- If your IDE show the following property red it's okay. It'll be generated. -->
                            <mainClass>${gemara.model.mainclass}</mainClass>
                        </configuration>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>java</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>compile-generated-source-code-by-external-maven-parent</id>
                        <configuration>
                            <executable>mvn</executable>
                            <workingDirectory>gemara</workingDirectory>
                            <arguments>
                                <argument>package</argument>
                            </arguments>
                        </configuration>
                        <phase>compile</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>redeploy-tomcat-by-external-maven</id>
                        <configuration>
                            <executable>mvn</executable>
                            <workingDirectory>gemara/server</workingDirectory>
                            <arguments>
                                <argument>clean</argument>
                                <argument>tomcat:redeploy</argument>
                            </arguments>
                        </configuration>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>

                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <id>copy-source-files-to-src-gen</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <copy todir="${gemara.server.srcgen}">
                                    <fileset dir="${project.build.sourceDirectory}">
                                        <exclude name="${gemara.model.javafile}"/>
                                    </fileset>
                                </copy>
                            </tasks>
                        </configuration>
                    </execution>
                    <execution>
                        <id>wait-for-some-time</id>
                        <configuration>
                            <tasks>
                                <sleep seconds="5"/>
                            </tasks>
                        </configuration>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.19.1</version>
                <configuration>
                    <excludes>
                        <exclude>**/*.java</exclude>
                    </excludes>
                </configuration>
                <executions>
                    <execution>
                        <phase>integration-test</phase>
                        <goals>
                            <goal>test</goal>
                        </goals>
                        <configuration>
                            <skip>false</skip>
                            <excludes>
                                <exclude>none</exclude>
                            </excludes>
                            <includes>
                                <include>**/*.java</include>
                            </includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.4</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.17</version>
        </dependency>
        <dependency>
            <groupId>de.fhws.applab.gemara</groupId>
            <artifactId>ratcliff</artifactId>
            <version>0.1.0-SNAPSHOT</version>
        </dependency>
    </dependencies>
</project>
