                                        <!--</excludes>-->
                                        <!--<limits>-->
                                        <!--<limit>-->
                                        <!--<counter>LINE</counter>-->
                                        <!--<value>COVEREDRATIO</value>-->
                                        <!--<minimum>0.50</minimum>-->
                                        <!--</limit>-->
                                        <!--</limits>-->
                                        <!--</rule>-->
                                    </rules>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- Directory plugin to find parent root directory absolute path -->

                </plugins>
            </build>
