			<groupId>org.apache.maven.surefire</groupId>
			<artifactId>surefire</artifactId>
			<version>2.19.1</version>
			<type>pom</type>
		</dependency>
		<!-- http://mvnrepository.com/artifact/com.jolbox/bonecp -->
