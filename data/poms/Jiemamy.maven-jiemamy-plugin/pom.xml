<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.jiemamy</groupId>
    <artifactId>jiemamy-master</artifactId>
    <version>2.0.0</version>
  </parent>
  <artifactId>maven-jiemamy-plugin</artifactId>
  <packaging>maven-plugin</packaging>
  <name>Jiemamy Maven Plugin</name>
  <description>The Jiemamy Plugin is used to execute/import/export Jiemamy XML model.</description>
  <version>1.0.0-SNAPSHOT</version>
  <issueManagement>
    <system>JIRA</system>
    <url>http://jira.jiemamy.org/browse/MVN</url>
  </issueManagement>
  <ciManagement>
    <system>bamboo</system>
    <url>http://bamboo.jiemamy.org/browse/EROS-MVN</url>
    <notifiers>
      <notifier>
        <sendOnSuccess>false</sendOnSuccess>
        <configuration>
          <recipients>jiemamy-notify@googlegroups.com</recipients>
        </configuration>
      </notifier>
    </notifiers>
  </ciManagement>
  <inceptionYear>2007</inceptionYear>
  <developers>
    <developer>
      <id>daisuke</id>
      <name>MIYAMOTO Daisuke</name>
      <email>daisuke_m at users.sourceforge.jp</email>
      <url>http://d.hatena.ne.jp/daisuke-m/</url>
      <timezone>+9</timezone>
    </developer>
  </developers>
  <scm>
    <connection>scm:svn:http://svn.jiemamy.org/products/eros/maven-jiemamy-plugin/trunk</connection>
    <developerConnection>scm:svn:http://svn.jiemamy.org/products/eros/maven-jiemamy-plugin/trunk</developerConnection>
    <url>http://fisheye.jiemamy.org/browse/eros/maven-jiemamy-plugin/trunk</url>
  </scm>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit-dep</artifactId>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <groupId>org.hamcrest</groupId>
          <artifactId>hamcrest-core</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.hamcrest</groupId>
      <artifactId>hamcrest-library</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-core</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.maven.plugin-testing</groupId>
      <artifactId>maven-plugin-testing-harness</artifactId>
      <version>1.2</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>postgresql</groupId>
      <artifactId>postgresql</artifactId>
      <version>8.3-603.jdbc3</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.jiemamy</groupId>
      <artifactId>jiemamy-dialect-mysql</artifactId>
      <version>${jiemamy.mysql.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.jiemamy</groupId>
      <artifactId>jiemamy-dialect-postgresql</artifactId>
      <version>${jiemamy.postgresql.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-plugin-api</artifactId>
      <version>2.0</version>
    </dependency>
    <dependency>
      <groupId>javassist</groupId>
      <artifactId>javassist</artifactId>
      <version>3.8.0.GA</version>
    </dependency>
    <dependency>
      <groupId>org.jiemamy</groupId>
      <artifactId>jiemamy-core</artifactId>
      <version>${jiemamy.version}</version>
    </dependency>
    <dependency>
      <groupId>org.jiemamy</groupId>
      <artifactId>jiemamy-diagram</artifactId>
      <version>${jiemamy.version}</version>
    </dependency>
    <dependency>
      <groupId>org.jiemamy</groupId>
      <artifactId>jiemamy-sql</artifactId>
      <version>${jiemamy.version}</version>
    </dependency>
    <dependency>
      <groupId>org.jiemamy.test</groupId>
      <artifactId>jiemamy-test-helper</artifactId>
      <version>${jiemamy.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>mysql</groupId>
      <artifactId>mysql-connector-java</artifactId>
      <version>5.0.4</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <repositories>
    <repository>
      <id>jiemamy.org-release</id>
      <name>Jiemamy Repository</name>
      <url>http://maven.jiemamy.org/release</url>
    </repository>
    <repository>
      <id>jiemamy.org-snapshot</id>
      <name>Jiemamy SNAPSHOT Repository</name>
      <url>http://maven.jiemamy.org/snapshot</url>
    </repository>
    <!-- 
    <repository>
      <id>jiemamy.org-snapshot</id>
      <name>Jiemamy Snapshot Repository</name>
      <url>http://maven.jiemamy.org/snapshot</url>
      <snapshots>
        <enabled>true</enabled>
        <updatePolicy>always</updatePolicy>
      </snapshots>
    </repository>
    -->
  </repositories>
  <properties>
    <jiemamy.version>1.0.0-SNAPSHOT</jiemamy.version>
    <jiemamy.mysql.version>1.0.0-SNAPSHOT</jiemamy.mysql.version>
    <jiemamy.postgresql.version>1.0.0-SNAPSHOT</jiemamy.postgresql.version>
  </properties>
</project>
