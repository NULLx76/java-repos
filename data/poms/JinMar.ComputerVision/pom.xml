            <scope>system</scope>
            <version>1.0</version>
            <systemPath>${basedir}/jar-lib/opencv-310.jar</systemPath>
        </dependency>

    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
