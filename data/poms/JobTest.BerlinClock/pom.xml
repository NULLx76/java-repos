<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <name>BerlinClock</name>

    <groupId>luxoft</groupId>
    <artifactId>com.berlinclock</artifactId>
    <version>1.1</version>

    <packaging>jar</packaging>

    <properties>
        <!--compiler properties-->
        <source.version>1.8</source.version>
        <target.version>1.8</target.version>
        <encoding>UTF-8</encoding>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <!--compiler properties-->

        <junit.version>4.8.1</junit.version>
        <plugin.api.version>3.2.3</plugin.api.version>
        <maven-compiler-plugin.version>3.0</maven-compiler-plugin.version>
        <mockito-core.version>1.9.0</mockito-core.version>
        <maven-surefire-plugin.version>2.12.4</maven-surefire-plugin.version>
        <commons-lang3.version>3.4</commons-lang3.version>
    </properties>

    <url>http://maven.apache.org</url>
    <developers>
        <developer>
            <name>Lazarchuk Aleksandr</name>
            <url></url>
        </developer>
    </developers>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.maven</groupId>
            <artifactId>maven-plugin-api</artifactId>
            <version>${plugin.api.version}</version>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <version>${mockito-core.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>${commons-lang3.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven-compiler-plugin.version}</version>
                <configuration>
                    <source>${target.version}</source>
                    <target>${target.version}</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>${maven-surefire-plugin.version}</version>
                <configuration>
                    <includes>
                        <include>**/*Test.java</include>
                    </includes>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>default</id>
            <properties>
                <proj.name>Luhn Algorithm (Luxoft)</proj.name>
                <current.version>1.1</current.version>
            </properties>
            <modules>
            </modules>
        </profile>
    </profiles>
</project>