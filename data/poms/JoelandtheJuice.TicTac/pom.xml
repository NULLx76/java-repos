	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.11</version>
			<scope>test</scope>
		</dependency>
		 <dependency>
            <groupId>lib.algs4</groupId>
            <artifactId>algs4</artifactId>
            <version>1</version> 
			<scope>system</scope> <!-- may cause problems when running locally -->
          <systemPath>${project.basedir}/lib/algs4.jar</systemPath>
        </dependency>
	</dependencies>

	<properties>
		<!-- Set encoding options - avoid platform issues -->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<!-- Use JAVA 7 (OpenJDK or Oracle) -->
		<maven.compiler.source>1.7</maven.compiler.source>
		<maven.compiler.target>1.7</maven.compiler.target>
