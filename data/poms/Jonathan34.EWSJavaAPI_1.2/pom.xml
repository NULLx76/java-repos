<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>microsoft.exchange.webservices.data</groupId>
    <artifactId>EWJSJavaAPI</artifactId>
    <version>1.2</version>
    <packaging>jar</packaging>
    <name>EWJS</name>

    <repositories>
        <repository>
            <id>project-common</id>
            <name>Project Common</name>
            <!--https://github.com/Jonathan34/mvn-repo/raw/master/stax2-api-android/stax2-api-android/3.1.1/stax2-api-android-3.1.1.jar-->
            <url>https://github.com/Jonathan34/mvn-repo/raw/master/</url>
        </repository>
    </repositories>

    <properties>
        <project.build.sourceencoding>UTF-8</project.build.sourceencoding>
    </properties>

    <dependencies>
        <dependency>
            <groupId>commons-codec</groupId>
            <artifactId>commons-codec</artifactId>
            <version>1.8</version>
            <type>jar</type>
            <scope>compile</scope>
            <optional>false</optional>
        </dependency>
        <dependency>
            <groupId>commons-httpclient</groupId>
            <artifactId>commons-httpclient</artifactId>
            <version>3.1</version>
            <type>jar</type>
            <scope>compile</scope>
            <optional>false</optional>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.1.3</version>
            <type>jar</type>
            <scope>compile</scope>
            <optional>false</optional>
        </dependency>
        <dependency>
            <groupId>jcifs</groupId>
            <artifactId>jcifs</artifactId>
            <version>1.3.17</version>
            <type>jar</type>
            <scope>compile</scope>
            <optional>false</optional>
        </dependency>
        <dependency>
            <groupId>stax2-api-android</groupId>
            <artifactId>stax2-api-android</artifactId>
            <version>3.1.1</version>
            <type>jar</type>
            <scope>compile</scope>
            <optional>false</optional>
        </dependency>
        <dependency>
            <groupId>jsr173-android</groupId>
            <artifactId>jsr173-android</artifactId>
            <version>1.0</version>
            <type>jar</type>
            <scope>compile</scope>
            <optional>false</optional>
        </dependency>
       <!--<dependency>
            <groupId>stax-api-android</groupId>
            <artifactId>stax-api-android</artifactId>
            <version>1.0</version>
            <type>jar</type>
            <scope>compile</scope>
            <optional>false</optional>
        </dependency>-->
        <dependency>
            <groupId>jaxws-api-android</groupId>
            <artifactId>jaxws-api-android</artifactId>
            <version>2.2.11</version>
            <type>jar</type>
            <scope>compile</scope>
            <optional>false</optional>
        </dependency>
        <dependency>
            <groupId>jaxb-api-android</groupId>
            <artifactId>jaxb-api-android</artifactId>
            <version>2.2.11</version>
            <type>jar</type>
            <scope>compile</scope>
            <optional>false</optional>
        </dependency>
        <dependency>
            <groupId>jaxp-api-android</groupId>
            <artifactId>jaxp-api-android</artifactId>
            <version>1.4.2</version>
            <type>jar</type>
            <scope>compile</scope>
            <optional>false</optional>
        </dependency>
        <dependency>
            <groupId>stax-android</groupId>
            <artifactId>stax-android</artifactId>
            <version>1.2.0</version>
            <type>jar</type>
            <scope>compile</scope>
            <optional>false</optional>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>Strings.properties</include>
                </includes>
                <!-- relative to target/classes i.e. ${project.build.outputDirectory} -->
                <targetPath>microsoft/exchange/webservices/data/</targetPath>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <inherited>true</inherited>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <finalName>uber-${artifactId}-${version}</finalName>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>