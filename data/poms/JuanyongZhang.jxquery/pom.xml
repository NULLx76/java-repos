<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.googlecode.jxquery</groupId>
	<artifactId>jxquery</artifactId>
	<version>1.0.0</version>
	<packaging>jar</packaging>
	<name>jxquery</name>
	<url>http://jxquery.googlecode.com</url>
	<description>jxquery</description>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<ver_junit>4.8.2</ver_junit>
		<ver_commons-beanutils>1.8.3</ver_commons-beanutils>
		<ver_commons-collections>3.2.1</ver_commons-collections>
		<ver_commons-lang>2.5</ver_commons-lang>
		<ver_commons-io>2.0.1</ver_commons-io>
		<ver_json-lib>2.4</ver_json-lib>
		<ver_log4j>1.2.9</ver_log4j>
		<ver_slf4j>1.7.7</ver_slf4j>
		<ver_ezmorph>1.0.6</ver_ezmorph>
		<ver_maven-source-plugin>2.2.1</ver_maven-source-plugin>
		<ver_maven-javadoc-plugin>2.9.1</ver_maven-javadoc-plugin>
		<ver_maven-gpg-plugin>1.5</ver_maven-gpg-plugin>
		<ver_maven-scm-plugin>1.9</ver_maven-scm-plugin>
	</properties>

	<scm>
		<url>scm:svn:http://jxquery.googlecode.com/svn/trunk/jxQuery/</url>
		<connection>scm:svn:http://jxquery.googlecode.com/svn/trunk/jxQuery/</connection>
		<developerConnection>scm:svn:https://jxquery.googlecode.com/svn/trunk/jxQuery/</developerConnection>
	</scm>

	<distributionManagement>
		<repository>
			<id>sonatype-release</id>
			<name>Sonatype Release Repository</name>
			<url>https://oss.sonatype.org/service/local/staging/deploy/maven2</url>
		</repository>
		<snapshotRepository>
			<id>sonatype-snapshots</id>
			<name>Sonatype Snapshot Repository</name>
			<url>https://oss.sonatype.org/content/repositories/snapshots</url>
		</snapshotRepository>
	</distributionManagement>

	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<developers>
		<developer>
			<name>Juanyong Zhang</name>
			<id>jzhang</id>
			<email>Juanyong.zhagn@gmail.com</email>
		</developer>
	</developers>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${ver_junit}</version>
		</dependency>
		<dependency>
			<groupId>commons-beanutils</groupId>
			<artifactId>commons-beanutils</artifactId>
			<version>${ver_commons-beanutils}</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>commons-collections</groupId>
			<artifactId>commons-collections</artifactId>
			<version>${ver_commons-collections}</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>${ver_commons-lang}</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>${ver_commons-io}</version>
		</dependency>
		<dependency>
			<groupId>net.sf.json-lib</groupId>
			<artifactId>json-lib</artifactId>
			<version>${ver_json-lib}</version>
			<classifier>jdk15</classifier>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>${ver_log4j}</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
			<version>${ver_slf4j}</version>
		</dependency>
		<dependency>
			<groupId>net.sf.ezmorph</groupId>
			<artifactId>ezmorph</artifactId>
			<version>${ver_ezmorph}</version>
			<scope>compile</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>${ver_maven-source-plugin}</version>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>verify</phase>
						<goals>
			        		<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
			  <groupId>org.apache.maven.plugins</groupId>
			  <artifactId>maven-javadoc-plugin</artifactId>
			  <version>${ver_maven-javadoc-plugin}</version>
			  <executions>
			    <execution>
			      <id>attach-javadocs</id>
			      <phase>verify</phase>
			      <goals>
			        <goal>jar</goal>
			      </goals>
			    </execution>
			  </executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-scm-plugin</artifactId>
				<version>${ver_maven-scm-plugin}</version>
				<configuration>
					<username>${googlecode_svn_username}</username>
					<password>${googlecode_svn_password}</password>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-gpg-plugin</artifactId>
				<version>${ver_maven-gpg-plugin}</version>
				<executions>
					<execution>
						<id>sign-artifacts</id>
						<phase>verify</phase>
						<goals>
							<goal>sign</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
