	<build>
		<finalName>aladdin_mall_test</finalName>
		<resources>
			<resource>
				<directory>src/main/java</directory>
				<includes>
					<include>**/*.xml</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/resources/common</directory>
				<includes>
					<include>*.xml</include>
					<include>*.properties</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/resources/${config.dir}</directory>
			</resource>
		</resources>
	</build>

	<profiles>
		<profile>
			<id>dev</id>
			<properties>
				<config.dir>dev</config.dir>
			</properties>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
		</profile>
		<profile>
			<id>pro</id>
			<properties>
				<config.dir>pro</config.dir>
			</properties>
		</profile>
		<profile>
			<id>test</id>
			<properties>
				<config.dir>test</config.dir>
			</properties>
		</profile>
		<profile>
			<id>uat</id>
			<properties>
				<config.dir>uat</config.dir>
			</properties>
		</profile>

	</profiles>
</project>
