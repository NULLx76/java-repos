<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.djt.client</groupId>
	<artifactId>beanstalk</artifactId>
	<version>0.0.8-SNAPSHOT</version>
	<packaging>jar</packaging>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<distributionManagement>
		<repository>
			<id>totem-release</id>
			<url>http://10.58.50.26:8081/nexus/content/repositories/releases</url>
		</repository>
		<snapshotRepository>
			<id>totem-snapshot</id>
			<url>http://10.58.50.26:8081/nexus/content/repositories/snapshots</url>
		</snapshotRepository>
	</distributionManagement>
	<scm>  
  		<connection>scm:git:https://github.com/douwanglong/beanstalk-pool.git</connection>  
  		<developerConnection>scm:git:git@github.com:douwanglong/beanstalk-pool.git</developerConnection> 
		<url>https://github.com/douwanglong/beanstalk-pool.git</url>
    <tag>HEAD</tag>
  </scm> 

	<dependencies>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-pool2</artifactId>
			<version>2.3</version>
		</dependency>
		<dependency>
			<groupId>com.esotericsoftware</groupId>
			<artifactId>kryo</artifactId>
			<version>3.0.1</version>
		</dependency>
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<version>1.1.1</version>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.17</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>  
			  <groupId>org.apache.maven.plugins</groupId>  
			  <artifactId>maven-release-plugin</artifactId> 
			  <version>2.4.1</version>  
			  <configuration>
					<useReleaseProfile>false</useReleaseProfile>
       				<releaseProfiles>release</releaseProfiles>
       				 <autoVersionSubmodules>true</autoVersionSubmodules>
			  		<checkModificationExclude>.classpath</checkModificationExclude>
					<checkModificationExclude>.project</checkModificationExclude>
					<checkModificationExclude>target/*.*</checkModificationExclude>
					<checkModificationExclude>pom.xml</checkModificationExclude>
			  		<pushChanges>false</pushChanges>
					<localCheckout>false</localCheckout>
			    		<!--<tagBase>git@git.oschina.net:douwanglong/beanstalk-pool.git/tags/</tagBase>-->
			  </configuration>  
			</plugin>
		</plugins>
	</build>
</project>
