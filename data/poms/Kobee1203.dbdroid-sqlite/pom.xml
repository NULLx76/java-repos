<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <groupId>org.nds.dbdroid.sqlite</groupId>
    <artifactId>dbdroid-sqlite-parent</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>SQLite Database for Android (dbdroid-sqlite) - pom parent</name>

	<description></description>

	<developers>
		<developer>
			<id>nicolas.dossantos</id>
			<name>Nicolas Dos Santos</name>
			<email>nicolas.dossantos@gmail.com</email>
		</developer>
	</developers>
	
	<url>http://code.google.com/p/dbdroid-sqlite/</url>
	
	<licenses>
		<license>
			<name>GNU Lesser General Public License</name>
			<url>http://www.gnu.org/licenses/lgpl.html</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<properties>
        <maven.version>2.2.1</maven.version>
    </properties>
	
	<modules>
        <module>dbdroid-sqlite</module>
        <module>dbdroid-sqlite-app</module>
        <module>dbdroid-sqlite-test</module>
    </modules>
	
	<dependencyManagement>
        <dependencies>
            <dependency>
              <groupId>com.google.android</groupId>
              <artifactId>android</artifactId>
              <version>1.5_r3</version>
          	</dependency>
            <dependency>
                <groupId>com.google.android</groupId>
                <artifactId>android-test</artifactId>
                <version>1.5_r3</version>
            </dependency>
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>4.8.1</version>
            </dependency>
            <dependency>
                <groupId>org.nds.logging</groupId>
                <artifactId>nds-logging</artifactId>
                <version>1.0.1</version>
            </dependency>
			<dependency>
				<groupId>org.nds.dbdroid</groupId>
				<artifactId>dbdroid-core</artifactId>
				<version>0.0.1-SNAPSHOT</version>
			</dependency>
        </dependencies>
    </dependencyManagement>
	
    <build>
		<extensions>
			<extension>
				<groupId>org.jvnet.wagon-svn</groupId>
				<artifactId>wagon-svn</artifactId>
				<version>1.8</version>
			</extension>
		</extensions>
		
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>com.jayway.maven.plugins.android.generation2</groupId>
                    <artifactId>maven-android-plugin</artifactId>
					<version>2.8.3</version>
                    <configuration>
                        <sdk>
                            <platform>3</platform>
                        </sdk>
                        <emulator>
                            <avd><!--my_avd--></avd>
                        </emulator>
                        <deleteConflictingFiles>true</deleteConflictingFiles>
                        <undeployBeforeDeploy>true</undeployBeforeDeploy>
                    </configuration>
                    <extensions>true</extensions>
                </plugin>
                <plugin>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>2.3.2</version>
                </plugin>
            </plugins>
        </pluginManagement>
		<plugins>
            <plugin>
            	<groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.1</version>
                <configuration>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.3.1</version>
                <configuration>
                    <archive>
                        <manifestEntries>
                            <Build-Source-Version>1.5</Build-Source-Version>
                            <Build-Target-Version>1.5</Build-Target-Version>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-enforcer-plugin</artifactId>
				<version>1.0</version>
                <executions>
                    <execution>
                        <id>enforce-maven</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireMavenVersion>
                                    <version>[${maven.version},)</version>
                                    <message>Check for Maven version &gt;=${maven.version} failed. Update your Maven install.</message>
                                </requireMavenVersion>
                            </rules>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
	
	<repositories>
		<repository>
			<id>maven2-repository.dev.java.net</id>
			<name>Java.net Repository for Maven</name>
			<url>http://download.java.net/maven/2/</url>
		</repository>
		<repository>
			<id>nds-logging</id>
			<name>NDS Logging Repository for Maven</name>
			<url>http://nds-logging.googlecode.com/svn/repo/</url>
		</repository>
		<repository>
			<id>dbdroid-core</id>
			<name>DBDroid Repository for Maven</name>
			<url>http://dbdroid.googlecode.com/svn/repo/</url>
		</repository>
	</repositories>
    
	<scm>
        <url>https://dbdroid-sqlite.googlecode.com/svn/trunk</url>
        <connection>scm:svn:https://dbdroid-sqlite.googlecode.com/svn/trunk</connection>
        <developerConnection>scm:svn:https://dbdroid-sqlite.googlecode.com/svn/trunk</developerConnection>
    </scm>

	<distributionManagement>
		<repository>
			<id>googlecode-releases-repository</id>
			<name>Google Code Releases Repository</name>
			<uniqueVersion>false</uniqueVersion>
			<url>svn:https://dbdroid-sqlite.googlecode.com/svn/repo/releases</url>
		</repository>
		<snapshotRepository>
			<id>googlecode-snapshots-repository</id>
			<name>Google Code Snapshots Repository</name>
			<uniqueVersion>false</uniqueVersion>
			<url>svn:https://dbdroid-sqlite.googlecode.com/svn/repo/snapshots</url>
		</snapshotRepository>
    </distributionManagement>
</project>
