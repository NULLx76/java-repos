<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.openoces</groupId>
    <version>2.1.14-SNAPSHOT</version>
    <artifactId>opensign</artifactId>
    <packaging>pom</packaging>
    <name>Opensign Project</name>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    <distributionManagement>
        <repository>
            <id>jumphost_releases</id>
            <name>OpenOces releases</name>
            <url>http://jumpn01z1.utl1.certifikat.dk:8082/content/repositories/openoces_releases/</url>
        </repository>
        <snapshotRepository>
            <id>jumphost_snapshots</id>
            <name>OpenOces snapshots</name>
            <url>http://jumpn01z1.utl1.certifikat.dk:8082/content/repositories/openoces_snapshots</url>
        </snapshotRepository>
    </distributionManagement>
    <scm>
        <connection>scm:cvs:ext:${user.name}@openoces.org:/opt/cvs:opensign</connection>
        <developerConnection>scm:cvs:ext:${user.name}@openoces.org:/opt/cvs:opensign</developerConnection>
  </scm>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>4.8.1</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>java</groupId>
                <artifactId>java-plugin</artifactId>
                <version>jre-1.6.0</version>
                <systemPath>${java.home}/lib/plugin.jar</systemPath>
                <scope>system</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <echo>If you don't have access to the JPedal dependency building the pdf modules. Then use the exclude-pdf profile.</echo>
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.5.1</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.3.2</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.3</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>all</id>
            <modules>
                <module>test-utils</module>
                <module>applet</module>
                <module>demo</module>
            </modules>
        </profile>
        <profile>
            <id>exclude-pdf</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <modules>
                <module>test-utils</module>
                <module>applet</module>
                <module>pdf-validator</module>
            </modules>
        </profile>
        <profile>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <id>aarhus</id>
            <properties>
                <opensign.applet.signing.certificate.version>1.0.0</opensign.applet.signing.certificate.version>
                <opensign.applet.signing.certificate.alias>nets danid a/s - opensigncertificate</opensign.applet.signing.certificate.alias>
                <org.openoces.ooapi.version>1.134.2</org.openoces.ooapi.version>
            </properties>
        </profile>
        <profile>
            <id>ibm</id>
            <properties>
                <opensign.applet.signing.certificate.version>2.0.0</opensign.applet.signing.certificate.version>
                <opensign.applet.signing.certificate.alias>appletsign</opensign.applet.signing.certificate.alias>
                <org.openoces.ooapi.version>155.4.9</org.openoces.ooapi.version>
            </properties>
        </profile>
    </profiles>
</project>
