	 <!-- Repositories -->
    <repositories>
        <repository>
            <id>krieger-projects</id>
            <name>Krieger Private Repository</name>
            <url>http://krieger.mx:8081/artifactory/projects</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
            </releases>
        </repository>
        <repository>
            <id>krieger-public</id>
            <name>Krieger Public Repository</name>
            <url>http://krieger.mx:8081/artifactory/public</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
            </releases>
        </repository>
    </repositories>
	
	 <!-- Distributions Management to release artifact into public repository -->
    <distributionManagement>
        <repository>
            <id>krieger-public</id>
            <name>Krieger Public Repository</name>
            <url>http://krieger.mx:8081/artifactory/public</url>
            <layout>maven-2-default</layout>
            <uniqueVersion>false</uniqueVersion>
        </repository>
        <snapshotRepository>
            <id>krieger-public</id>
            <name>Krieger Public Repository</name>
            <url>http://krieger.mx:8081/artifactory/public</url>
            <layout>maven-2-default</layout>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>
	
	 <!-- Dependencies -->
    <dependencies>
        <!-- Test Dependencies -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-all</artifactId>
            <version>2.0.2-beta</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
	
	<!-- Build -->
	<build>
		<extensions>
            <!-- Extension used to upload artifacts to internal repository -->
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-http</artifactId>
                <version>1.0-beta-6</version>
            </extension>
        </extensions>
    </build>
</project>