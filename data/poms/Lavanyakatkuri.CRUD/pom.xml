  <build>
    <finalName>CRUDapplication</finalName>
    <plugins>
            <plugin>
                <groupId>org.apache.tomcat.maven</groupId>
                <artifactId>tomcat8-maven-plugin</artifactId>
                <version>8</version>
                <configuration>
					<warSourceDirectory>src/main/webapp</warSourceDirectory>
