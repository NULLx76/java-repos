<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <bioformats.groupId>ome</bioformats.groupId>
    <bioformats.version>5.0.1</bioformats.version>
    <junit.version>4.8.1</junit.version>
  </properties>
  <groupId>org.cellprofiler</groupId>
  <artifactId>tileimg</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>tileimg</name>
  <description>Tile a TIF stack into bite-size pieces</description>
  <dependencies>
    <dependency>
    	<groupId>commons-cli</groupId>
    	<artifactId>commons-cli</artifactId>
    	<version>1.2</version>
    	<type>jar</type>
    	<scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>1.7.2</version>
    </dependency>
    <dependency>
      <groupId>${bioformats.groupId}</groupId>
      <artifactId>formats-api</artifactId>
      <version>${bioformats.version}</version>
    </dependency>
    <dependency>
      <groupId>${bioformats.groupId}</groupId>
      <artifactId>formats-gpl</artifactId>
      <version>${bioformats.version}</version>
    </dependency>
    <dependency>
      <groupId>${bioformats.groupId}</groupId>
      <artifactId>formats-common</artifactId>
      <version>${bioformats.version}</version>
    </dependency>
    <dependency>
      <groupId>${bioformats.groupId}</groupId>
      <artifactId>ome-xml</artifactId>
      <version>${bioformats.version}</version>
    </dependency>
    <dependency>
      <groupId>${bioformats.groupId}</groupId>
      <artifactId>formats-bsd</artifactId>
      <version>${bioformats.version}</version>
    </dependency>
 	<dependency>
 	  <groupId>junit</groupId>
 	  <artifactId>junit</artifactId>
 	  <version>${junit.version}</version>
 	  <scope>test</scope>
 	</dependency>
  </dependencies>
  <build>
  	<plugins>
      <plugin>
        <!-- NOTE: We don't need a groupId specification because the group is
             org.apache.maven.plugins ...which is assumed by default.
         -->
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <descriptorRefs>
            <descriptorRef>jar-with-dependencies</descriptorRef>
          </descriptorRefs>
          <finalName>tileimg</finalName>
 		  <archive>
            <manifest>
              <mainClass>org.cellprofiler.tileimg.TileImg</mainClass>
            </manifest>
          </archive>        
       </configuration>
        <executions>
          <execution>
            <id>make-assembly</id> <!-- this is used for inheritance merges -->
            <phase>package</phase> <!-- bind to the packaging phase -->
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
   	</plugin>
  </plugins>  
  </build>
  <repositories>
	<repository>
	  <id>ome.releases</id>
	  <url>http://artifacts.openmicroscopy.org/artifactory/ome.releases</url>
	</repository>
	<repository>
	  <id>ome.snapshots</id>
	  <url>http://artifacts.openmicroscopy.org/artifactory/ome.snapshots</url>
	</repository>
  	<repository>
      <id>imagej.releases</id>
      <url>http://maven.imagej.net/content/repositories/releases</url>
  	</repository>
  </repositories>
</project>