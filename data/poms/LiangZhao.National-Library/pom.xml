	<groupId>au.gov</groupId>
	<artifactId>NationalLibrary</artifactId>
	<packaging>war</packaging>
	<version>1.0</version>
	<name>NationalLibrary Webapp</name>

	<properties>
		<springside.version>4.2.2.GA</springside.version>
		<spring.version>4.0.5.RELEASE</spring.version>
		<!-- Logging -->
		<logback.version>1.1.1</logback.version>
		<slf4j.version>1.7.5</slf4j.version>
		<tomcat-jdbc.version>7.0.52</tomcat-jdbc.version>
		<jackson.version>2.3.1</jackson.version>
		<h2.database>1.4.192</h2.database>
		<mybatis.version>3.2.5</mybatis.version>
		<mybatis-spring.version>1.2.2</mybatis-spring.version>
		<!-- Test -->
		<junit.version>4.11</junit.version>
		<!-- Web -->
		<jsp.version>2.2</jsp.version>
		<jstl.version>1.2</jstl.version>
		<servlet.version>2.5</servlet.version>

		<!-- properties of plugins -->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<java.version>1.8</java.version>

		<jdbc.driver.groupId>mysql</jdbc.driver.groupId>
		<jdbc.driver.artifactId>mysql-connector-java</jdbc.driver.artifactId>
		<jdbc.driver.version>5.1.22</jdbc.driver.version>
	</properties>

