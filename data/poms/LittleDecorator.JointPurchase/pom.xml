            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.20</version>
                <configuration>
                    <skip>${it.skip}</skip>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <addResources>true</addResources>
                    <jvmArguments>
	                    <!-- Debug options -->
	                    -Xdebug
	                    -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=5006

	                    -Xms1200m
	                    -Xmx1200m

	                    -XX:MinHeapFreeRatio=10
	                    -XX:MaxHeapFreeRatio=70
	                    -XX:CompressedClassSpaceSize=64m
	                    -XX:ReservedCodeCacheSize=64m

	                    -XX:+DisableExplicitGC
                        -XX:+PrintGCDetails
                        -XX:+PrintGCApplicationStoppedTime
                        -XX:+PrintGCApplicationConcurrentTime
                        -XX:+PrintGCDateStamps
                        <!--Tenuring Distribution-->
                        -XX:+PrintTenuringDistribution
                        <!-- Log file options -->
                        -Xloggc:/tmp/logs/gc.log
                        -XX:+UseGCLogFileRotation
                        -XX:NumberOfGCLogFiles=5
                        -XX:GCLogFileSize=2000k

	                    <!-- to increase the initial size of Metaspaces (the default is 16M);-->
                        -XX:MetaspaceSize=100m
                        <!-- to increase the boot class loader Metaspace;-->
                        -XX:InitialBootClassLoaderMetaspaceSize=32m
                        <!-- to make Metaspaces grow more agressively;-->
                        -XX:MinMetaspaceFreeRatio=50
                        <!-- to reduce the chance of Metaspaces shrinking;-->
                        -XX:MaxMetaspaceFreeRatio=80
                        <!-- the minumum size by which a Metaspace is exanded-->
                        -XX:MinMetaspaceExpansion=4m
                        <!--the maximum size to expand a Metaspace by without Full GC-->
                        -XX:MaxMetaspaceExpansion=16m
	                    -XX:MaxMetaspaceSize=256m

	                    <!-- Enable memory dump on OutOfMemory-->
	                    -XX:+HeapDumpOnOutOfMemoryError
	                    <!-- path for dump log -->
	                    -XX:HeapDumpPath=/tmp/logs/heap.hprof
                    </jvmArguments>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                        <configuration>
                            <finalName>${project.final.name}</finalName>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

