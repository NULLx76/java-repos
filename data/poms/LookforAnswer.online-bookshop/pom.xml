  <name>online-bookshop Maven Webapp</name>
  <url>http://maven.apache.org</url>
  
  <properties>
  	<!-- 数据库连接池 驱动的jar包 版本号 -->
  	<druid.version>1.0.13</druid.version>
  	<!-- junit包的版本号 -->
  	<junit.version>4.12</junit.version>
	<!-- log4j日志文件管理包版本号 -->
