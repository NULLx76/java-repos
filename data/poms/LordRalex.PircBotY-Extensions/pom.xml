                            </includes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>rem</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <classifier>rem</classifier>
                            <includes>
                                <include>**/extensions/rem/**</include>
                            </includes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>removal</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <classifier>removal</classifier>
                            <includes>
