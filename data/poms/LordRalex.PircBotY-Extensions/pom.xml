                            </includes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>invite</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <classifier>invite</classifier>
                            <includes>
                                <include>**/extensions/invite/**</include>
                            </includes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>mcnames</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <classifier>mcnames</classifier>
                            <includes>
                                <include>**/extensions/mcnames/**</include>
                            </includes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>mcping</id>
