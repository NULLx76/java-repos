<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>net.ae97</groupId>
    <artifactId>pokebot-extensions</artifactId>
    <version>2.0.0</version>
    <packaging>jar</packaging>

    <name>PokeBot-Extensions</name>
    <url>http://maven.apache.org</url>
  
    <licenses>
        <license>
            <name>General Public License, Version 3.0</name>
            <url>http://www.gnu.org/licenses/gpl-3.0.html</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.5.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
                <executions>
                    <execution>
                        <id>all</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <classifier>all</classifier>
                            <includes>
                                <include>**/*</include>
                            </includes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>antispam</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <classifier>antispam</classifier>
                            <includes>
                                <include>**/extensions/antispam/**</include>
                            </includes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>bans</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <classifier>bans</classifier>
                            <includes>
                                <include>**/extensions/bans/**</include>
                            </includes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>blacklist</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <classifier>blacklist</classifier>
                            <includes>
                                <include>**/extensions/blacklist/**</include>
                            </includes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>censor</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <classifier>censor</classifier>
                            <includes>
                                <include>**/extensions/censor/**</include>
                            </includes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>dxdiag</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <classifier>dxdiag</classifier>
                            <includes>
                                <include>**/extensions/dxdiag/**</include>
                            </includes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>faq</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <classifier>faq</classifier>
                            <includes>
                                <include>**/extensions/faq/**</include>
                            </includes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>help</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <classifier>help</classifier>
                            <includes>
                                <include>**/extensions/help/**</include>
                            </includes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>hjt</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <classifier>hjt</classifier>
                            <includes>
                                <include>**/extensions/hjt/**</include>
                            </includes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>htop</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <classifier>htop</classifier>
                            <includes>
                                <include>**/extensions/htop/**</include>
                            </includes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>info</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <classifier>info</classifier>
                            <includes>
