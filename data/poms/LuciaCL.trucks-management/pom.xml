<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.lucia</groupId>
  <artifactId>trucksmanagement</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <name>Trucks Management</name>
  <packaging>war</packaging>
  <description>Trucks Management	</description>
  <properties>
		<springVersion>3.2.9.RELEASE</springVersion>
		<jspVersion>2.1</jspVersion>
		<jstlVersion>1.1.2</jstlVersion>
		<servletVersion>2.5</servletVersion>
		<hibernateVersion>4.1.5.SP1</hibernateVersion>
		<c3p0Version>0.9.1.2</c3p0Version>
		<slf4jVersion>1.6.1</slf4jVersion>
		<tilesVersion>3.0.0</tilesVersion>
		<mysqlVersion>5.1.27</mysqlVersion>
		<jacksonVersion>2.3.0</jacksonVersion>
		<junitVersion>4.11</junitVersion>
		<commonsCodecVersion>1.8</commonsCodecVersion>
		<apacheCXFVersion>2.7.8</apacheCXFVersion>
		<commonsIoVersion>2.4</commonsIoVersion>
		<hornetQVersion>2.3.12.Final</hornetQVersion>
		<cglibVersion>2.1_3</cglibVersion>
		<log4jVersion>2.0-beta9</log4jVersion>
		<bouncyCastleVersion>1.46</bouncyCastleVersion>
		<oAuthVersion>20100527</oAuthVersion>
		<springSecurityVersion>3.2.0.RELEASE</springSecurityVersion>
		<hsqldbVersion>2.3.1</hsqldbVersion>
		<conf>lucia</conf>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
					<debug>true</debug>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.tomcat.maven</groupId>
				<artifactId>tomcat6-maven-plugin</artifactId>
				<version>2.2</version>
			</plugin>
			<plugin>
				<groupId>org.apache.tomcat.maven</groupId>
				<artifactId>tomcat7-maven-plugin</artifactId>
				<version>2.2</version>
				<configuration>
					<port>9091</port>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.16</version>
				<configuration>
					<additionalClasspathElements>
						<additionalClasspathElement>src/main/webapp/WEB-INF/classes</additionalClasspathElement>
					</additionalClasspathElements>
				</configuration>
			</plugin>
			<plugin>
        		<artifactId>maven-war-plugin</artifactId>
        		<version>2.4</version>
        		<configuration>
          			<packagingExcludes>client/**/*.less,client/**/*.coffee,client/**/*.map</packagingExcludes>
        		</configuration>
      		</plugin>
      		<plugin>
				<groupId>org.liquibase</groupId>
				<artifactId>liquibase-maven-plugin</artifactId>
				<version>2.0.1</version>
				<executions>
					<execution>
						<phase>package</phase>
						<configuration>
							<propertyFile>target/classes/database-update/liquibase.properties</propertyFile>
							<changeLogFile>target/classes/database-update/database-changelog.xml</changeLogFile>
							<promptOnNonLocalDatabase>false</promptOnNonLocalDatabase>
						</configuration>
						<goals>
							<goal>update</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<filters>
			<filter>conf/${conf}.properties</filter>
		</filters>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
	</build>
	<dependencies>
		<!-- Compile dependencies -->
		<dependency>
			<groupId>javax.servlet</groupId>
