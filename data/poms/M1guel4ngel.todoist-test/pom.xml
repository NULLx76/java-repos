                    <!--</systemPropertyVariables>-->
                    <!--<includes>-->
                        <!--<include>**/JUnitSuite.class</include>-->
                    <!--</includes>-->
                <!--</configuration>-->
            <!--</plugin>-->

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.18.1</version>
                <configuration>
                    <systemPropertyVariables>
                        <primaryUserName>${primaryUserName}</primaryUserName>
                        <primaryUserPassword>${primaryUserPassword}</primaryUserPassword>
                        <browser>${browser}</browser>
                        <mode>${mode}</mode>
                    </systemPropertyVariables>
                    <suiteXmlFiles>
                        <suiteXmlFile>${suites}</suiteXmlFile>
                    </suiteXmlFiles>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
