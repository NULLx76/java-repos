	<name>auth</name>

	<properties>
		<springframework.version>4.3.3.RELEASE</springframework.version>
		<springsecurity.version>4.2.0.RELEASE</springsecurity.version>
		<spring.data.version>Hopper-SR4</spring.data.version>
