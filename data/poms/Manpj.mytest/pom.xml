		<filters>
			<!--会对jdbc.properties中的key->value传入下面配置<filtering>true</filtering>中的${var_name}值 -->
			<filter>src/main/resources/${env}/jdbc.properties</filter>
		</filters>

		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<!-- 资源根目录排除各环境的配置，使用单独的资源目录来指定 -->
				<excludes>
					<exclude>dev/*</exclude>
					<exclude>pro/*</exclude>
				</excludes>
				<filtering>true</filtering>
			</resource>
			<resource>
