    <jackson.version>2.7.4</jackson.version>
    <log4j.version>1.2.17</log4j.version>
    <slf4j.version>1.7.21</slf4j.version>
    <druid.version>1.0.20</druid.version>
    <fastjson.version>1.2.12</fastjson.version>
