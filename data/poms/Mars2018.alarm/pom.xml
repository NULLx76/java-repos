    <commons-dbcp>1.4</commons-dbcp>-->
    <jdk.version>1.7</jdk.version>
    <encoding>UTF-8</encoding>
  </properties>

  <!--配置环境dev,test,staging,production-->
  <profiles>
    <profile>
      <id>dev</id>
      <properties>
        <profiles.active>dev</profiles.active>
      </properties>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
    </profile>
    <profile>
      <id>test</id>
      <properties>
        <profiles.active>test</profiles.active>
      </properties>
    </profile>
    <profile>
      <id>staging</id>
      <properties>
        <profiles.active>staging</profiles.active>
      </properties>
    </profile>
    <profile>
      <id>production</id>
      <properties>
        <profiles.active>production</profiles.active>
      </properties>
    </profile>
  </profiles>

  <repositories>
    <repository>
      <id>Architect</id>
      <url>http://repo.htzq.htsc.com.cn/nexus/content/repositories/Architect</url>
    </repository>
    <repository>
      <id>ats</id>
      <url>http://repo.htzq.htsc.com.cn/nexus/content/repositories/ats</url>
    </repository>
    <repository>
      <id>Central</id>
      <url>http://repo.htzq.htsc.com.cn/nexus/content/repositories/central</url>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>Architect</id>
      <url>http://repo.htzq.htsc.com.cn/nexus/content/repositories/Architect</url>
    </pluginRepository>
    <pluginRepository>
      <id>ats</id>
      <url>http://repo.htzq.htsc.com.cn/nexus/content/repositories/ats</url>
    </pluginRepository>
    <pluginRepository>
      <id>Central</id>
      <url>http://repo.htzq.htsc.com.cn/nexus/content/repositories/central</url>
    </pluginRepository>
  </pluginRepositories>

