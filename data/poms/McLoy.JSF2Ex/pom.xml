	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.keylesson.jsssh</groupId>
	<artifactId>JSF2-Spring-Hibernate-Example</artifactId>
	<packaging>war</packaging>
	<version>1.0</version>
	<name>JSF2-Spring-Hibernate-Example</name>

