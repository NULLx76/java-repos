<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>de.meldanor</groupId>
    <artifactId>NeonGenesis</artifactId>
    <version>0.0.1-SNAPSHOT</version>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.11</version>
        </dependency>

        <dependency>
            <groupId>org.jodd</groupId>
            <artifactId>jodd-json</artifactId>
            <version>3.6.2</version>
        </dependency>

        <dependency>
            <groupId>com.beust</groupId>
            <artifactId>jcommander</artifactId>
            <version>1.30</version>
        </dependency>

        <!--Local dependency of HDF5 library -->
        <dependency>
            <groupId>org.hdfgroup</groupId>
            <artifactId>fits</artifactId>
            <version>2.11.0</version>
        </dependency>

        <dependency>
            <groupId>org.hdfgroup</groupId>
            <artifactId>jarfitsobj</artifactId>
            <version>2.11.0</version>
        </dependency>

        <dependency>
            <groupId>org.hdfgroup</groupId>
            <artifactId>jarh4obj</artifactId>
            <version>2.11.0</version>
        </dependency>

        <dependency>
            <groupId>org.hdfgroup</groupId>
            <artifactId>jarh5obj</artifactId>
            <version>2.11.0</version>
        </dependency>

        <dependency>
            <groupId>org.hdfgroup</groupId>
            <artifactId>jarhdf5</artifactId>
            <version>2.11.0</version>
        </dependency>

        <dependency>
            <groupId>org.hdfgroup</groupId>
            <artifactId>jarhdf</artifactId>
            <version>2.11.0</version>
        </dependency>

        <dependency>
            <groupId>org.hdfgroup</groupId>
            <artifactId>jarhdfobj</artifactId>
            <version>2.11.0</version>
        </dependency>

        <dependency>
            <groupId>org.hdfgroup</groupId>
            <artifactId>jarnc2obj</artifactId>
            <version>2.11.0</version>
        </dependency>

        <dependency>
            <groupId>org.hdfgroup</groupId>
            <artifactId>jhdfview</artifactId>
            <version>2.11.0</version>
        </dependency>

        <dependency>
            <groupId>org.hdfgroup</groupId>
            <artifactId>netcdf</artifactId>
            <version>2.11.0</version>
        </dependency>

        <dependency>
            <groupId>org.hdfgroup</groupId>
            <artifactId>slf4j-api-1.7.5</artifactId>
            <version>2.11.0</version>
        </dependency>

        <dependency>
            <groupId>org.hdfgroup</groupId>
            <artifactId>slf4j-nop-1.7.5</artifactId>
            <version>2.11.0</version>
        </dependency>


        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-core</artifactId>
            <version>2.2</version>
        </dependency>
    </dependencies>

    <repositories>
        <repository>
            <id>my-local-repo</id>
            <url>file://${basedir}/libs</url>
        </repository>
    </repositories>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.3</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.1</version>
                <executions>
                    <execution>
                        <phase>test</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                    <echo>Using env.test.properties</echo>
                                    <copy file="lib/jhdf.dll" tofile="${basedir}/target/jhdf.dll"/>
                                    <echo>Using env.test.properties</echo>
                                    <copy file="lib/jhdf5.dll" tofile="${basedir}/target/jhdf5.dll"/>
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.10.2</version>
                <configuration>
                    <additionalparam>-Xdoclint:none</additionalparam>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>2.3</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <transformers>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>de.meldanor.neongenesis.Core</mainClass>
                                </transformer>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>