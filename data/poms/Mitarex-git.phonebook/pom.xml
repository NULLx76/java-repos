<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.mitarexcomp.phonebook</groupId>
  <artifactId>phonebook</artifactId>
  <packaging>jar</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>phonebook</name>
  <url>http://maven.apache.org</url>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
	<plugins>
		<plugin>
			<artifactId>maven-jar-plugin</artifactId>
			<version>3.0.2</version>
			<configuration>
				<archive>
					<manifest>
						<mainClass>com.mitarexcomp.phonebook.App</mainClass>
					</manifest>
				</archive>
			</configuration>
		</plugin>
		<plugin>
			<artifactId>maven-release-plugin</artifactId>
			<version>2.5.3</version>
		</plugin>
	</plugins>
  </build>
  <scm>
	<connection>scm:git:https://github.com/Mitarexia/phonebook.git</connection>
	<url>scm:git:https://github.com/Mitarexia/phonebook.git</url>
	<developerConnection>scm:git:https://github.com/Mitarexia/phonebook.git</developerConnection>
    <tag>HEAD</tag>
  </scm>
</project>
