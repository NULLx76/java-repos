<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>si.mougli</groupId>
    <artifactId>geekseek-parent</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>GeekSeek</name>
    
    <properties>
	<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	<maven.compiler.source>1.8</maven.compiler.source>
	<maven.compiler.target>1.8</maven.compiler.target>
    </properties>
    <modules>
	<module>domain</module>
    </modules>
    
    <dependencyManagement>
	<dependencies>
	    <dependency>
		<groupId>org.wildfly.bom</groupId>
		<artifactId>jboss-javaee-7.0-with-all</artifactId>
		<version>8.2.0.Final</version>
		<scope>import</scope>
		<type>pom</type>
	    </dependency>
            
	    <dependency>
		<groupId>org.infinispan</groupId>
		<artifactId>infinispan-core</artifactId>
		<version>7.1.1.Final</version>
		<exclusions>
		    <exclusion>
			<artifactId>jboss-transaction-api_1.1_spec</artifactId>
			<groupId>org.jboss.spec.javax.transaction</groupId>
		    </exclusion>
		</exclusions>
	    </dependency>
            
	    <!-- Domain modules -->
	    <dependency>
		<groupId>si.mougli</groupId>
		<artifactId>geekseek-domain-core</artifactId>
		<version>${project.version}</version>
	    </dependency>
	    <dependency>
		<groupId>si.mougli</groupId>
		<artifactId>geekseek-domain-core</artifactId>
		<version>${project.version}</version>
		<type>test-jar</type>
		<scope>test</scope>
	    </dependency>
	    <dependency>
		<groupId>si.mougli</groupId>
		<artifactId>geekseek-domain-persistence</artifactId>
		<version>${project.version}</version>
	    </dependency>
	    <dependency>
		<groupId>si.mougli</groupId>
		<artifactId>geekseek-domain-persistence</artifactId>
		<version>${project.version}</version>
		<type>test-jar</type>
		<scope>test</scope>
	    </dependency>
	    <dependency>
		<groupId>si.mougli</groupId>
		<artifactId>geekseek-domain-conference</artifactId>
		<version>${project.version}</version>
	    </dependency>
	    <dependency>
		<groupId>si.mougli</groupId>
		<artifactId>geekseek-domain-conference</artifactId>
		<version>${project.version}</version>
		<type>test-jar</type>
		<scope>test</scope>
	    </dependency>
	</dependencies>
    </dependencyManagement>
    
    <dependencies>
	<dependency>
	    <groupId>javax.enterprise</groupId>
	    <artifactId>cdi-api</artifactId>
	    <scope>provided</scope>
	</dependency>
	<dependency>
	    <groupId>junit</groupId>
	    <artifactId>junit</artifactId>
	    <scope>test</scope>
	</dependency>
	<dependency>
	    <groupId>org.jboss.arquillian.junit</groupId>
	    <artifactId>arquillian-junit-container</artifactId>
	    <scope>test</scope>
	</dependency>
	<dependency>
	    <groupId>org.jboss.arquillian.protocol</groupId>
	    <artifactId>arquillian-protocol-servlet</artifactId>
	    <scope>test</scope>
	</dependency>
	<dependency>
	    <groupId>org.wildfly</groupId>
	    <artifactId>wildfly-arquillian-container-managed</artifactId>
	    <scope>test</scope>
	</dependency>
    </dependencies>
    
    <build>
	<plugins>
	    <plugin>
		<groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-jar-plugin</artifactId>
		<version>2.6</version>
		<executions>
		    <execution>
			<goals>
			    <goal>test-jar</goal>
			</goals>
		    </execution>
		</executions>
	    </plugin>
	</plugins>
    </build>
</project>