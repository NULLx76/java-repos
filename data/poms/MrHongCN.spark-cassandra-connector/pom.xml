                                </goals>
                                <configuration>
                                    <sources>
                                        <source>${project.basedir}/src/scala-2.11/src/main/scala</source>
                                    </sources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
