		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>spring-releases</id>
			<url>https://repo.spring.io/libs-release</url>
		</pluginRepository>
		<pluginRepository>
			<id>sema-releases</id>
			<url>http://source.mysema.com/maven2/releases</url>
		</pluginRepository>
