<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>ru.lanit.bpm.avatar</groupId>
    <artifactId>avatar-server</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>${project.artifactId}</name>
    <modules>
        <module>avatar-view</module>
        <module>avatar-service</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <!--Child modules-->
            <dependency>
                <groupId>ru.lanit.bpm.avatar</groupId>
                <artifactId>avatar-web-controller</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ru.lanit.bpm.avatar</groupId>
                <artifactId>avatar-service</artifactId>
                <version>${project.version}</version>
            </dependency>
            <!-- spring core-->
            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-context</artifactId>
                <version>${spring.core.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-web</artifactId>
                <version>${spring.core.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-webmvc</artifactId>
                <version>${spring.core.version}</version>
            </dependency>
            <!--spring-integration-->
            <dependency>
                <groupId>org.springframework.integration</groupId>
                <artifactId>spring-integration-core</artifactId>
                <version>${spring.integration.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springframework.integration</groupId>
                <artifactId>spring-integration-xml</artifactId>
                <version>${spring.integration.version}</version>
                <scope>compile</scope>
            </dependency>
            <!--spring-jms-->
            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-jms</artifactId>
                <version>${spring.core.version}</version>
            </dependency>
            <!-- spring-ws-->
            <dependency>
                <groupId>org.springframework.ws</groupId>
                <artifactId>spring-ws-core</artifactId>
                <version>${spring.ws.version}</version>
            </dependency>

            <!--mq-->
            <dependency>
                <groupId>com.ibm</groupId>
                <artifactId>com.ibm.mq</artifactId>
                <version>5.3.07</version>
            </dependency>
            <dependency>
                <groupId>com.ibm</groupId>
                <artifactId>com.ibm.mqjms</artifactId>
                <version>5.3.07</version>
            </dependency>
            <dependency>
                <groupId>com.ibm.disthub2</groupId>
                <artifactId>dhbcore</artifactId>
                <version>6.0.0</version>
            </dependency>
            <!--com.sun.messaging.mq-->
            <dependency>
                <groupId>com.sun.messaging.mq</groupId>
                <artifactId>imq</artifactId>
                <version>4.4</version>
            </dependency>
            <dependency>
                <groupId>com.sun.messaging.mq</groupId>
                <artifactId>imqxm</artifactId>
                <version>4.4</version>
            </dependency>
            <dependency>
                <groupId>com.sun.messaging.mq</groupId>
                <artifactId>jaxm-api</artifactId>
                <version>4.4</version>
            </dependency>
            <!--jms-->
            <dependency>
                <groupId>javax.jms</groupId>
                <artifactId>jms</artifactId>
                <version>1.1</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <properties>
        <spring.core.version>4.1.7.RELEASE</spring.core.version>
        <spring.integration.version>4.1.6.RELEASE</spring.integration.version>
        <spring.ws.version>2.2.2.RELEASE</spring.ws.version>
    </properties>
</project>