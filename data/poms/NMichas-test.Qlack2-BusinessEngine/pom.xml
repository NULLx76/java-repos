<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.eurodyn.qlack2</groupId>
		<artifactId>qlack2</artifactId>
		<version>2.0.0-SNAPSHOT</version>
		<relativePath>../Qlack2</relativePath>
	</parent>

	<groupId>com.eurodyn.qlack2.be</groupId>
	<artifactId>qlack2-be</artifactId>
	<version>2.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<!-- QLACK2 dependencies ONLY -->
	<properties>
		<qlack2.common.version>2.0.0-SNAPSHOT</qlack2.common.version>
		<qlack2.fuse.version>2.0.0-SNAPSHOT</qlack2.fuse.version>
		<qlack2.util.version>2.0.0-SNAPSHOT</qlack2.util.version>
		<qlack2.common.version>1.0.0-SNAPSHOT</qlack2.common.version>
		<qlack2.webdesktop.version>2.0.0-SNAPSHOT</qlack2.webdesktop.version>
		<qlack2.webdesktop.apps.version>2.0.0-SNAPSHOT</qlack2.webdesktop.apps.version>

		<apache.httpcore.version>4.3</apache.httpcore.version>
		<apache.httpclient.version>4.3</apache.httpclient.version>
	</properties>

	<profiles>
		<profile>
			<id>explorer-module</id>
			<activation>
				<file>
					<exists>qlack2-be-explorer/pom.xml</exists>
				</file>
			</activation>
			<modules>
				<module>qlack2-be-explorer</module>
			</modules>
		</profile>
		<profile>
			<id>forms-module</id>
			<activation>
				<file>
					<exists>qlack2-be-forms/pom.xml</exists>
				</file>
			</activation>
			<modules>
				<module>qlack2-be-forms</module>
			</modules>
		</profile>
		<profile>
			<id>rules-module</id>
			<activation>
				<file>
					<exists>qlack2-be-rules/pom.xml</exists>
				</file>
			</activation>
			<modules>
				<module>qlack2-be-rules</module>
			</modules>
		</profile>
		<profile>
			<id>workflow-module</id>
			<activation>
				<file>
					<exists>qlack2-be-workflow/pom.xml</exists>
				</file>
			</activation>
			<modules>
				<module>qlack2-be-workflow</module>
			</modules>
		</profile>
		<profile>
			<id>qbe-client</id>
			<activation>
				<file>
					<exists>qlack2-be-qbe-client/pom.xml</exists>
				</file>
			</activation>
			<modules>
				<module>qlack2-be-qbe-client</module>
			</modules>
		</profile>
		<profile>
			<id>be-karaf-features</id>
			<activation>
				<file>
					<exists>qlack2-be-karaf-features/pom.xml</exists>
				</file>
			</activation>
			<modules>
				<module>qlack2-be-karaf-features</module>
			</modules>
		</profile>
	</profiles>

</project>
