	<!-- QLACK2 dependencies ONLY -->
	<properties>
		<qlack2.util.version>2.0.0-SNAPSHOT</qlack2.util.version>
		<qlack2.common.version>1.0.0-SNAPSHOT</qlack2.common.version>
	</properties>

	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<excludes>
					<exclude>**/*.cfg</exclude>
				</excludes>
				<filtering>true</filtering>
			</resource>
		</resources>
	</build>

	<profiles>
		<profile>
			<id>owasp</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.owasp</groupId>
						<artifactId>dependency-check-maven</artifactId>
						<version>${owasp.maven.plugin}</version>
						<configuration>
									<suppressionFile>owasp-suppression.xml</suppressionFile>
								</configuration>
						<executions>
							<execution>
								<goals>
									<goal>aggregate</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	
		<!-- Profiles to ignore missing modules -->
