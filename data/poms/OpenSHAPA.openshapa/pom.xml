  <!-- Use an optimized build for releases. -->
  <profiles>

    <!-- Platform specific dependencies. -->
    <profile>
      <id>mac</id>
      <activation>
        <os>
          <family>mac</family>
        </os>
      </activation>

      <dependencies>
        <dependency>
          <groupId>org.mongodb</groupId>
          <artifactId>mongodb-osx64</artifactId>
          <version>2.0.2</version>
        </dependency>
        
        <dependency>
          <groupId>ch.randelshofer.quaqua</groupId>
          <artifactId>quaqua-osx64</artifactId>
          <version>7.0.1</version>
        </dependency>
      </dependencies>
    </profile>

    <profile>
        <id>win-package</id>
        <properties>
            <assembly-config>assembly-win.xml</assembly-config>
        </properties>
        
        <dependencies>
            <dependency>
              <groupId>org.mongodb</groupId>
              <artifactId>mongodb-win32</artifactId>
              <version>2.0.2</version>
            </dependency>
        </dependencies>
    </profile>

    <profile>
        <id>jar-package</id>
        <properties>
            <assembly-config>assembly-jar.xml</assembly-config>
        </properties>
    </profile>

    <profile>
      <id>release</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>2.0.2</version>
            <configuration>
