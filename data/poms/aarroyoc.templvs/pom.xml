<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.divel.so.templvs</groupId>
  <artifactId>templvs</artifactId>
  <version>1.0</version>
  <packaging>jar</packaging>


  <name>templvs</name>
  <url>http://github.com/AdrianArroyoCalle/templvs</url>

<licenses>
  <license>
    <name>Apache License, Version 2.0</name>
    <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
    <distribution>repo</distribution>
    <comments>A business-friendly OSS license</comments>
  </license>
</licenses>
<developers>
    <developer>
      <id>adrian.arroyocalle</id>
      <name>Adri√°n Arroyo Calle</name>
      <email>adrian.arroyocalle@gmail.com</email>
      <url>http://adrianarroyocalle.github.io</url>
      <roles>
        <role>architect</role>
        <role>developer</role>
      </roles>
      <timezone>-6</timezone>
    </developer>
  </developers>
  
    <scm>
    <connection>scm:git:http://github.com/AdrianArroyoCalle/templvs</connection>
    <developerConnection>scm:git:https://github.com/AdrianArroyoCalle/templvs.git</developerConnection>
    <tag>HEAD</tag>
    <url>http://github.com/AdrianArroyoCalle/templvs</url>
  </scm>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.8.2</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
	<sourceDirectory>${basedir}/src</sourceDirectory>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>1.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                  <manifestEntries>
                    <Main-Class>com.divel.so.templvs.Templvs</Main-Class>
                    <Build-Number>1</Build-Number>
                  </manifestEntries>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
