            <distribution>manual</distribution>
        </license>
    </licenses>

    <organization>
        <name>Bookmark</name>
        <url>http://www.bookmark.by</url>
    </organization>

    <developers>
        <developer>
            <id>AliakseiYaustratsyeu</id>
            <name>Aliaksei Yaustratsyeu</name>
