	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<github.global.server>github</github.global.server>
		<site.url.root>scm:git:git@github.com:caveman-frak/java-core.git/gh_pages</site.url.root>
		<!-- properties for versions of dependencies -->
		<spring-boot.version>1.4.0.BUILD-SNAPSHOT</spring-boot.version>
		<spring.version>2.1.0.BUILD-SNAPSHOT</spring.version>
		<spring-framework.version>4.3.0.BUILD-SNAPSHOT</spring-framework.version>
		<jersey.version>2.23</jersey.version>
		<slf4j.version>1.7.18</slf4j.version>
		<swagger.version>1.5.8</swagger.version>
