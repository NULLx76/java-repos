		<source-plugin.version>2.0.4</source-plugin.version>
		<javadoc-plugin.version>2.3</javadoc-plugin.version>
		<shade-plugin.version>2.3</shade-plugin.version>
		<deploy-plugin.version>2.8.2</deploy-plugin.version>
		<release-plugin.version>2.5.3</release-plugin.version>
		<jar-plugin.version>2.6</jar-plugin.version>
		<site-plugin.version>3.4</site-plugin.version>
		<github-site-plugin.version>0.11</github-site-plugin.version>
		<pittest-plugin.version>1.1.10</pittest-plugin.version>
		<jacoco-plugin.version>0.7.6.201602180812</jacoco-plugin.version>
		<failsafe-plugin.version>2.18.1</failsafe-plugin.version>
		<build-helper-plugin.version>1.9.1</build-helper-plugin.version>
		<spring-boot-plugin.version>1.4.0.BUILD-SNAPSHOT</spring-boot-plugin.version>
		<springloaded-plugin.version>1.2.4.RELEASE</springloaded-plugin.version>
		<git-commit-id-plugin.version>2.1.11</git-commit-id-plugin.version>
		<jarsigner-plugin.version>1.4</jarsigner-plugin.version>
		<lombok-plugin.version>1.16.6.1</lombok-plugin.version>
		<!-- keystore properties and defaults -->
		<keystore.location>src/keystore</keystore.location>
		<keystore.directory>${project.basedir}/${keystore.location}</keystore.directory>
		<jarsigner.keystore>${keystore.directory}/keystore.jks</jarsigner.keystore>
		<jarsigner.truststore>${keystore.directory}/truststore.jks</jarsigner.truststore>
		<jarsigner.alias>development</jarsigner.alias>
		<jarsigner.storepass>password</jarsigner.storepass>
		<jarsigner.trustpass>password</jarsigner.trustpass>
		<jarsigner.keypass>password</jarsigner.keypass>
		<!-- run time arguments -->
		<agent.loadtimeweaver>${settings.localRepository}/org/springframework/spring-instrument/${spring-framework.version}/spring-instrument-${spring-framework.version}.jar</agent.loadtimeweaver>
		<java.version>1.8</java.version>
		<argLine>-Xmx1024m</argLine>
		<!-- property defaults for running and debugging -->
		<jrebel-agent.cmd-args></jrebel-agent.cmd-args>
		<spring-boot.debug-port>5005</spring-boot.debug-port>
		<spring-boot.jvm-debug-args>-Xdebug
			-Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=${spring-boot.debug-port}</spring-boot.jvm-debug-args>
		<spring-boot.jvm-jrebel-arg>-agentpath:${jrebel-agent.location}
			${jrebel-agent.cmd-args}
			-Drebel.remoting_plugin=true</spring-boot.jvm-jrebel-arg>
		<spring-boot.jvm-args>${spring-boot.jvm-debug-args}</spring-boot.jvm-args>
		<!-- code coverage -->
		<coverage.skip>true</coverage.skip>
		<coverage-pitest.skip>${coverage.skip}</coverage-pitest.skip>
		<coverage-jacoco.skip>${coverage.skip}</coverage-jacoco.skip>
		<jacoco.fail-coverage>true</jacoco.fail-coverage>
		<coverage.threshold>0.01</coverage.threshold>
		<coverage-instruction.threshold>${coverage.threshold}</coverage-instruction.threshold>
		<coverage-class.threshold>${coverage.threshold}</coverage-class.threshold>
		<coverage-method.threshold>${coverage.threshold}</coverage-method.threshold>
		<coverage-branch.threshold>${coverage.threshold}</coverage-branch.threshold>
		<coverage-complexity.threshold>${coverage.threshold}</coverage-complexity.threshold>
		<coverage-line.threshold>${coverage.threshold}</coverage-line.threshold>
	</properties>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>properties-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.jfrog.buildinfo</groupId>
				<artifactId>artifactory-maven-plugin</artifactId>
			</plugin>
			<!--
				<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-site-plugin</artifactId>
				</plugin>
				<plugin>
				<groupId>com.github.github</groupId>
				<artifactId>site-maven-plugin</artifactId>
				</plugin>
			-->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jarsigner-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.projectlombok</groupId>
				<artifactId>lombok-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.jacoco</groupId>
				<artifactId>jacoco-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.pitest</groupId>
				<artifactId>pitest-maven</artifactId>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>${compiler-plugin.version}</version>
					<configuration>
						<source>${java.version}</source>
						<target>${java.version}</target>
						<compilerArguments>
							<Xlint />
						</compilerArguments>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>properties-maven-plugin</artifactId>
					<version>1.0.0</version>
					<executions>
						<execution>
							<phase>initialize</phase>
							<goals>
								<goal>read-project-properties</goal>
							</goals>
							<configuration>
								<quiet>true</quiet>
								<files>
									<file>maven-project.properties</file>
								</files>
							</configuration>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-source-plugin</artifactId>
					<version>${source-plugin.version}</version>
					<executions>
						<execution>
							<id>attach-sources</id>
							<goals>
								<goal>jar</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-javadoc-plugin</artifactId>
					<version>${javadoc-plugin.version}</version>
					<executions>
						<execution>
							<id>attach-javadocs</id>
							<goals>
								<goal>jar</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<artifactId>maven-deploy-plugin</artifactId>
					<version>${deploy-plugin.version}</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-release-plugin</artifactId>
					<version>${release-plugin.version}</version>
					<configuration>
						<autoVersionSubmodules>true</autoVersionSubmodules>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-jar-plugin</artifactId>
					<version>${jar-plugin.version}</version>
					<configuration>
						<archive>
							<index />
							<manifest>
								<addClasspath />
								<addDefaultImplementationEntries />
								<addDefaultSpecificationEntries />
								<addExtensions />
							</manifest>
							<manifestEntries>
							</manifestEntries>
						</archive>
						<excludes>
							<exclude>**/.DS_Store</exclude>
						</excludes>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.jfrog.buildinfo</groupId>
					<artifactId>artifactory-maven-plugin</artifactId>
					<version>2.4.0</version>
					<inherited>false</inherited>
					<executions>
						<execution>
							<id>build-info</id>
							<goals>
								<goal>publish</goal>
							</goals>
							<configuration>
								<artifactory>
									<includeEnvVars>false</includeEnvVars>
								</artifactory>
								<deployProperties>
									<groupId>${project.groupId}</groupId>
									<artifactId>${project.artifactId}</artifactId>
									<version>${project.version}</version>
								</deployProperties>
								<buildInfo>
									<buildUrl>${project.ciManagement.url}</buildUrl>
								</buildInfo>
								<publisher>
									<contextUrl>https://oss.jfrog.org/artifactory</contextUrl>
									<username>caveman-frak</username>
									<!-- <password>{DESede}AP32kvBzesCv4tAiE1VUcYpB64Y1yCwmbh4gooQ65DnGhx2rE5GZMXYVrjpR1EDbN6tA9G2</password> -->
									<password>cdbee0a5a759be85f055fcc0823bc71bbbdeca2f</password>
									<repoKey>oss-release-local</repoKey>
									<snapshotRepoKey>oss-snapshot-local</snapshotRepoKey>
									<publishArtifacts>true</publishArtifacts>
									<publishBuildInfo>true</publishBuildInfo>
								</publisher>
								<licenses>
									<autoDiscover>true</autoDiscover>
								</licenses>
							</configuration>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-site-plugin</artifactId>
					<version>${site-plugin.version}</version>
					<configuration>
						<port>9000</port>
						<tempWebappDirectory>${basedir}/target/site/run</tempWebappDirectory>
					</configuration>
				</plugin>
				<plugin>
					<groupId>com.github.github</groupId>
					<artifactId>site-maven-plugin</artifactId>
					<version>${github-site-plugin.version}</version>
					<configuration>
						<message>Maven artifacts for ${project.finalName}</message>
						<noJekyll>true</noJekyll>
						<includes>
							<include>**/*</include>
						</includes>
						<excludes>
							<exclude>**/.DS_Store</exclude>
						</excludes>
						<repositoryName>java-core</repositoryName>
						<repositoryOwner>caveman-frak</repositoryOwner>
						<server>github</server>
						<merge>true</merge>
						<dryRun>false</dryRun>
					</configuration>
					<executions>
						<execution>
							<id>default-deploy</id>
							<goals>
								<goal>site</goal>
							</goals>
							<phase>site-deploy</phase>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>org.pitest</groupId>
					<artifactId>pitest-maven</artifactId>
					<version>${pittest-plugin.version}</version>
					<configuration>
						<targetClasses>
							<param>uk.co.bluegecko.core*</param>
						</targetClasses>
						<targetTests>
							<param>uk.co.bluegecko.core*Test</param>
						</targetTests>
						<failWhenNoMutations>false</failWhenNoMutations>
						<timestampedReports>true</timestampedReports>
						<withHistory>true</withHistory>
						<skip>${coverage-pitest.skip}</skip>
					</configuration>
					<executions>
						<execution>
							<id>default-mutationCoverage</id>
							<phase>verify</phase>
							<goals>
								<goal>mutationCoverage</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>org.jacoco</groupId>
					<artifactId>jacoco-maven-plugin</artifactId>
					<version>${jacoco-plugin.version}</version>
					<configuration>
						<excludes>
							<exclude>**/*Test.*</exclude>
							<exclude>**/*Mock.*</exclude>
							<exclude>**/Mock*.*</exclude>
							<exclude>**/*Application.*</exclude>
							<exclude>**/test/**</exclude>
						</excludes>
						<skip>${coverage-jacoco.skip}</skip>
					</configuration>
					<executions>
						<execution>
							<id>jacoco-agent</id>
							<goals>
								<goal>prepare-agent</goal>
							</goals>
						</execution>
						<execution>
							<id>jacoco-agent-integration</id>
							<goals>
								<goal>prepare-agent-integration</goal>
							</goals>
							<configuration>
								<propertyName>failsafeArgLine</propertyName>
							</configuration>
						</execution>
						<execution>
							<id>jacoco-site</id>
							<phase>verify</phase>
							<goals>
								<goal>report</goal>
								<goal>report-integration</goal>
							</goals>
						</execution>
						<execution>
							<id>default-check</id>
							<goals>
								<goal>check</goal>
							</goals>
							<configuration>
								<haltOnFailure>${jacoco.fail-coverage}</haltOnFailure>
								<rules>
									<rule>
										<element>CLASS</element>
										<limits>
											<limit>
												<counter>INSTRUCTION</counter>
												<value>COVEREDRATIO</value>
												<minimum>${coverage-instruction.threshold}</minimum>
											</limit>
											<limit>
												<counter>CLASS</counter>
												<value>COVEREDRATIO</value>
												<minimum>${coverage-class.threshold}</minimum>
											</limit>
											<limit>
												<counter>METHOD</counter>
												<value>COVEREDRATIO</value>
												<minimum>${coverage-method.threshold}</minimum>
											</limit>
											<limit>
												<counter>BRANCH</counter>
												<value>COVEREDRATIO</value>
												<minimum>${coverage-branch.threshold}</minimum>
											</limit>
											<limit>
												<counter>COMPLEXITY</counter>
												<value>COVEREDRATIO</value>
												<minimum>${coverage-complexity.threshold}</minimum>
											</limit>
											<limit>
												<counter>LINE</counter>
												<value>COVEREDRATIO</value>
												<minimum>${coverage-line.threshold}</minimum>
											</limit>
										</limits>
									</rule>
								</rules>
							</configuration>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-failsafe-plugin</artifactId>
					<version>${failsafe-plugin.version}</version>
					<executions>
						<execution>
							<id>default-integration-test</id>
							<phase>integration-test</phase>
							<goals>
								<goal>integration-test</goal>
							</goals>
						</execution>
						<execution>
							<id>default-verify</id>
							<phase>verify</phase>
							<goals>
								<goal>verify</goal>
							</goals>
						</execution>
					</executions>
					<configuration>
						<systemPropertyVariables>
							<!-- store ports for use in tests -->
							<test.http.port>${http.port}</test.http.port>
							<test.jmx.port>${jmx.port}</test.jmx.port>
							<!-- activate cucumber profile -->
							<spring.profiles.active>cucumber</spring.profiles.active>
						</systemPropertyVariables>
						<failIfNoTests>true</failIfNoTests>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>build-helper-maven-plugin</artifactId>
					<version>${build-helper-plugin.version}</version>
					<executions>
						<execution>
							<id>default-reserve-network-port</id>
							<goals>
								<goal>reserve-network-port</goal>
							</goals>
							<phase>process-resources</phase>
							<configuration>
								<portNames>
									<portName>http.port</portName>
									<portName>jmx.port</portName>
									<portName>ssh.port</portName>
									<portName>telnet.port</portName>
								</portNames>
							</configuration>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>org.springframework.boot</groupId>
					<artifactId>spring-boot-maven-plugin</artifactId>
					<version>${spring-boot-plugin.version}</version>
					<executions>
						<execution>
							<goals>
								<goal>repackage</goal>
							</goals>
							<configuration>
								<classifier>exec</classifier>
							</configuration>
						</execution>
						<execution>
							<id>pre-integration-test</id>
							<goals>
								<goal>start</goal>
							</goals>
							<configuration>
								<useTestClasspath>true</useTestClasspath>
								<arguments>
									<argument>--server.port=${http.port}</argument>
									<argument>--management.port=${jmx.port}</argument>
									<argument>--shell.ssh.port=${ssh.port}</argument>
									<argument>--shell.telnet.port=${telnet.port}</argument>
								</arguments>
							</configuration>
						</execution>
						<execution>
							<id>post-integration-test</id>
							<goals>
								<goal>stop</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>pl.project13.maven</groupId>
					<artifactId>git-commit-id-plugin</artifactId>
					<version>${git-commit-id-plugin.version}</version>
					<executions>
						<execution>
							<goals>
								<goal>revision</goal>
							</goals>
						</execution>
					</executions>
					<configuration>
						<verbose>false</verbose>
						<dateFormat>dd MMM yyyy HH:mm</dateFormat>
						<generateGitPropertiesFile>true</generateGitPropertiesFile>
						<generateGitPropertiesFilename>${project.build.outputDirectory}/git.properties</generateGitPropertiesFilename>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-jarsigner-plugin</artifactId>
					<version>${jarsigner-plugin.version}</version>
					<executions>
						<execution>
							<id>sign</id>
							<goals>
								<goal>sign</goal>
							</goals>
						</execution>
						<execution>
							<id>verify</id>
							<goals>
								<goal>verify</goal>
							</goals>
						</execution>
					</executions>
					<configuration>
						<keystore>${jarsigner.keystore}</keystore>
						<alias>${jarsigner.alias}</alias>
						<storepass>${jarsigner.storepass}</storepass>
						<keypass>${jarsigner.keypass}</keypass>
						<certs>true</certs>
						<removeExistingSignatures>true</removeExistingSignatures>
						<verbose>false</verbose>
						<excludeClassifiers>
							<exclude>exec</exclude>
						</excludeClassifiers>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-shade-plugin</artifactId>
					<version>${shade-plugin.version}</version>
					<configuration>
						<shadedArtifactAttached>true</shadedArtifactAttached>
						<filters>
							<filter>
								<artifact>*:*</artifact>
								<excludes>
									<exclude>META-INF/*.SF</exclude>
									<exclude>META-INF/*.DSA</exclude>
									<exclude>META-INF/*.RSA</exclude>
								</excludes>
							</filter>
						</filters>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.projectlombok</groupId>
					<artifactId>lombok-maven-plugin</artifactId>
					<version>${lombok-plugin.version}</version>
					<executions>
						<execution>
							<phase>generate-sources</phase>
							<goals>
								<goal>delombok</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
