<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>cn.myroute.sender</groupId>
	<artifactId>sender</artifactId>
	<version>0.0.1-release</version>
	<distributionManagement>
		<repository>
			<id>test</id>
			<name>test</name>
			<url>http://10.105.13.86:8081/artifactory/youku-java-private-test</url>
		</repository>
	</distributionManagement>
	<dependencies>
		<dependency>
			<groupId>com.youku.java.navi</groupId>
			<artifactId>JavaNavi</artifactId>
			<version>2.0.4-release</version>
			<scope>provided</scope>
		</dependency>
		<!-- https://mvnrepository.com/artifact/commons-email/commons-email -->
		<dependency>
			<groupId>commons-email</groupId>
			<artifactId>commons-email</artifactId>
			<version>1.1</version>
		</dependency>

	</dependencies>
	<repositories>
		<repository>
			<id>3rd-release</id>
			<name>3rd-release</name>
			<url>http://10.105.13.86:8081/artifactory/youku-java-3rd-local</url>
		</repository>
		<repository>
			<id>youku-release</id>
			<name>youku-release</name>
			<url>http://10.105.13.86:8081/artifactory/youku-java-private-release</url>
		</repository>
	</repositories>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<appendAssemblyId>false</appendAssemblyId>
					<descriptors>
						<descriptor>src/main/resources/assembly.xml</descriptor>
					</descriptors>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-source-plugin</artifactId>
				<version>2.1</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>