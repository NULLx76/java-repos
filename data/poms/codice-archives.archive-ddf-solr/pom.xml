		<module>catalog-solr-external-provider</module>
		<module>solr-app</module>
        <module>docs</module>
    </modules>
	
		
	<repositories>		
		<repository>
			<id>codice</id>
			<name>Codice Repository</name>
			<url>http://artifacts.codice.org/content/groups/public/</url>
		</repository>
	</repositories>
