    <packaging>pom</packaging>

    <properties>
        <spring.version>4.2.6.RELEASE</spring.version>
    </properties>

    <modules>
        <module>spring-xml-config</module>
        <module>spring-annotations-config</module>
        <module>spring-java-config</module>
