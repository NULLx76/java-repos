<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.glacialrush</groupId>
	<artifactId>glacial-api</artifactId>
	<version>1.8.8.528</version>
	<properties>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		<req.lib>C:\Users\cyberpwn\Documents\development\lib</req.lib>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.3.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<distributionManagement>
		<repository>
			<id>grush-repo</id>
			<name>GlacialAPI</name>
			<url>file:X:\development\workspace\GlacialAPI\repository</url>
		</repository>
	</distributionManagement>
	<profiles>
		<profile>
			<id>server</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-jar-plugin</artifactId>
						<version>2.3.1</version>
						<configuration>
							<finalName>GlacialAPI</finalName>
							<outputDirectory>C:\Users\cyberpwn\Documents\development\workspace\glacialrush\plugins</outputDirectory>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	<repositories>
		<repository>
			<id>spigot-repo</id>
			<url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
		</repository>
		<repository>
			<id>vault-repo</id>
			<url>http://nexus.theyeticave.net/content/repositories/pub_releases</url>
		</repository>
		<repository>
			<id>dmulloy2-repo</id>
			<url>http://repo.dmulloy2.net/content/groups/public/</url>
		</repository>
		<repository>
			<id>grush-repo</id>
			<url>https://github.com/GlacialRush/GlacialAPI/tree/master/repository/com/glacialrush/glacial-api</url>
		</repository>
		<repository>
			<id>phantom</id>
			<url>https://raw.githubusercontent.com/PhantomAPI/Phantom/master/repository/</url>
		</repository>
	</repositories>
	<dependencies>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-io</artifactId>
			<version>1.3.2</version>
		</dependency>
		<dependency>
			<groupId>io.netty</groupId>
			<artifactId>netty</artifactId>
			<version>3.10.5.Final</version>
		</dependency>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-lang3</artifactId>
			<version>3.4</version>
		</dependency>
		<dependency>
			<groupId>org.spigotmc</groupId>
			<artifactId>spigot-api</artifactId>
			<version>1.8.8-R0.1-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>net.milkbowl.vault</groupId>
			<artifactId>VaultAPI</artifactId>
			<scope>system</scope>
			<systemPath>${req.lib}/vault.jar</systemPath>
			<version>1.5</version>
		</dependency>
		<dependency>
			<groupId>com.comphenix.protocol</groupId>
			<artifactId>ProtocolLib</artifactId>
			<scope>system</scope>
			<systemPath>${req.lib}/ProtocolLib.jar</systemPath>
			<version>3.6.4</version>
		</dependency>
		<dependency>
			<groupId>spigot.org</groupId>
			<artifactId>craftbukkit</artifactId>
			<scope>system</scope>
			<systemPath>${req.lib}/craftbukkit-1.8.8.jar</systemPath>
			<version>1.8.8</version>
		</dependency>
		<dependency>
			<groupId>sncp</groupId>
			<artifactId>ncp</artifactId>
			<scope>system</scope>
			<systemPath>${req.lib}/NoCheatPlus.jar</systemPath>
			<version>1.8.8</version>
		</dependency>
		<dependency>
			<groupId>vv</groupId>
			<artifactId>vv</artifactId>
			<scope>system</scope>
			<systemPath>${req.lib}/votifier-1.9.jar</systemPath>
			<version>1.8.8</version>
		</dependency>
		<dependency>
			<groupId>org.cyberpwn</groupId>
			<artifactId>phantom</artifactId>
			<version>K4</version>
		</dependency>
	</dependencies>
</project>