                            <targetPath>mobile</targetPath>
                            <filtering>false</filtering>
                        </resource>
                    </webResources>
                </configuration>
            </plugin>

            <!-- Deploy WAR -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>tomcat-maven-plugin</artifactId>
                <configuration>
                    <url>${bdrs.tomcat.manager.url}</url>
                    <server>${bdrs.tomcat.server.name}</server>
                    <username>${bdrs.tomcat.manager.username}</username>
                    <password>${bdrs.tomcat.manager.password}</password>
                    <!-- Redeploy if already deployed -->
                    <update>true</update>
                </configuration>
            </plugin>

            <!--Hibernate This plugin is used to generate the schema creation SQLfile-->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>hibernate3-maven-plugin</artifactId>
                <version>2.0-alpha-2</version>
                <configuration>
                    <componentProperties>
                        <configurationfile>/target/bdrs-core/WEB-INF/hibernate.cfg.xml</configurationfile>
                        <propertyfile>/target/bdrs-core/WEB-INF/database.properties</propertyfile>
                        <outputfilename>bdrs-core.sql</outputfilename>
                        <export>false</export>
                        <drop>true</drop>
                    </componentProperties>
                </configuration>
                <!-- Dependencies for the spatial dialect -->
                <dependencies>
                    <dependency>
                        <groupId>org.hibernatespatial</groupId>
                        <artifactId>hibernate-spatial</artifactId>
                        <version>1.0-M2</version>
                        <scope>runtime</scope>
                    </dependency>
                    <dependency>
                        <groupId>org.hibernatespatial</groupId>
                        <artifactId>hibernate-spatial-postgis</artifactId>
                        <version>1.0-M2</version>
                        <scope>runtime</scope>
                    </dependency>
                    <!-- JTS -->
                    <dependency>
                        <groupId>com.vividsolutions</groupId>
                        <artifactId>jts</artifactId>
                        <version>1.9</version>
                        <scope>compile</scope>
                    </dependency>
                    <!-- PostGIS JDBC -->
                    <dependency>
                        <groupId>postgresql</groupId>
                        <artifactId>postgresql</artifactId>
                        <version>8.4-702.jdbc4</version>
                        <scope>provided</scope>
                    </dependency>
                    <dependency>
                        <groupId>org.postgis</groupId>
                        <artifactId>postgis-jdbc</artifactId>
                        <version>1.3.1</version>
                        <scope>provided</scope>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>hbm2ddl</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <!-- SQL Execution -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>sql-maven-plugin</artifactId>
                <version>1.2</version>
                <dependencies>
                    <dependency>
                        <groupId>postgresql</groupId>
                        <artifactId>postgresql</artifactId>
                        <version>8.4-702.jdbc4</version>
                    </dependency>
                </dependencies>
                <!-- common configuration shared by all executions -->
                <configuration>
                    <driver>${bdrs.db.driver}</driver>
                    <url>${bdrs.db.url}</url>
                    <username>${bdrs.db.user.name}</username>
                    <password>${bdrs.db.user.password}</password>
                </configuration>
                <executions>
                </executions>
            </plugin>
            <!-- Jetty -->
            <plugin>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>maven-jetty-plugin</artifactId>
                <version>6.1.21</version>
                <configuration>
                    <contextPath>/BDRS</contextPath>
                    <scanIntervalSeconds>3</scanIntervalSeconds>
                    <reload>manual</reload>
                    <webApp>target/bdrs-core.war</webApp>
                    <webAppConfig>
                        <defaultsDescriptor>webdefault.xml</defaultsDescriptor>
                        <baseResource implementation="org.mortbay.resource.ResourceCollection">
                            <resourcesAsCSV>src/main/webapp,src/main</resourcesAsCSV>
                        </baseResource>
                        <extraClasspath>${basedir}/target/classes;${basedir}/target/test-classes</extraClasspath>
                    </webAppConfig>
                    <executions>
                        <execution>
                            <phase>run</phase>
                            <goals>
                                <goal>process-resources</goal>
                            </goals>
                        </execution>
                    </executions>
                    <scanTargetPatterns>
                        <scanTargetPattern>
                            <directory>src/main/webapp/WEB-INF</directory>
                            <excludes>
                                <exclude>**/*.jsp</exclude>
                            </excludes>
                            <includes>
                                <include>**/*.properties</include>
                                <include>**/*.xml</include>
                            </includes>
                        </scanTargetPattern>
                    </scanTargetPatterns>
                    <!-- Uncomment to enable SSL.  You need to generate a public/private key pair for this to work.
                         This can be done using the keytool program, e.g.:
                         keytool -genkey -keystore .jettykeystore -alias jetty -storepass jetty -keypass jetty
                     <connectors>
                         <connector implementation="org.mortbay.jetty.nio.SelectChannelConnector">
                             <port>8080</port>
                         </connector>
                         <connector implementation="org.mortbay.jetty.security.SslSocketConnector">
                             <port>8443</port>
                             <keystore>.jettykeystore</keystore>
                             <password>jetty6</password>
                             <keyPassword>jetty6</keyPassword>
                         </connector>
                     </connectors> -->
                    <requestLog implementation="org.mortbay.jetty.NCSARequestLog">
                        <filename>logs/yyyy_mm_dd.request.log</filename>
                        <retainDays>90</retainDays>
                        <append>true</append>
                        <extended>false</extended>
                        <logTimeZone>GMT</logTimeZone>
                    </requestLog>
                    <systemProperties implementation="org.mortbay.jetty.plugin.util.SystemProperties">
                        <systemProperty implementation="org.mortbay.jetty.plugin.util.SystemProperty">
                            <name>org.mortbay.jetty.Request.maxFormContentSize</name>
                            <value>52428800</value>
                        </systemProperty>
                    </systemProperties>
                </configuration>
            </plugin>
            <!--
                        <plugin>
                            <groupId>org.codehaus.mojo</groupId>
                            <artifactId>selenium-maven-plugin</artifactId>
                            <version>1.1</version>
                            <executions>
