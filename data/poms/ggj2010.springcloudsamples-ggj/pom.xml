<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.ggj</groupId>
    <artifactId>springcloud</artifactId>
    <version>1.0</version>
    <!--spring-cloud-starter-parent版本迭代太快，目前选用master版本Brixton.M4-->
    <!--以后如果要升级 https://github.com/spring-cloud/spring-cloud-release/blob/master/spring-cloud-starter-parent/pom.xml-->
    <parent>
        <groupId>org.springframework.cloud</groupId>
        <artifactId>spring-cloud-starter-parent</artifactId>
        <version>Brixton.SR4</version>
        <!--<version>Brixton.RELEASE</version>-->
        <!-- <version>Angel.SR3</version>-->
    </parent>

    <modules>
        <module>eureka-server</module>
        <module>eureka-client-a</module>
        <module>eureka-client-b</module>
        <module>eureka-clinet-c</module>
        <module>zuul</module>
        <module>base</module>
        <module>config-server</module>
        <module>spring-cloud-dashboard</module>
        <module>turbine</module>
    </modules>

    <packaging>pom</packaging>
    <properties>
        <fastjson.version>1.2.7</fastjson.version>
        <java.version>1.8</java.version>
        <!-- jdbc driver setting -->
        <mysql.driver.version>5.1.30</mysql.driver.version>
        <druid.version>1.0.15</druid.version>
        <mybatis-spring-boot-starter.version>1.0.0</mybatis-spring-boot-starter.version>
        <!--spring cloud 面板-->
        <spring-cloud-dashboard.version>1.1.0.RELEASE</spring-cloud-dashboard.version>
        <!-- util -->
        <lombok.version>1.12.6</lombok.version>
    </properties>
    <dependencyManagement>
        <dependencies>
            <!--spring cloud 面板-->
            <dependency>
                <groupId>com.github.vanroy</groupId>
                <artifactId>spring-cloud-dashboard</artifactId>
                <version>${spring-cloud-dashboard.version}</version>
            </dependency>

            <!--往turbine发送微服务的消息 所有@HystrixCommand的方法都可以被监控到-->
            <dependency>
                <groupId>org.springframework.cloud</groupId>
                <artifactId>spring-cloud-netflix-hystrix-amqp</artifactId>
                <version>1.1.5.RELEASE</version>
               <!-- <version>${spring-cloud-starter-parent.version}</version>-->
            </dependency>

            <dependency>
                <groupId>com.alibaba</groupId>
                <artifactId>fastjson</artifactId>
                <version>${fastjson.version}</version>
            </dependency>

            <dependency>
                <groupId>com.alibaba</groupId>
                <artifactId>druid</artifactId>
                <version>${druid.version}</version>
            </dependency>

            <!-- jdbc driver -->
            <dependency>
                <groupId>mysql</groupId>
                <artifactId>mysql-connector-java</artifactId>
                <version>${mysql.driver.version}</version>
                <scope>runtime</scope>
            </dependency>

            <!--mybatis springboot-->
            <dependency>
                <groupId>org.mybatis.spring.boot</groupId>
                <artifactId>mybatis-spring-boot-starter</artifactId>
                <version>${mybatis-spring-boot-starter.version}</version>
            </dependency>

            <dependency>
                <groupId>org.projectlombok</groupId>
                <artifactId>lombok</artifactId>
                <version>${lombok.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>