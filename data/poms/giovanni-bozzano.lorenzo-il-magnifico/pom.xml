<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>it.polimi.ingsw</groupId>
	<artifactId>LM13-parent</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<sonar.language>java</sonar.language>
		<sonar.host.url>http://localhost:9000/</sonar.host.url>
		<sonar.issue.ignore.multicriteria>c1,c2,c3,c4,c5,c6,c7,c8,c9</sonar.issue.ignore.multicriteria>
		<sonar.issue.ignore.multicriteria.c1.ruleKey>squid:S134</sonar.issue.ignore.multicriteria.c1.ruleKey>
		<sonar.issue.ignore.multicriteria.c1.resourceKey>**/*</sonar.issue.ignore.multicriteria.c1.resourceKey>
		<sonar.issue.ignore.multicriteria.c2.ruleKey>squid:S1067</sonar.issue.ignore.multicriteria.c2.ruleKey>
		<sonar.issue.ignore.multicriteria.c2.resourceKey>**/*</sonar.issue.ignore.multicriteria.c2.resourceKey>
		<sonar.issue.ignore.multicriteria.c3.ruleKey>squid:S1141</sonar.issue.ignore.multicriteria.c3.ruleKey>
		<sonar.issue.ignore.multicriteria.c3.resourceKey>**/*</sonar.issue.ignore.multicriteria.c3.resourceKey>
		<sonar.issue.ignore.multicriteria.c4.ruleKey>squid:S1160</sonar.issue.ignore.multicriteria.c4.ruleKey>
		<sonar.issue.ignore.multicriteria.c4.resourceKey>**/*</sonar.issue.ignore.multicriteria.c4.resourceKey>
		<sonar.issue.ignore.multicriteria.c5.ruleKey>squid:S1188</sonar.issue.ignore.multicriteria.c5.ruleKey>
		<sonar.issue.ignore.multicriteria.c5.resourceKey>**/*</sonar.issue.ignore.multicriteria.c5.resourceKey>
		<sonar.issue.ignore.multicriteria.c6.ruleKey>squid:S1192</sonar.issue.ignore.multicriteria.c6.ruleKey>
		<sonar.issue.ignore.multicriteria.c6.resourceKey>**/*</sonar.issue.ignore.multicriteria.c6.resourceKey>
		<sonar.issue.ignore.multicriteria.c7.ruleKey>squid:S3776</sonar.issue.ignore.multicriteria.c7.ruleKey>
		<sonar.issue.ignore.multicriteria.c7.resourceKey>**/*</sonar.issue.ignore.multicriteria.c7.resourceKey>
		<sonar.issue.ignore.multicriteria.c8.ruleKey>squid:S00104</sonar.issue.ignore.multicriteria.c8.ruleKey>
		<sonar.issue.ignore.multicriteria.c8.resourceKey>**/*</sonar.issue.ignore.multicriteria.c8.resourceKey>
		<sonar.issue.ignore.multicriteria.c9.ruleKey>squid:S00107</sonar.issue.ignore.multicriteria.c9.ruleKey>
		<sonar.issue.ignore.multicriteria.c9.resourceKey>**/*</sonar.issue.ignore.multicriteria.c9.resourceKey>
	</properties>
	<modules>
		<module>modules/client</module>
		<module>modules/common</module>
		<module>modules/server</module>
	</modules>
	<build>
		<defaultGoal>clean package install</defaultGoal>
		<finalName>${project.name}</finalName>
		<sourceDirectory>src/main/java</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.6.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-clean-plugin</artifactId>
				<version>3.0.0</version>
				<configuration>
					<excludeDefaultDirectories>true</excludeDefaultDirectories>
					<filesets>
						<fileset>
							<directory>target</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.6.0</version>
				<configuration>
					<cleanupDaemonThreads>false</cleanupDaemonThreads>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
