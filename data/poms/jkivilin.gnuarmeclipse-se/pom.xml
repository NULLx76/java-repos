<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  
  <groupId>ilg.gnuarmeclipse</groupId>
  <artifactId>ilg.gnuarmeclipse.parent</artifactId>
  <version>1.8.2-SNAPSHOT</version>
  <packaging>pom</packaging>
  
  <properties>
    <tycho.version>0.18.1</tycho.version>
  </properties>
  
  <modules>
    <module>ilg.gnuarmeclipse.managedbuild.cross</module>
    <module>ilg.gnuarmeclipse.managedbuild.cross-feature</module>
    <module>ilg.gnuarmeclipse.templates.core</module>
    <module>ilg.gnuarmeclipse.templates.stm</module>
    <module>ilg.gnuarmeclipse.templates.stm-feature</module>
    <module>ilg.gnuarmeclipse.templates.freescale</module>
    <module>ilg.gnuarmeclipse.templates.freescale.pe</module>
    <module>ilg.gnuarmeclipse.templates.freescale-feature</module>
    <module>ilg.gnuarmeclipse.debug.gdbjtag.jlink</module>
    <module>ilg.gnuarmeclipse.debug.gdbjtag.jlink-feature</module>
    <module>ilg.gnuarmeclipse.debug.gdbjtag.openocd</module>
    <module>ilg.gnuarmeclipse.debug.gdbjtag.openocd-feature</module>
    <module>ilg.gnuarmeclipse.debug.gdbjtag.restart</module>
    <module>../gnuarmeclipse-svn/Eclipse/current/org.eclipse.cdt.cross.arm.gnu</module>
    <module>../gnuarmeclipse-svn/Eclipse/current/org.eclipse.cdt.cross.arm.gnu-feature</module>
    <module>ilg.gnuarmeclipse-repository</module>
  </modules>
  
  <repositories>
    <repository>
      <id>eclipse-kepler</id>
      <layout>p2</layout>
      <url>http://download.eclipse.org/releases/kepler</url>
    </repository>
  </repositories>
  
  <profiles>
    <profile>
    </profile>
  </profiles>
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-maven-plugin</artifactId>
        <version>${tycho.version}</version>
        <extensions>true</extensions>
      </plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<resolver>p2</resolver>
					<pomDependencies>consider</pomDependencies>
					<environments>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>ppc64</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>macosx</os>
							<ws>cocoa</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>macosx</os>
							<ws>cocoa</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>aix</os>
							<ws>gtk</ws>
							<arch>ppc</arch>
						</environment>
						<environment>
							<os>solaris</os>
							<ws>gtk</ws>
							<arch>sparc</arch>
						</environment>
					</environments>
				</configuration>
			</plugin>
    </plugins>
    
    <pluginManagement>
      <plugins>
      </plugins>
    </pluginManagement>
  </build>
  
  <name>GNU ARM Eclipse parent</name>
  <url>http://gnuarmeclipse.livius.net</url>
</project>
