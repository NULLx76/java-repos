  <modelVersion>4.0.0</modelVersion>

  <groupId>com.xhu</groupId>
  <artifactId>mReprository</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>war</packaging>
  <name>${project.artifactId}</name>



