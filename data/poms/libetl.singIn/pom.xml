<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.toile-libre.libe</groupId>
	<artifactId>singin</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>SingIn</name>
	<packaging>apk</packaging>
	<description>App to compose a song with the help of your voice</description>
	<repositories>
		<repository>
			<id>repositoryForVuMeter</id>
			<name>repositoryForVuMeter</name>
			<url>http://dl.bintray.com/glomadrian/maven</url>
		</repository>
		<repository>
			<id>jcenter.bintray.com</id>
			<url>https://jcenter.bintray.com</url>
		</repository>
		<repository>
			<id>jitpack.io</id>
			<url>https://jitpack.io</url>
		</repository>
	</repositories>
	<build>
		<directory>bin</directory>
		<outputDirectory>bin/classes</outputDirectory>
		<sourceDirectory>src</sourceDirectory>
		<testSourceDirectory>test</testSourceDirectory>
		<testOutputDirectory>bin/test-classes</testOutputDirectory>
		<resources>
			<resource>
				<directory>src</directory>
			</resource>
		</resources>
		<testResources>
			<testResource>
				<directory>test</directory>
			</testResource>
		</testResources>
		<plugins>
			<plugin>
				<groupId>com.simpligility.maven.plugins</groupId>
				<artifactId>android-maven-plugin</artifactId>
				<extensions>true</extensions>
				<version>4.3.0</version>
				<configuration>
					<sdk>
						<platform>25</platform>
					</sdk>
					<sign>
						<debug>false</debug>
					</sign>
					<emulator>
						<avd>25</avd>
						<wait>10000</wait>
					</emulator>
					<run>
						<debug>false</debug>
					</run>
					<resourceDirectory>${basedir}/res</resourceDirectory>
					<assetsDirectory>${basedir}/assets</assetsDirectory>
					<androidManifestFile>${basedir}/AndroidManifest.xml</androidManifestFile>
					<genDirectory>${basedir}/gen</genDirectory>
					<genDirectoryAidl>${basedir}/gen</genDirectoryAidl>
					<nativeLibrariesDirectory>${basedir}/libs</nativeLibrariesDirectory>
					<unpackedLibsFolder>${basedir}/bin/unpacked-libs</unpackedLibsFolder>
					<excludeJarResources>
						<excludeJarResource>.*\.jar$</excludeJarResource>
					</excludeJarResources>
					<zipalign>
						<verbose>false</verbose>
						<inputApk>${project.build.directory}/${project.build.finalName}.apk</inputApk>
						<outputApk>${project.build.directory}/${project.build.finalName}-aligned.apk</outputApk>
						<skip>false</skip>
					</zipalign>
					<apkDebug>false</apkDebug>
					<release>true</release>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>

					<annotationProcessors>
						<annotationProcessor>
							butterknife.internal.ButterKnifeProcessor
						</annotationProcessor>
					</annotationProcessors>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.12.4</version>
				<configuration>
					<classpathDependencyExcludes>
						<classpathDependencyExclude>com.github.tony19:logback-android-classic</classpathDependencyExclude>
					</classpathDependencyExcludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eluder.coveralls</groupId>
				<artifactId>coveralls-maven-plugin</artifactId>
				<version>3.1.0</version>
				<configuration>
					<sourceDirectories>
						<sourceDirectory>src</sourceDirectory>
						<sourceDirectory>bin/generated-sources/annotations</sourceDirectory>
					</sourceDirectories>
				</configuration>
			</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-jarsigner-plugin</artifactId>
					<executions>
						<execution>
							<id>signing</id>
							<goals>
								<goal>sign</goal>
								<goal>verify</goal>
							</goals>
							<phase>package</phase>
							<inherited>true</inherited>
							<configuration>
								<archiveDirectory></archiveDirectory>
								<includes>
									<include>bin/*.apk</include>
								</includes>
								<keystore>../libe.keystore</keystore>
								<keypass>${secret.keypass}</keypass>
								<storepass>${secret.storepass}</storepass>
								<alias>libekeystore</alias>
								<verbose>false</verbose>
							</configuration>
						</execution>
					</executions>
				</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings 
					only. It has no influence on the Maven build itself. -->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											com.simpligility.maven.plugins
										</groupId>
										<artifactId>
											android-maven-plugin
										</artifactId>
										<versionRange>
											[4.1.0,)
										</versionRange>
										<goals>
											<goal>emma</goal>
											<goal>
												generate-sources
											</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
