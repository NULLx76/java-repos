	<packaging>war</packaging>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<profiles>
		<profile>
			<id>prd</id>
			<properties>
				<props>application.properties</props>
				<projectName>scheduler</projectName>
			</properties>
			<activation>
				<activeByDefault>true</activeByDefault>
