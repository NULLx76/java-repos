<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>moonfantasy</groupId>
    <artifactId>carbon-tomcat-session</artifactId>
    <version>0.1.0</version>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <version.tomcat>7.0.69</version.tomcat>
        <orbit.version.tomcat>${version.tomcat}.wso2v1</orbit.version.tomcat>
        <version.javax.servlet>3.0.0.v201112011016</version.javax.servlet>
    </properties>
    <dependencies>
        <dependency>
            <groupId>org.wso2.carbon.deployment</groupId>
            <artifactId>org.wso2.carbon.webapp.mgt</artifactId>
            <version>4.7.0</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.tomcat</groupId>
            <artifactId>tomcat</artifactId>
            <version>${orbit.version.tomcat}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.logging</artifactId>
            <version>4.4.6</version>
        </dependency>
        <dependency>
            <groupId>net.spy</groupId>
            <artifactId>spymemcached</artifactId>
            <version>2.12.1</version>
        </dependency>
        <dependency>
            <groupId>redis.clients</groupId>
            <artifactId>jedis</artifactId>
            <version>2.9.0</version>
        </dependency>
        <!-- https://mvnrepository.com/artifact/org.apache.commons/commons-lang3 -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>3.5</version>
        </dependency>
        <!-- https://mvnrepository.com/artifact/junit/junit -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>2.4.3</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <finalName>${project.artifactId}-dep-${project.version}</finalName>
                    <artifactSet>
                        <excludes>
                            <exclude>org.apache.*:*</exclude>
                            <exclude>org.eclipse.equinox:*</exclude>
                            <exclude>commons-codec:*</exclude>
                            <exclude>org.eclipse.osgi:*</exclude>
                            <exclude>stax:*</exclude>
                            <exclude>org.codehaus.jettison:*</exclude>
                            <exclude>io.netty:*</exclude>
                            <exclude>com.google.code.findbugs:*</exclude>
                            <exclude>commons-logging:*</exclude>
                            <exclude>org.wso2.carbon.deployment:*</exclude>
                            <exclude>commons-dbcp.wso2:*</exclude>
                            <exclude>org.wso2.carbon.commons:*</exclude>
                            <exclude>org.wso2.orbit.org.bouncycastle:*</exclude>
                            <exclude>org.bouncycastle:*</exclude>
                            <exclude>org.igniterealtime.smack.wso2:*</exclude>
                            <exclude>xerces.wso2:*</exclude>
                            <exclude>jaxen:*</exclude>
                            <exclude>dom4j:*</exclude>
                            <exclude>jdom:*</exclude>
                            <exclude>xml-apis:*</exclude>
                            <exclude>xerces:*</exclude>
                            <exclude>xom:*</exclude>
                            <exclude>xerces:*</exclude>
                            <exclude>xalan:*</exclude>
                            <exclude>com.ibm.icu:*</exclude>
                            <exclude>org.wso2.orbit.commons-fileupload:*</exclude>
                            <exclude>org.wso2.orbit.commons-httpclient:*</exclude>
                            <exclude>org.wso2.carbon:*</exclude>
                            <exclude>org.wso2.carbon.identity:*</exclude>
                            <exclude>commons-collections.wso2:*</exclude>
                            <exclude>org.wso2.orbit.org.opensaml:*</exclude>
                            <exclude>org.openid4java:*</exclude>
                            <exclude>net.sourceforge.nekohtml:*</exclude>
                            <exclude>com.google.inject:*</exclude>
                            <exclude>aopalliance:*</exclude>
                            <exclude>javax.servlet:*</exclude>
                            <exclude>org.json:*</exclude>
                            <exclude>org.slf4j:*</exclude>
                            <exclude>com.google.code.gson:*</exclude>
                            <exclude>org.eclipse.core:*</exclude>
                            <exclude>org.eclipse.core:*</exclude>
                            <exclude>org.wso2.orbit.com.hazelcast:*</exclude>
                            <exclude>com.hazelcast:*</exclude>
                            <exclude>org.wso2.orbit.commons-collections:*</exclude>
                            <exclude>org.wso2.orbit.org.apache.neethi:*</exclude>
                            <exclude>wsdl4j.wso2:*</exclude>
                            <exclude>commons-io.wso2:*</exclude>
                            <exclude>net.sourceforge.findbugs:*</exclude>
                            <exclude>org.wso2.securevault:*</exclude>
                            <exclude>org.codehaus.woodstox:*</exclude>
                            <exclude>jline:*</exclude>
                            <exclude>commons-cli:*</exclude>
                            <exclude>commons-io:*</exclude>
                            <exclude>org.compass-project.wso2:*</exclude>
                            <exclude>commons-pool.wso2:*</exclude>
                            <exclude>commons-pool:*</exclude>
                            <exclude>org.codehaus.woodstox:*</exclude>
                            <exclude>org.codehaus.woodstox:*</exclude>
                            <exclude>javax.xml.stream:*</exclude>
                            <exclude>javax.servlet.jsp.jstl.wso2:*</exclude>
                            <exclude>commons-lang.wso2:*</exclude>
                            <exclude>org.wso2.carbon.commons:*</exclude>
                            <exclude>commons-fileupload.wso2:*</exclude>
                            <exclude>commons-codec.wso2:*</exclude>
                            <exclude>commons-httpclient.wso2:*</exclude>
                            <exclude>org.wso2.tomcat:*</exclude>
                            <exclude>org.wso2.tomcat.ha:*</exclude>
                            <exclude>wrapper:*</exclude>
                            <exclude>net.jcip:*</exclude>
                            <exclude>junit:*</exclude>
                            <exclude>log4j:*</exclude>
                        </excludes>
                    </artifactSet>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.19.1</version>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.maven.surefire</groupId>
                        <artifactId>surefire-junit47</artifactId>
                        <version>2.19.1</version>
                    </dependency>
                </dependencies>
                <configuration>
                    <argLine>-Dlog4j.configuration=log4j-test.properties</argLine>
                    <systemPropertyVariables>
                        <log4j.configuration>log4j-test.properties</log4j.configuration>
                    </systemPropertyVariables>
                    <properties>
                        <property>
                            <name>listener</name>
                            <value>org.junit.runner.notification.RunListener</value>
                        </property>
                    </properties>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
        </plugins>

    </build>

</project>
