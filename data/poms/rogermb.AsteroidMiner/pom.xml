<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ch.kanti_wohlen.asteroidminer</groupId>
  <artifactId>AsteroidMiner</artifactId>
  <packaging>pom</packaging>
  <version>0.0.1-SNAPSHOT</version>
  <name>AsteroidMiner Parent</name>

  <properties>
    <gdx.version>1.0-SNAPSHOT</gdx.version>
    <android.version>4.1.1.4</android.version>
    <android.maven.version>3.6.0</android.maven.version>
    <gwt.version>2.6.0-rc3</gwt.version>
    <gwt.maven.version>2.6.0-rc3</gwt.maven.version>
  </properties>

  <repositories>
    <repository>
      <id>gdx-nightlies</id>
      <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
    </repository>
  </repositories>

  <build>
    <sourceDirectory>src</sourceDirectory>
    <resources>
      <resource>
        <directory>src</directory>
        <excludes>
          <exclude>**/*.java</exclude>
        </excludes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>desktop</id>
      <modules>
        <module>AsteroidMiner-desktop</module>
      </modules>
    </profile>
    <profile>
      <id>android</id>
      <modules>
        <module>AsteroidMiner-android</module>
      </modules>
    </profile>
    <profile>
      <id>html</id>
      <modules>
        <module>AsteroidMiner-html</module>
      </modules>
      <activation>
          <property>
              <name>heroku</name>
          </property>
      </activation>
    </profile>
    <profile>
      <id>all</id>
      <modules>
        <module>AsteroidMiner-desktop</module>
        <module>AsteroidMiner-html</module>
      </modules>
    </profile>
  </profiles>

  <modules>
    <module>AsteroidMiner</module>
  </modules>
</project>
