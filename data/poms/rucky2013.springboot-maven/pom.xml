        <thumbnailator.version>0.4.8</thumbnailator.version>
        <pinyin4j.version>2.5.1</pinyin4j.version>
        <spring-boot-admin.version>1.3.2</spring-boot-admin.version>
        <sitemesh.version>2.4.2</sitemesh.version>
        <taglibs.standard.version>1.1.2</taglibs.standard.version>
        <jsp-api.version>2.2</jsp-api.version>
    </properties>

    <modules>
        <module>trip-util</module>
        <module>trip-infrastructure</module>
        <module>trip-service-provider</module>
        <module>trip-service-api</module>
        <module>trip-web-admin</module>
        <module>trip-client-mobile</module>
        <module>trip-monitor</module>
