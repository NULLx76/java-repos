<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.jboss.qa.apiman</groupId>
  <artifactId>plugin-test</artifactId>
  <version>0.0.1-SNAPSHOT</version>

  <properties>
    <maven.compiler.source>1.7</maven.compiler.source>
    <maven.compiler.target>1.7</maven.compiler.target>
    <version.resteasy>3.0.11.Final</version.resteasy>
    <version.rest.extension>1.0.0.Alpha3</version.rest.extension>
    <version.wildfly>8.2.0.Final</version.wildfly>
    <version.apiman>1.1.1.Final</version.apiman>
    <jboss.home>${project.build.directory}/wildfly-${version.wildfly}</jboss.home>
    <apiman.host>localhost</apiman.host>
    <apiman.port>8080</apiman.port>
    <apiman.user>admin</apiman.user>
    <apiman.pwd>admin123!</apiman.pwd>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.jboss.arquillian</groupId>
        <artifactId>arquillian-bom</artifactId>
        <version>1.1.7.Final</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>org.jboss.arquillian.extension</groupId>
        <artifactId>arquillian-rest-warp-bom</artifactId>
        <version>1.0.0.Alpha3</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>org.jboss.shrinkwrap.resolver</groupId>
        <artifactId>shrinkwrap-resolver-bom</artifactId>
        <version>2.1.1</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
    </dependency>
    <dependency>
      <groupId>org.jboss.arquillian.junit</groupId>
      <artifactId>arquillian-junit-container</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jboss.shrinkwrap.resolver</groupId>
      <artifactId>shrinkwrap-resolver-depchain</artifactId>
      <type>pom</type>
      <scope>test</scope>
    </dependency>
    <!-- Arquillian container adapter -->
    <dependency>
      <groupId>org.wildfly.arquillian</groupId>
      <artifactId>wildfly-arquillian-container-managed</artifactId>
      <version>1.0.0.Alpha5</version>
      <scope>test</scope>
    </dependency>
    <!-- Using Apiman beans to come from REST endpoints -->
    <dependency>
      <groupId>io.apiman</groupId>
      <artifactId>apiman-manager-api-beans</artifactId>
      <version>${version.apiman}</version>
    </dependency>
    <!-- Arquillian REST extension -->
    <dependency>
      <groupId>org.jboss.arquillian.extension</groupId>
      <artifactId>arquillian-rest-warp-parent</artifactId>
      <type>pom</type>
      <version>${version.rest.extension}</version>
    </dependency>
    <dependency>
      <groupId>org.jboss.arquillian.extension</groupId>
      <artifactId>arquillian-rest-client-impl-3x</artifactId>
      <version>${version.rest.extension}</version>
      <scope>test</scope>
    </dependency>
    <!-- RESTEasy deps -->
    <dependency>
      <groupId>org.jboss.resteasy</groupId>
      <artifactId>resteasy-client</artifactId>
      <version>${version.resteasy}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.jboss.resteasy</groupId>
      <artifactId>resteasy-jackson-provider</artifactId>
      <version>${version.resteasy}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.jboss.resteasy</groupId>
      <artifactId>resteasy-jaxb-provider</artifactId>
      <version>${version.resteasy}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.jboss.spec.javax.ws.rs</groupId>
      <artifactId>jboss-jaxrs-api_1.1_spec</artifactId>
      <version>1.0.1.Final</version>
    </dependency>

    <dependency>
      <groupId>org.wildfly</groupId>
      <artifactId>wildfly-dist</artifactId>
      <version>8.2.0.Final</version>
      <scope>test</scope>
      <type>zip</type>
    </dependency>

    <dependency>
      <groupId>io.apiman</groupId>
      <artifactId>apiman-gateway-platforms-war-wildfly8-modules</artifactId>
      <version>${version.apiman}</version>
      <scope>test</scope>
      <type>zip</type>
    </dependency>
  </dependencies>


  <profiles>
    <profile>
      <id>Windows</id>
      <activation>
        <os>
          <family>windows</family>
        </os>
      </activation>
      <properties>
        <script.extension>bat</script.extension>
      </properties>
    </profile>
    <profile>
      <id>unix</id>
      <activation>
        <os>
          <family>unix</family>
        </os>
      </activation>
      <properties>
        <script.extension>sh</script.extension>
      </properties>
    </profile>
  </profiles>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <!-- unpack wildfly server -->
          <execution>
            <id>unpack-wildfly</id>
            <phase>generate-test-resources</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <includeGroupIds>org.wildfly</includeGroupIds>
              <includeArtifactIds>wildfly-dist</includeArtifactIds>
              <includeTypes>zip</includeTypes>
              <outputDirectory>${project.build.directory}</outputDirectory>
              <overWrite>false</overWrite>
            </configuration>
          </execution>
          <!-- unpack apiman modules -->
          <execution>
            <id>prepare-apiman-gateway</id>
            <phase>generate-test-resources</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <includeGroupIds>io.apiman</includeGroupIds>
              <includeArtifactIds>apiman-gateway-platforms-war-wildfly8-modules</includeArtifactIds>
              <includeTypes>zip</includeTypes>
              <outputDirectory>${jboss.home}</outputDirectory>
              <overWrite>false</overWrite>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <!-- copy apiman configuration -->
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>2.7</version>
        <executions>
          <execution>
            <id>copy-resources</id>
            <phase>generate-test-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${jboss.home}/standalone/configuration</outputDirectory>
              <resources>
                <resource>
                  <directory>src/test/resources</directory>
                  <includes>
                    <include>apiman.properties</include>
                    <include>standalone-apiman.xml</include>
                  </includes>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.4.0</version>
        <executions>
          <execution>
            <id>add-user</id>
            <phase>generate-test-resources</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>${jboss.home}/bin/add-user.${script.extension}</executable>
              <commandlineArgs>-a -s -g 'apiuser,apipublisher,apiadmin' -u '${apiman.user}' -p '${apiman.pwd}'</commandlineArgs>
              <environmentVariables>
                <!-- avoid "Press any key to continue ..." message on Windows -->
                <NOPAUSE>true</NOPAUSE>
              </environmentVariables>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <!-- Run arquillian with proper wildfly location -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.18.1</version>
        <configuration>
          <systemPropertyVariables>
            <jboss.home>${jboss.home}</jboss.home>
            <version.apiman>${version.apiman}</version.apiman>
            <apiman.host>${apiman.host}</apiman.host>
            <apiman.port>${apiman.port}</apiman.port>
            <apiman.user>${apiman.user}</apiman.user>
            <apiman.pwd>${apiman.pwd}</apiman.pwd>
          </systemPropertyVariables>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>