							<artifactId>findbugs-maven-plugin</artifactId> 
							<version>3.0.0</version>
							<configuration>
								 <includeFilterFile>https://sonar.groupcdg.com/profiles/export?format=findbugs&amp;language=java&amp;name=Sonar%2520way%2520with%2520Findbugs</includeFilterFile>
							</configuration>
