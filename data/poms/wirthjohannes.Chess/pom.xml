<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>eu.assault2142.hololol</groupId>
    <artifactId>Chess</artifactId>
    <version>0.7-SNAPSHOT</version>
    <packaging>jar</packaging>
    <dependencies>
        <dependency>
            <groupId>org.swinglabs</groupId>
            <artifactId>swing-layout</artifactId>
            <version>1.0.3</version>
        </dependency>
        <dependency>
            <groupId>de.sciss</groupId>
            <artifactId>weblaf-ui</artifactId>
            <version>1.28</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>com.oracle.kv</groupId>
            <artifactId>kvclient_3.0.5</artifactId>
            <version>3.0.5</version>
        </dependency>
        <dependency>
            <groupId>de.svenkubiak</groupId>
            <artifactId>jBCrypt</artifactId>
            <version>0.4.1</version>
        </dependency>
        <dependency>
            <groupId>org.jmonkeyengine</groupId>
            <artifactId>jme3-desktop</artifactId>
            <version>3.1.0-beta1</version>
        </dependency>
        <dependency>
            <groupId>org.jmonkeyengine</groupId>
            <artifactId>jme3-bullet-native</artifactId>
            <version>3.1.0-beta1</version>
        </dependency>
        <dependency>
            <groupId>org.jmonkeyengine</groupId>
            <artifactId>jme3-lwjgl3</artifactId>
            <version>3.1.0-beta1</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-core</artifactId>
            <version>1.3</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>2.4.3</version>
                <executions>
                    <execution>
                        <id>client</id>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <shadedArtifactAttached>true</shadedArtifactAttached>
                            <shadedClassifierName>client</shadedClassifierName>
                            <artifactSet>
                                <excludes>
                                    <exclude>com.oracle.kv:kvclient_3.0.5</exclude>
                                    <exclude>org.apache.avro:avro-service-archetype</exclude>
                                </excludes>
                            </artifactSet>
                            <filters>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>eu/assault2142/hololol/chess/server/</exclude>
                                        <minimizeJar>true</minimizeJar>
                                    </excludes>
                                </filter>
                            </filters>
                            <transformers>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>eu.assault2142.hololol.chess.client.game.Main</mainClass>
                                </transformer>
                            </transformers>
                        </configuration>
                    </execution>
                    <execution>
                        <id>server</id>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <shadedArtifactAttached>true</shadedArtifactAttached>
                            <shadedClassifierName>server</shadedClassifierName>
                            <artifactSet>
                                <excludes>
                                    <exclude>com.thoughtworks.xstream:xstream</exclude>
                                    <exclude>org.swinglabs:swing-layout</exclude>
                                    <exclude>de.sciss:weblaf-ui</exclude>
                                    <exclude>de.sciss:weblaf-core</exclude>
                                    <exclude>org.slf4j:slf4j-simple</exclude>
                                    <exclude>org.slf4j:slf4j-api</exclude>
                                    <exclude>net.htmlparser.jericho:jericho-html</exclude>
                                    <exclude>com.mortennobel:java-image-scaling</exclude>
                                    <exclude>com.jhlabs:filters</exclude>
                                    <exclude>org.apache.commons:commons-lang3</exclude>
                                    <exclude>org.jmonkeyengine:jme3-core</exclude>
                                    <exclude>org.jmonkeyengine:jme3-bullet-native</exclude>
                                    <exclude>org.jmonkeyengine:jme3-desktop</exclude>
                                    <exclude>org.jmonkeyengine:jme3-lwjgl3</exclude>
                                    <exclude>org.jmonkeyengine:jme3-bullet</exclude>
                                    <exclude>org.jmonkeyengine:jme3-terrain</exclude>
                                    <exclude>org.lwjgl:lwjgl</exclude>
                                    <exclude>org.lwjgl:lwjgl-platform</exclude>
                                </excludes>
                            </artifactSet>
                            <filters>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>fonts/</exclude>
                                        <exclude>chessmen_high/</exclude>
                                        <exclude>translations/</exclude>
                                        <exclude>eu/assault2142/hololol/chess/client/</exclude>
                                        <minimizeJar>true</minimizeJar>
                                    </excludes>
                                </filter>
                            </filters>
                            <transformers>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>eu.assault2142.hololol.chess.server.networking.Main</mainClass>
                                </transformer>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <name>Chess</name>
    <repositories>
        <repository>
            <id>jcenter</id>
            <url>http://repo.spring.io/jcenter</url>
        </repository>
    </repositories>
</project>